@model PazarAtlasi.CMS.Models.ViewModels.AgentMarketplaceIndexViewModel
@using PazarAtlasi.CMS.Domain.Enums

@{
    ViewData["Title"] = "Agent Marketplace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
    <!-- Header Section -->
    <div class="bg-white shadow-sm border-b border-slate-200">
        <div class="max-w-7xl mx-auto px-4 py-8">
            <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
                <div class="mb-6 lg:mb-0">
                    <h1 class="text-4xl font-bold text-slate-900 mb-2">
                        <i class="fas fa-robot text-blue-600 mr-3"></i>
                        Agent Marketplace
                    </h1>
                    <p class="text-lg text-slate-600">Discover and subscribe to powerful AI agents to automate your business processes</p>
                </div>
                
                <!-- Quick Stats -->
                <div class="flex space-x-6">
                    <div class="text-center">
                        <div class="text-2xl font-bold text-blue-600">@Model.TotalCount</div>
                        <div class="text-sm text-slate-500">Available Agents</div>
                    </div>
                    <div class="text-center">
                        <div class="text-2xl font-bold text-green-600">@Model.Agents.Count(a => a.IsFeatured)</div>
                        <div class="text-sm text-slate-500">Featured</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters Section -->
    <div class="max-w-7xl mx-auto px-4 py-6">
        <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 mb-8">
            <form method="get" class="flex flex-wrap items-center gap-4">
                <!-- Search -->
                <div class="flex-1 min-w-[300px]">
                    <div class="relative">
                        <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400"></i>
                        <input type="text" name="Filter.SearchTerm" value="@Model.Filter.SearchTerm" 
                               placeholder="Search agents..." 
                               class="w-full pl-10 pr-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    </div>
                </div>

                <!-- Category Filter -->
                <div class="min-w-[180px]">
                    <select name="Filter.Category" class="w-full py-3 px-4 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">All Categories</option>
                        @foreach (var category in Model.Categories)
                        {
                            <!option value="@category.Value" @(Model.Filter.Category?.ToString() == category.Value.ToString() ? "selected=\"selected\"" : "")>
                                @category.DisplayName
                            </!option>
                        }
                    </select>
                </div>

                <!-- Type Filter -->
                <div class="min-w-[180px]">
                    <select name="Filter.Type" class="w-full py-3 px-4 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">All Types</option>
                        @foreach (var type in Model.Types)
                        {
                            <!option value="@type.Value" @(Model.Filter.Type?.ToString() == type.Value.ToString() ? "selected=\"selected\"" : "")>
                                @type.DisplayName
                            </!option>
                        }
                    </select>
                </div>

                <!-- Filter Button -->
                <button type="submit" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    <i class="fas fa-filter mr-2"></i>Filter
                </button>

                <!-- Clear Filters -->
                @if (!string.IsNullOrEmpty(Model.Filter.SearchTerm) || Model.Filter.Category != null || Model.Filter.Type != null)
                {
                    <a href="@Url.Action("Index")" class="px-4 py-3 text-slate-600 hover:text-slate-800 transition-colors">
                        <i class="fas fa-times mr-1"></i>Clear
                    </a>
                }
            </form>
        </div>

        <!-- Agents Grid -->
        @if (Model.Agents.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var agent in Model.Agents)
                {
                    <div class="bg-white rounded-xl shadow-sm border border-slate-200 hover:shadow-lg transition-all duration-300 overflow-hidden group">
                        <!-- Agent Header -->
                        <div class="p-6 pb-4">
                            <div class="flex items-start justify-between mb-4">
                                <div class="flex items-center">
                                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white text-xl mr-4">
                                        <i class="@agent.IconClass"></i>
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-semibold text-slate-900 group-hover:text-blue-600 transition-colors">
                                            @agent.Name
                                        </h3>
                                        <div class="flex items-center space-x-2 mt-1">
                                            <span class="px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                                                @agent.Category
                                            </span>
                                            @if (agent.IsFeatured)
                                            {
                                                <span class="px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">
                                                    <i class="fas fa-star mr-1"></i>Featured
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <p class="text-slate-600 text-sm mb-4 line-clamp-3">@agent.Description</p>

                            <!-- Key Capabilities -->
                            @if (agent.TopCapabilities.Any())
                            {
                                <div class="mb-4">
                                    <h4 class="text-sm font-medium text-slate-700 mb-2">Key Features:</h4>
                                    <div class="flex flex-wrap gap-1">
                                        @foreach (var capability in agent.TopCapabilities)
                                        {
                                            <span class="px-2 py-1 text-xs bg-slate-100 text-slate-600 rounded-md">
                                                <i class="@capability.IconClass mr-1"></i>@capability.Name
                                            </span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Pricing -->
                        <div class="px-6 py-4 bg-slate-50 border-t border-slate-100">
                            @if (agent.Pricings.Any())
                            {
                                var defaultPricing = agent.Pricings.FirstOrDefault(p => p.IsDefault) ?? agent.Pricings.First();
                                <div class="flex items-center justify-between">
                                    <div>
                                        <div class="text-2xl font-bold text-slate-900">
                                            @defaultPricing.FormattedPrice
                                            <span class="text-sm font-normal text-slate-500">
                                                /@(defaultPricing.Type == PricingType.Monthly ? "month" : 
                                                   defaultPricing.Type == PricingType.PerUse ? "use" : 
                                                   defaultPricing.Type == PricingType.PerAgent ? "agent" : 
                                                   defaultPricing.Type == PricingType.OneTime ? "once" : "")
                                            </span>
                                        </div>
                                        @if (defaultPricing.UsageLimit.HasValue)
                                        {
                                            <div class="text-xs text-slate-500">Up to @defaultPricing.UsageLimit uses</div>
                                        }
                                    </div>
                                    <div class="flex space-x-2">
                                        <a href="@Url.Action("Details", new { id = agent.Id })" 
                                           class="px-4 py-2 text-blue-600 border border-blue-600 rounded-lg hover:bg-blue-50 transition-colors text-sm font-medium">
                                            Details
                                        </a>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-2">
                                    <span class="text-slate-500">Contact for pricing</span>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center py-16">
                <div class="w-24 h-24 mx-auto mb-6 bg-slate-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-robot text-3xl text-slate-400"></i>
                </div>
                <h3 class="text-xl font-semibold text-slate-900 mb-2">No agents found</h3>
                <p class="text-slate-600 mb-6">Try adjusting your search criteria or browse all available agents.</p>
                <a href="@Url.Action("Index")" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    View All Agents
                </a>
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="flex justify-center mt-12">
                    <nav class="flex items-center space-x-2">
                        @if (Model.CurrentPage > 1)
                        {
                            <a href="@Url.Action("Index", new { page = Model.CurrentPage - 1, Filter = Model.Filter })" 
                               class="px-3 py-2 text-sm font-medium text-slate-500 hover:text-slate-700 hover:bg-slate-100 rounded-md transition-colors">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        }

                        @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                        {
                            @if (i == Model.CurrentPage)
                            {
                                <span class="px-3 py-2 text-sm font-medium text-white bg-blue-600 rounded-md">@i</span>
                            }
                            else
                            {
                                <a href="@Url.Action("Index", new { page = i, Filter = Model.Filter })" 
                                   class="px-3 py-2 text-sm font-medium text-slate-500 hover:text-slate-700 hover:bg-slate-100 rounded-md transition-colors">
                                    @i
                                </a>
                            }
                        }

                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <a href="@Url.Action("Index", new { page = Model.CurrentPage + 1, Filter = Model.Filter })" 
                               class="px-3 py-2 text-sm font-medium text-slate-500 hover:text-slate-700 hover:bg-slate-100 rounded-md transition-colors">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        }
                    </nav>
                </div>
            }
        }
    </div>
</div>

<style>
.line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>

