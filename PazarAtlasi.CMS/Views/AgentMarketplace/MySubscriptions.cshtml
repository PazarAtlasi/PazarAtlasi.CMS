@model PazarAtlasi.CMS.Models.ViewModels.MySubscriptionsViewModel
@using PazarAtlasi.CMS.Domain.Enums

@{
    ViewData["Title"] = "My Subscriptions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
    <!-- Header -->
    <div class="bg-white shadow-sm border-b border-slate-200">
        <div class="max-w-7xl mx-auto px-4 py-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-4xl font-bold text-slate-900 mb-2">
                        <i class="fas fa-user-check text-blue-600 mr-3"></i>
                        My Subscriptions
                    </h1>
                    <p class="text-lg text-slate-600">Manage your active agent subscriptions and view usage</p>
                </div>
                <a href="@Url.Action("Index")" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    Browse Agents
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 py-8">
        @if (Model.ActiveSubscriptions.Any() || Model.ExpiredSubscriptions.Any())
        {
            <!-- Subscription Stats -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <div class="flex items-center">
                        <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center mr-4">
                            <i class="fas fa-robot text-blue-600 text-xl"></i>
                        </div>
                        <div>
                            <div class="text-2xl font-bold text-slate-900">@(Model.ActiveSubscriptions.Count + Model.ExpiredSubscriptions.Count)</div>
                            <div class="text-sm text-slate-500">Total Subscriptions</div>
                        </div>
                    </div>
                </div>
                
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <div class="flex items-center">
                        <div class="w-12 h-12 rounded-lg bg-green-100 flex items-center justify-center mr-4">
                            <i class="fas fa-check-circle text-green-600 text-xl"></i>
                        </div>
                        <div>
                            <div class="text-2xl font-bold text-slate-900">@Model.ActiveSubscriptions.Count</div>
                            <div class="text-sm text-slate-500">Active</div>
                        </div>
                    </div>
                </div>
                
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <div class="flex items-center">
                        <div class="w-12 h-12 rounded-lg bg-yellow-100 flex items-center justify-center mr-4">
                            <i class="fas fa-pause-circle text-yellow-600 text-xl"></i>
                        </div>
                        <div>
                            <div class="text-2xl font-bold text-slate-900">@Model.ExpiredSubscriptions.Count</div>
                            <div class="text-sm text-slate-500">Expired</div>
                        </div>
                    </div>
                </div>
                
                <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                    <div class="flex items-center">
                        <div class="w-12 h-12 rounded-lg bg-slate-100 flex items-center justify-center mr-4">
                            <i class="fas fa-chart-line text-slate-600 text-xl"></i>
                        </div>
                        <div>
                            <div class="text-2xl font-bold text-slate-900">@Model.TotalUsageThisMonth</div>
                            <div class="text-sm text-slate-500">Total Usage</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Subscriptions List -->
            <div class="space-y-6">
                @foreach (var subscription in Model.ActiveSubscriptions.Concat(Model.ExpiredSubscriptions).OrderByDescending(s => s.StartDate))
                {
                    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
                        <div class="p-6">
                            <div class="flex items-start justify-between">
                                <!-- Agent Info -->
                                <div class="flex items-start">
                                    <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white text-xl mr-6 flex-shrink-0">
                                        <i class="fas fa-robot"></i>
                                    </div>
                                    <div>
                                        <h3 class="text-xl font-semibold text-slate-900 mb-1">@subscription.AgentName</h3>
                                        <p class="text-slate-600 mb-3">Subscription Details</p>
                                        <div class="flex items-center space-x-4">
                                            <span class="px-3 py-1 text-sm font-medium bg-blue-100 text-blue-800 rounded-full">
                                                Subscription
                                            </span>
                                            <span class="px-3 py-1 text-sm font-medium @(subscription.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800") rounded-full">
                                                @subscription.StatusDisplayName
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Actions -->
                                <div class="flex items-center space-x-3">
                                    <a href="@Url.Action("UsageLogs", new { subscriptionId = subscription.Id })" 
                                       class="px-4 py-2 text-blue-600 border border-blue-600 rounded-lg hover:bg-blue-50 transition-colors text-sm font-medium">
                                        <i class="fas fa-chart-bar mr-1"></i>
                                        Usage
                                    </a>
                                    @if (subscription.Status == SubscriptionStatus.Active)
                                    {
                                        <form method="post" asp-action="CancelSubscription" class="inline">
                                            <input type="hidden" name="subscriptionId" value="@subscription.Id" />
                                            <button type="submit" 
                                                    onclick="return confirm('Are you sure you want to cancel this subscription?')"
                                                    class="px-4 py-2 text-red-600 border border-red-600 rounded-lg hover:bg-red-50 transition-colors text-sm font-medium">
                                                <i class="fas fa-times mr-1"></i>
                                                Cancel
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>

                            <!-- Subscription Details -->
                            <div class="mt-6 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                                <!-- Pricing Info -->
                                <div class="bg-slate-50 rounded-lg p-4">
                                    <h4 class="font-medium text-slate-700 mb-2">Pricing Plan</h4>
                                    <div class="text-2xl font-bold text-slate-900">
                                        $@subscription.Pricing.Price.ToString("0.00")
                                    </div>
                                    <div class="text-sm text-slate-500">
                                        @subscription.Pricing.Type
                                        @if (subscription.AgentCount > 1 && subscription.Pricing.Type == PricingType.PerAgent)
                                        {
                                            <span> Ã— @subscription.AgentCount agents</span>
                                        }
                                    </div>
                                </div>

                                <!-- Usage Info -->
                                <div class="bg-slate-50 rounded-lg p-4">
                                    <h4 class="font-medium text-slate-700 mb-2">Current Usage</h4>
                                    <div class="text-2xl font-bold text-slate-900">@subscription.CurrentUsage</div>
                                    <div class="text-sm text-slate-500">
                                        @if (subscription.Pricing.UsageLimit.HasValue)
                                        {
                                            <span>of @subscription.Pricing.UsageLimit limit</span>
                                            <div class="w-full bg-slate-200 rounded-full h-2 mt-2">
                                                <div class="bg-blue-600 h-2 rounded-full" style="width: @(Math.Min(100, (double)subscription.CurrentUsage / subscription.Pricing.UsageLimit.Value * 100))%"></div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span>unlimited</span>
                                        }
                                    </div>
                                </div>

                                <!-- Dates -->
                                <div class="bg-slate-50 rounded-lg p-4">
                                    <h4 class="font-medium text-slate-700 mb-2">Start Date</h4>
                                    <div class="text-lg font-semibold text-slate-900">@subscription.StartDate.ToString("MMM dd, yyyy")</div>
                                    <div class="text-sm text-slate-500">@subscription.StartDate.ToString("HH:mm")</div>
                                </div>

                                <!-- Next Billing -->
                                <div class="bg-slate-50 rounded-lg p-4">
                                    <h4 class="font-medium text-slate-700 mb-2">Next Billing</h4>
                                    @if (subscription.NextBillingDate.HasValue)
                                    {
                                        <div class="text-lg font-semibold text-slate-900">@subscription.NextBillingDate.Value.ToString("MMM dd, yyyy")</div>
                                        <div class="text-sm text-slate-500">
                                            @{
                                                var daysUntil = (subscription.NextBillingDate.Value - DateTime.UtcNow).Days;
                                            }
                                            @if (daysUntil > 0)
                                            {
                                                <span>in @daysUntil days</span>
                                            }
                                            else if (daysUntil == 0)
                                            {
                                                <span class="text-orange-600 font-medium">Today</span>
                                            }
                                            else
                                            {
                                                <span class="text-red-600 font-medium">Overdue</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-lg font-semibold text-slate-500">N/A</div>
                                        <div class="text-sm text-slate-500">One-time payment</div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center py-16">
                <div class="w-24 h-24 mx-auto mb-6 bg-slate-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-robot text-3xl text-slate-400"></i>
                </div>
                <h3 class="text-xl font-semibold text-slate-900 mb-2">No subscriptions yet</h3>
                <p class="text-slate-600 mb-6">Start by subscribing to your first AI agent to automate your workflows.</p>
                <a href="@Url.Action("Index")" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    <i class="fas fa-store mr-2"></i>
                    Browse Marketplace
                </a>
            </div>
        }
    </div>
</div>

