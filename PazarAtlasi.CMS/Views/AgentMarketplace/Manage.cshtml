@model List<PazarAtlasi.CMS.Domain.Entities.AgentMarketplace.Agent>
@using PazarAtlasi.CMS.Domain.Enums

@{
    ViewData["Title"] = "Manage Agents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
    <!-- Header -->
    <div class="bg-white shadow-sm border-b border-slate-200">
        <div class="max-w-7xl mx-auto px-4 py-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-4xl font-bold text-slate-900 mb-2">
                        <i class="fas fa-cogs text-blue-600 mr-3"></i>
                        Manage Agents
                    </h1>
                    <p class="text-lg text-slate-600">Create, edit, and manage AI agents in the marketplace</p>
                </div>
                <a href="@Url.Action("Create")" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    Create New Agent
                </a>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Agent Stats -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center mr-4">
                        <i class="fas fa-robot text-blue-600 text-xl"></i>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-slate-900">@Model.Count</div>
                        <div class="text-sm text-slate-500">Total Agents</div>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-green-100 flex items-center justify-center mr-4">
                        <i class="fas fa-check-circle text-green-600 text-xl"></i>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-slate-900">@Model.Count(a => a.IsActive)</div>
                        <div class="text-sm text-slate-500">Active</div>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-yellow-100 flex items-center justify-center mr-4">
                        <i class="fas fa-star text-yellow-600 text-xl"></i>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-slate-900">@Model.Count(a => a.IsFeatured)</div>
                        <div class="text-sm text-slate-500">Featured</div>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-purple-100 flex items-center justify-center mr-4">
                        <i class="fas fa-users text-purple-600 text-xl"></i>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-slate-900">@Model.Sum(a => a.Subscriptions.Count)</div>
                        <div class="text-sm text-slate-500">Subscriptions</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Agents Table -->
        @if (Model.Any())
        {
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
                <div class="px-6 py-4 border-b border-slate-200">
                    <h2 class="text-xl font-semibold text-slate-900">All Agents</h2>
                </div>
                
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Agent</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Category</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Type</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Pricing</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Subscriptions</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-slate-200">
                            @foreach (var agent in Model)
                            {
                                <tr class="hover:bg-slate-50">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white mr-4 flex-shrink-0">
                                                <i class="@agent.IconClass"></i>
                                            </div>
                                            <div>
                                                <div class="text-sm font-medium text-slate-900">@agent.Name</div>
                                                <div class="text-sm text-slate-500">v@agent.Version</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                                            @agent.Category
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                            @agent.Type
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        @if (agent.Pricings.Any())
                                        {
                                            var minPrice = agent.Pricings.Min(p => p.Price);
                                            var maxPrice = agent.Pricings.Max(p => p.Price);
                                            <div class="text-sm text-slate-900">
                                                @if (minPrice == maxPrice)
                                                {
                                                    <span class="font-medium">$@minPrice.ToString("0.00")</span>
                                                }
                                                else
                                                {
                                                    <span class="font-medium">$@minPrice.ToString("0.00") - $@maxPrice.ToString("0.00")</span>
                                                }
                                            </div>
                                            <div class="text-xs text-slate-500">@agent.Pricings.Count plan(s)</div>
                                        }
                                        else
                                        {
                                            <span class="text-slate-500 text-sm">No pricing</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-slate-900">@agent.Subscriptions.Count</div>
                                        <div class="text-xs text-slate-500">
                                            @agent.Subscriptions.Count(s => s.Status == SubscriptionStatus.Active) active
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center space-x-2">
                                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                                @(agent.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                                @(agent.IsActive ? "Active" : "Inactive")
                                            </span>
                                            @if (agent.IsFeatured)
                                            {
                                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                                    <i class="fas fa-star mr-1"></i>Featured
                                                </span>
                                            }
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                                        <a href="@Url.Action("Details", new { id = agent.Id })" 
                                           class="text-blue-600 hover:text-blue-900">
                                            <i class="fas fa-eye mr-1"></i>View
                                        </a>
                                        <a href="@Url.Action("Edit", new { id = agent.Id })" 
                                           class="text-green-600 hover:text-green-900">
                                            <i class="fas fa-edit mr-1"></i>Edit
                                        </a>
                                        <form method="post" asp-action="Delete" class="inline">
                                            <input type="hidden" name="id" value="@agent.Id" />
                                            <button type="submit" 
                                                    onclick="return confirm('Are you sure you want to delete this agent?')"
                                                    class="text-red-600 hover:text-red-900">
                                                <i class="fas fa-trash mr-1"></i>Delete
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-12 text-center">
                <div class="w-16 h-16 mx-auto mb-4 bg-slate-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-robot text-2xl text-slate-400"></i>
                </div>
                <h3 class="text-lg font-semibold text-slate-900 mb-2">No agents created yet</h3>
                <p class="text-slate-600 mb-6">Start by creating your first AI agent for the marketplace.</p>
                <a href="@Url.Action("Create")" class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    Create First Agent
                </a>
            </div>
        }
    </div>
</div>

