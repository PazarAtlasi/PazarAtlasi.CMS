@model dynamic

@{
    ViewData["Title"] = "Agent Analytics";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
    <!-- Header -->
    <div class="bg-white shadow-sm border-b border-slate-200">
        <div class="max-w-7xl mx-auto px-4 py-8">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-4xl font-bold text-slate-900 mb-2">
                        <i class="fas fa-chart-bar text-blue-600 mr-3"></i>
                        Agent Analytics
                    </h1>
                    <p class="text-lg text-slate-600">Monitor agent performance and marketplace statistics</p>
                </div>
                
                <!-- Date Range Selector -->
                <div class="flex items-center space-x-4">
                    <select class="px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option>Last 7 days</option>
                        <option>Last 30 days</option>
                        <option>Last 90 days</option>
                        <option>This year</option>
                    </select>
                    <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        <i class="fas fa-download mr-2"></i>Export
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Key Metrics -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center mr-4">
                        <i class="fas fa-robot text-blue-600 text-xl"></i>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-slate-900">@Model.TotalAgents</div>
                        <div class="text-sm text-slate-500">Total Agents</div>
                    </div>
                </div>
                <div class="mt-4 flex items-center text-sm">
                    <span class="text-green-600 font-medium">+12%</span>
                    <span class="text-slate-500 ml-2">vs last month</span>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-green-100 flex items-center justify-center mr-4">
                        <i class="fas fa-user-check text-green-600 text-xl"></i>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-slate-900">@Model.TotalSubscriptions</div>
                        <div class="text-sm text-slate-500">Active Subscriptions</div>
                    </div>
                </div>
                <div class="mt-4 flex items-center text-sm">
                    <span class="text-green-600 font-medium">+8%</span>
                    <span class="text-slate-500 ml-2">vs last month</span>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-purple-100 flex items-center justify-center mr-4">
                        <i class="fas fa-play text-purple-600 text-xl"></i>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-slate-900">@Model.TotalUsage.ToString("N0")</div>
                        <div class="text-sm text-slate-500">Total Executions</div>
                    </div>
                </div>
                <div class="mt-4 flex items-center text-sm">
                    <span class="text-green-600 font-medium">+24%</span>
                    <span class="text-slate-500 ml-2">vs last month</span>
                </div>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-yellow-100 flex items-center justify-center mr-4">
                        <i class="fas fa-dollar-sign text-yellow-600 text-xl"></i>
                    </div>
                    <div>
                        <div class="text-2xl font-bold text-slate-900">$12,450</div>
                        <div class="text-sm text-slate-500">Monthly Revenue</div>
                    </div>
                </div>
                <div class="mt-4 flex items-center text-sm">
                    <span class="text-green-600 font-medium">+18%</span>
                    <span class="text-slate-500 ml-2">vs last month</span>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
            <!-- Popular Agents -->
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <h2 class="text-xl font-semibold text-slate-900 mb-6">Most Popular Agents</h2>
                <div class="space-y-4">
                    @foreach (var popularAgent in Model.PopularAgents)
                    {
                        <div class="flex items-center justify-between p-4 bg-slate-50 rounded-lg">
                            <div class="flex items-center">
                                <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white mr-4">
                                    <i class="@popularAgent.Agent.IconClass"></i>
                                </div>
                                <div>
                                    <div class="font-medium text-slate-900">@popularAgent.Agent.Name</div>
                                    <div class="text-sm text-slate-500">@popularAgent.Agent.Category</div>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="font-semibold text-slate-900">@popularAgent.Count</div>
                                <div class="text-sm text-slate-500">subscriptions</div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Usage Trends Chart Placeholder -->
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <h2 class="text-xl font-semibold text-slate-900 mb-6">Usage Trends</h2>
                <div class="h-64 bg-slate-50 rounded-lg flex items-center justify-center">
                    <div class="text-center">
                        <i class="fas fa-chart-line text-4xl text-slate-400 mb-4"></i>
                        <p class="text-slate-600">Chart will be implemented with Chart.js</p>
                        <p class="text-sm text-slate-500">Showing agent execution trends over time</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detailed Analytics Tables -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Agent Performance -->
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <h2 class="text-xl font-semibold text-slate-900 mb-6">Agent Performance</h2>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 uppercase">Agent</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 uppercase">Success Rate</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-slate-500 uppercase">Avg Duration</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-slate-200">
                            @foreach (var popularAgent in Model.PopularAgents.Take(5))
                            {
                                <tr>
                                    <td class="px-4 py-3">
                                        <div class="flex items-center">
                                            <div class="w-8 h-8 rounded bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center text-white text-sm mr-3">
                                                <i class="@popularAgent.Agent.IconClass"></i>
                                            </div>
                                            <span class="font-medium text-slate-900">@popularAgent.Agent.Name</span>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3">
                                        <div class="flex items-center">
                                            <div class="w-16 bg-slate-200 rounded-full h-2 mr-2">
                                                <div class="bg-green-600 h-2 rounded-full" style="width: 94%"></div>
                                            </div>
                                            <span class="text-sm font-medium text-slate-900">94%</span>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3 text-sm text-slate-900">1.2s</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Revenue Breakdown -->
            <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
                <h2 class="text-xl font-semibold text-slate-900 mb-6">Revenue Breakdown</h2>
                <div class="space-y-4">
                    <div class="flex items-center justify-between p-4 bg-slate-50 rounded-lg">
                        <div>
                            <div class="font-medium text-slate-900">Monthly Subscriptions</div>
                            <div class="text-sm text-slate-500">Recurring revenue</div>
                        </div>
                        <div class="text-right">
                            <div class="font-semibold text-slate-900">$8,200</div>
                            <div class="text-sm text-green-600">+15%</div>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between p-4 bg-slate-50 rounded-lg">
                        <div>
                            <div class="font-medium text-slate-900">Per-Use Billing</div>
                            <div class="text-sm text-slate-500">Usage-based revenue</div>
                        </div>
                        <div class="text-right">
                            <div class="font-semibold text-slate-900">$3,450</div>
                            <div class="text-sm text-green-600">+28%</div>
                        </div>
                    </div>
                    
                    <div class="flex items-center justify-between p-4 bg-slate-50 rounded-lg">
                        <div>
                            <div class="font-medium text-slate-900">Per-Agent Pricing</div>
                            <div class="text-sm text-slate-500">Agent-based billing</div>
                        </div>
                        <div class="text-right">
                            <div class="font-semibold text-slate-900">$800</div>
                            <div class="text-sm text-red-600">-5%</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

