@{
    ViewData["Title"] = "Page Designer";
}

<div class="page-designer">
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <h4
                    class="text-2xl font-bold text-slate-800 relative inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                    Page Designer
                </h4>
                <p class="text-slate-500 mt-3 max-w-xl">Customize the appearance and layout of your website with an easy
                    drag-and-drop interface.</p>
            </div>
        </div>
        <div class="w-full lg:w-1/3 text-left lg:text-right">
            <div class="inline-flex items-center space-x-2">
                <select id="page-selector"
                    class="bg-white border border-slate-200 text-slate-700 py-2 px-4 rounded-lg text-sm focus:outline-none focus:border-purple-300 focus:ring-2 focus:ring-purple-200 shadow-sm">
                    <option>Home Page</option>
                    <option>About Us</option>
                    <option>Products</option>
                    <option>Contact</option>
                </select>
                <button
                    class="py-2 px-4 bg-purple-800 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors inline-flex items-center shadow-sm">
                    <i class="fas fa-save mr-2"></i> Save Changes
                </button>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 mb-8">
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-md mb-6 sticky top-[80px]">
                <div class="p-5 border-b border-slate-100">
                    <h5 class="text-lg font-semibold text-slate-800 m-0">Components</h5>
                    <p class="text-sm text-slate-500 mt-1">Drag items to your layout</p>
                </div>
                <div class="p-4">
                    <div class="component-list space-y-3">
                        <div
                            class="component-item p-3 bg-slate-50 rounded-lg cursor-move hover:bg-slate-100 transition-colors border border-slate-200 border-dashed">
                            <div class="flex items-center">
                                <i class="fas fa-heading text-purple-600 mr-3"></i>
                                <span class="font-medium text-slate-700">Heading</span>
                            </div>
                        </div>
                        <div
                            class="component-item p-3 bg-slate-50 rounded-lg cursor-move hover:bg-slate-100 transition-colors border border-slate-200 border-dashed">
                            <div class="flex items-center">
                                <i class="fas fa-paragraph text-purple-600 mr-3"></i>
                                <span class="font-medium text-slate-700">Text Block</span>
                            </div>
                        </div>
                        <div
                            class="component-item p-3 bg-slate-50 rounded-lg cursor-move hover:bg-slate-100 transition-colors border border-slate-200 border-dashed">
                            <div class="flex items-center">
                                <i class="fas fa-image text-purple-600 mr-3"></i>
                                <span class="font-medium text-slate-700">Image</span>
                            </div>
                        </div>
                        <div
                            class="component-item p-3 bg-slate-50 rounded-lg cursor-move hover:bg-slate-100 transition-colors border border-slate-200 border-dashed">
                            <div class="flex items-center">
                                <i class="fas fa-play-circle text-purple-600 mr-3"></i>
                                <span class="font-medium text-slate-700">Video</span>
                            </div>
                        </div>
                        <div
                            class="component-item p-3 bg-slate-50 rounded-lg cursor-move hover:bg-slate-100 transition-colors border border-slate-200 border-dashed">
                            <div class="flex items-center">
                                <i class="fas fa-link text-purple-600 mr-3"></i>
                                <span class="font-medium text-slate-700">Button</span>
                            </div>
                        </div>
                        <div
                            class="component-item p-3 bg-slate-50 rounded-lg cursor-move hover:bg-slate-100 transition-colors border border-slate-200 border-dashed">
                            <div class="flex items-center">
                                <i class="fas fa-box text-purple-600 mr-3"></i>
                                <span class="font-medium text-slate-700">Product Card</span>
                            </div>
                        </div>
                        <div
                            class="component-item p-3 bg-slate-50 rounded-lg cursor-move hover:bg-slate-100 transition-colors border border-slate-200 border-dashed">
                            <div class="flex items-center">
                                <i class="fas fa-th text-purple-600 mr-3"></i>
                                <span class="font-medium text-slate-700">Gallery</span>
                            </div>
                        </div>
                        <div
                            class="component-item p-3 bg-slate-50 rounded-lg cursor-move hover:bg-slate-100 transition-colors border border-slate-200 border-dashed">
                            <div class="flex items-center">
                                <i class="fas fa-bars text-purple-600 mr-3"></i>
                                <span class="font-medium text-slate-700">Navigation Menu</span>
                            </div>
                        </div>
                        <div
                            class="component-item p-3 bg-slate-50 rounded-lg cursor-move hover:bg-slate-100 transition-colors border border-slate-200 border-dashed">
                            <div class="flex items-center">
                                <i class="fas fa-th-large text-purple-600 mr-3"></i>
                                <span class="font-medium text-slate-700">Hero Section</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-3">
            <div class="bg-white rounded-xl shadow-md mb-6">
                <div class="p-5 border-b border-slate-100 flex justify-between items-center">
                    <h5 class="text-lg font-semibold text-slate-800 m-0 flex items-center">
                        <span class="mr-2">Page Layout</span>
                        <span class="text-xs bg-purple-100 text-purple-800 rounded-full px-2 py-0.5">Preview Mode</span>
                    </h5>
                    <div class="flex items-center space-x-2">
                        <button class="p-2 bg-slate-100 hover:bg-slate-200 rounded-lg text-slate-700 text-sm">
                            <i class="fas fa-desktop"></i>
                        </button>
                        <button class="p-2 bg-slate-100 hover:bg-slate-200 rounded-lg text-slate-500 text-sm">
                            <i class="fas fa-tablet-alt"></i>
                        </button>
                        <button class="p-2 bg-slate-100 hover:bg-slate-200 rounded-lg text-slate-500 text-sm">
                            <i class="fas fa-mobile-alt"></i>
                        </button>
                    </div>
                </div>
                <div
                    class="p-6 bg-slate-50 min-h-[600px] border-2 border-dashed border-slate-200 rounded-lg mx-6 my-6 relative">
                    <!-- Hero Section Editor -->
                    <div class="bg-white p-4 rounded-lg shadow-md mb-6 relative group">
                        <div
                            class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200 flex space-x-1">
                            <button class="bg-slate-200 p-1 rounded hover:bg-slate-300 text-xs">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="bg-slate-200 p-1 rounded hover:bg-slate-300 text-xs">
                                <i class="fas fa-arrows-alt"></i>
                            </button>
                            <button class="bg-red-200 p-1 rounded hover:bg-red-300 text-xs text-red-700">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                        <h6 class="text-xs uppercase tracking-wider text-slate-500 mb-2">Hero Section</h6>
                        <div class="border border-slate-200 rounded-lg p-4">
                            <div class="flex flex-col lg:flex-row gap-4">
                                <div class="flex-1 bg-slate-200 rounded h-[140px] flex items-center justify-center">
                                    <i class="fas fa-image text-slate-400 text-3xl"></i>
                                </div>
                                <div class="flex-1">
                                    <div class="h-6 bg-slate-200 rounded w-3/4 mb-3"></div>
                                    <div class="h-4 bg-slate-200 rounded w-full mb-2"></div>
                                    <div class="h-4 bg-slate-200 rounded w-full mb-2"></div>
                                    <div class="h-4 bg-slate-200 rounded w-4/5 mb-4"></div>
                                    <div class="h-8 bg-purple-200 rounded w-1/3"></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Navigation Editor -->
                    <div class="bg-white p-4 rounded-lg shadow-md mb-6 relative group">
                        <div
                            class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200 flex space-x-1">
                            <button class="bg-slate-200 p-1 rounded hover:bg-slate-300 text-xs">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="bg-slate-200 p-1 rounded hover:bg-slate-300 text-xs">
                                <i class="fas fa-arrows-alt"></i>
                            </button>
                            <button class="bg-red-200 p-1 rounded hover:bg-red-300 text-xs text-red-700">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                        <h6 class="text-xs uppercase tracking-wider text-slate-500 mb-2">Navigation Menu</h6>
                        <div class="border border-slate-200 rounded-lg p-2">
                            <div class="flex flex-wrap gap-2">
                                <div
                                    class="h-8 bg-purple-100 rounded px-4 flex items-center justify-center text-xs text-purple-800 font-medium">
                                    Home</div>
                                <div
                                    class="h-8 bg-slate-100 rounded px-4 flex items-center justify-center text-xs text-slate-800 font-medium">
                                    About</div>
                                <div
                                    class="h-8 bg-slate-100 rounded px-4 flex items-center justify-center text-xs text-slate-800 font-medium">
                                    Products</div>
                                <div
                                    class="h-8 bg-slate-100 rounded px-4 flex items-center justify-center text-xs text-slate-800 font-medium">
                                    Services</div>
                                <div
                                    class="h-8 bg-slate-100 rounded px-4 flex items-center justify-center text-xs text-slate-800 font-medium">
                                    Contact</div>
                                <div
                                    class="h-8 rounded-full w-8 border-2 border-dashed border-slate-300 flex items-center justify-center text-slate-400">
                                    <i class="fas fa-plus text-xs"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Product Cards Editor -->
                    <div class="bg-white p-4 rounded-lg shadow-md relative group">
                        <div
                            class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity duration-200 flex space-x-1">
                            <button class="bg-slate-200 p-1 rounded hover:bg-slate-300 text-xs">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="bg-slate-200 p-1 rounded hover:bg-slate-300 text-xs">
                                <i class="fas fa-arrows-alt"></i>
                            </button>
                            <button class="bg-red-200 p-1 rounded hover:bg-red-300 text-xs text-red-700">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                        <h6 class="text-xs uppercase tracking-wider text-slate-500 mb-2">Product Cards Section</h6>
                        <div class="border border-slate-200 rounded-lg p-4">
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                <div class="border border-slate-200 rounded-lg p-2">
                                    <div class="h-[80px] bg-slate-200 rounded mb-2"></div>
                                    <div class="h-4 bg-slate-200 rounded w-2/3 mb-2"></div>
                                    <div class="h-3 bg-slate-200 rounded w-1/3"></div>
                                </div>
                                <div class="border border-slate-200 rounded-lg p-2">
                                    <div class="h-[80px] bg-slate-200 rounded mb-2"></div>
                                    <div class="h-4 bg-slate-200 rounded w-2/3 mb-2"></div>
                                    <div class="h-3 bg-slate-200 rounded w-1/3"></div>
                                </div>
                                <div
                                    class="border border-dashed border-slate-300 rounded-lg p-2 flex items-center justify-center">
                                    <div class="text-slate-400 text-center">
                                        <i class="fas fa-plus mb-1"></i>
                                        <div class="text-xs">Add Card</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Drop Zone Placeholder -->
                    <div
                        class="mt-6 border-2 border-dashed border-slate-300 rounded-lg p-6 flex items-center justify-center">
                        <div class="text-slate-400 text-center">
                            <i class="fas fa-plus-circle text-2xl mb-2"></i>
                            <div>Drag and drop components here</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Component Properties Panel -->
            <div class="bg-white rounded-xl shadow-md mb-6">
                <div class="p-5 border-b border-slate-100">
                    <h5 class="text-lg font-semibold text-slate-800 m-0">Properties</h5>
                    <p class="text-sm text-slate-500 mt-1">Edit the selected component</p>
                </div>
                <div class="p-5">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Element Title</label>
                            <input type="text"
                                class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                value="Hero Section" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Element Type</label>
                            <select
                                class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                                <option>Hero Section</option>
                                <option>Navigation</option>
                                <option>Product Grid</option>
                                <option>Text Block</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Background Color</label>
                            <div class="flex items-center">
                                <div class="w-8 h-8 bg-white border border-slate-300 rounded mr-2"></div>
                                <input type="text"
                                    class="flex-1 px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                    value="#FFFFFF" />
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Text Color</label>
                            <div class="flex items-center">
                                <div class="w-8 h-8 bg-slate-800 border border-slate-300 rounded mr-2"></div>
                                <input type="text"
                                    class="flex-1 px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                    value="#1E293B" />
                            </div>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-slate-700 mb-1">Heading Text</label>
                            <input type="text"
                                class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                value="Welcome to Pazar Atlasi" />
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-slate-700 mb-1">Description</label>
                            <textarea
                                class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400 min-h-[80px]">Discover our wide range of products and exclusive deals. Shop now for amazing offers!</textarea>
                        </div>
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-slate-700 mb-1">Hero Image</label>
                            <div class="border border-slate-300 border-dashed rounded-lg p-4">
                                <div class="flex items-center justify-center flex-col">
                                    <div
                                        class="bg-slate-100 rounded h-[100px] w-full flex items-center justify-center mb-3">
                                        <i class="fas fa-image text-slate-400 text-2xl"></i>
                                    </div>
                                    <button
                                        class="py-2 px-4 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg text-sm transition-colors inline-flex items-center">
                                        <i class="fas fa-upload mr-2"></i> Upload Image
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Button Text</label>
                            <input type="text"
                                class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                value="Shop Now" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Button URL</label>
                            <input type="text"
                                class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                value="/products" />
                        </div>
                    </div>

                    <div class="border-t border-slate-200 mt-6 pt-6 flex justify-end space-x-2">
                        <button
                            class="py-2 px-4 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg text-sm transition-colors inline-flex items-center">
                            Cancel
                        </button>
                        <button
                            class="py-2 px-4 bg-purple-800 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors inline-flex items-center shadow-sm">
                            <i class="fas fa-check mr-2"></i> Apply Changes
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Toggle active state for component items
        const componentItems = document.querySelectorAll('.component-item');
        componentItems.forEach(item => {
            item.addEventListener('click', function () {
                this.classList.toggle('bg-purple-50');
                this.classList.toggle('border-purple-300');
            });
        });
    });
</script>