@*
  Categorized Menu Editor Partial
*@

<div class="categorized-editor-container">
    <h6 class="text-md font-semibold text-slate-800 mb-4">Kategorize Menü İçeriği</h6>
    
    <!-- Kategoriler Yönetimi -->
    <div class="bg-slate-50 p-4 rounded-lg mb-4">
        <div class="flex justify-between items-center mb-3">
            <h6 class="font-medium text-slate-700">Kategoriler</h6>
            <button id="add-category-button" class="text-xs bg-purple-100 text-purple-800 hover:bg-purple-200 px-2 py-1 rounded">
                <i class="fas fa-plus mr-1"></i> Kategori Ekle
            </button>
        </div>
        
        <div id="categories-container" class="space-y-3 max-h-[300px] overflow-y-auto">
            <!-- Örnek Kategori Öğesi -->
            <div class="bg-white p-3 rounded-lg border border-slate-200 category-item">
                <div class="flex justify-between items-center mb-2">
                    <h6 class="font-medium text-slate-800">Yazılım Geliştirme</h6>
                    <div class="flex items-center">
                        <button class="category-move-up p-1 text-slate-500 hover:bg-slate-100 rounded mr-1">
                            <i class="fas fa-arrow-up"></i>
                        </button>
                        <button class="category-move-down p-1 text-slate-500 hover:bg-slate-100 rounded mr-1">
                            <i class="fas fa-arrow-down"></i>
                        </button>
                        <button class="category-delete p-1 text-red-500 hover:bg-red-50 rounded">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    <div>
                        <label class="block text-xs font-medium text-slate-700 mb-1">Kategori ID</label>
                        <input type="text" class="category-id w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" value="software" />
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-slate-700 mb-1">Kategori Etiketi</label>
                        <input type="text" class="category-label w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" value="Yazılım Geliştirme" />
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-slate-700 mb-1">İkon</label>
                        <select class="category-icon w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                            <option value="code" selected>code</option>
                            <option value="server">server</option>
                            <option value="shield">shield</option>
                            <option value="database">database</option>
                            <option value="cloud">cloud</option>
                            <option value="activity">activity</option>
                            <option value="zap">zap</option>
                            <option value="cpu">cpu</option>
                            <option value="globe">globe</option>
                            <option value="pie-chart">pie-chart</option>
                            <option value="search">search</option>
                            <option value="monitor">monitor</option>
                            <option value="refresh-cw">refresh-cw</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <!-- Diğer kategoriler JavaScript ile eklenecek -->
        </div>
    </div>
    
    <!-- Kategori İçerikleri Yönetimi -->
    <div id="category-content-container" class="bg-slate-50 p-4 rounded-lg">
        <div class="flex justify-between items-center mb-3">
            <div class="flex items-center">
                <h6 class="font-medium text-slate-700">Kategori İçeriği:</h6>
                <select id="category-content-selector" class="ml-2 bg-white border border-slate-200 text-slate-700 py-1 px-3 rounded text-sm focus:outline-none focus:border-purple-300 focus:ring-1 focus:ring-purple-200">
                    <option value="software">Yazılım Geliştirme</option>
                    <option value="devops">DevOps</option>
                    <option value="hosting">Hosting Çözümleri</option>
                    <option value="cloud">Bulut Desteği</option>
                    <option value="security">Güvenlik Çözümleri</option>
                </select>
            </div>
        </div>
        
        <!-- Kategori İçerik Detayları -->
        <div class="mb-4 p-4 bg-white rounded-lg border border-slate-200">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-4">
                <div>
                    <label class="block text-xs font-medium text-slate-700 mb-1">Başlık</label>
                    <input type="text" id="category-content-title" class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" value="Yazılım Geliştirme Hizmetlerimiz" />
                </div>
                <div>
                    <label class="block text-xs font-medium text-slate-700 mb-1">Renk</label>
                    <select id="category-content-color" class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                        <option value="blue" selected>Mavi</option>
                        <option value="indigo">İndigo</option>
                        <option value="purple">Mor</option>
                        <option value="green">Yeşil</option>
                        <option value="red">Kırmızı</option>
                    </select>
                </div>
            </div>
            
            <div class="flex justify-between items-center mb-3">
                <h6 class="font-medium text-slate-700">İçerik Öğeleri</h6>
                <button id="add-category-item" class="text-xs bg-purple-100 text-purple-800 hover:bg-purple-200 px-2 py-1 rounded">
                    <i class="fas fa-plus mr-1"></i> Öğe Ekle
                </button>
            </div>
            
            <div id="category-items" class="space-y-3 max-h-[400px] overflow-y-auto">
                <!-- Örnek Kategori İçerik Öğesi -->
                <div class="bg-slate-50 p-3 rounded-lg border border-slate-200 category-content-item">
                    <div class="flex justify-between items-center mb-2">
                        <h6 class="font-medium text-slate-800">Özel Yazılım Çözümleri</h6>
                        <div class="flex items-center">
                            <button class="content-move-up p-1 text-slate-500 hover:bg-slate-100 rounded mr-1">
                                <i class="fas fa-arrow-up"></i>
                            </button>
                            <button class="content-move-down p-1 text-slate-500 hover:bg-slate-100 rounded mr-1">
                                <i class="fas fa-arrow-down"></i>
                            </button>
                            <button class="content-delete p-1 text-red-500 hover:bg-red-50 rounded">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-1 gap-3">
                        <div>
                            <label class="block text-xs font-medium text-slate-700 mb-1">Başlık</label>
                            <input type="text" class="item-title w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" value="Özel Yazılım Çözümleri" />
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-slate-700 mb-1">Açıklama</label>
                            <textarea class="item-description w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" rows="2">İşletmenizin ihtiyaçlarına özel yazılım çözümleri geliştiriyoruz.</textarea>
                        </div>
                    </div>
                </div>
                
                <!-- Diğer içerik öğeleri JavaScript ile eklenecek -->
            </div>
        </div>
    </div>
</div> 