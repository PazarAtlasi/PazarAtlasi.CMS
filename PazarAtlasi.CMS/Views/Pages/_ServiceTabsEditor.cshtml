@*
  Service Tabs Menu Editor Partial
*@

<div class="servicetabs-editor-container">
    <h6 class="text-md font-semibold text-slate-800 mb-4">Servis Sekmeleri İçeriği</h6>
    
    <!-- Sekmeler Yönetimi -->
    <div class="bg-slate-50 p-4 rounded-lg mb-4">
        <div class="flex justify-between items-center mb-3">
            <h6 class="font-medium text-slate-700">Servis Sekmeleri</h6>
            <button id="add-tab-button" class="text-xs bg-purple-100 text-purple-800 hover:bg-purple-200 px-2 py-1 rounded">
                <i class="fas fa-plus mr-1"></i> Sekme Ekle
            </button>
        </div>
        
        <div id="tabs-container" class="space-y-3 max-h-[300px] overflow-y-auto">
            <!-- Örnek Sekme Öğesi -->
            <div class="bg-white p-3 rounded-lg border border-slate-200 tab-item">
                <div class="flex justify-between items-center mb-2">
                    <h6 class="font-medium text-slate-800">Managed Services</h6>
                    <div class="flex items-center">
                        <button class="tab-move-up p-1 text-slate-500 hover:bg-slate-100 rounded mr-1">
                            <i class="fas fa-arrow-up"></i>
                        </button>
                        <button class="tab-move-down p-1 text-slate-500 hover:bg-slate-100 rounded mr-1">
                            <i class="fas fa-arrow-down"></i>
                        </button>
                        <button class="tab-delete p-1 text-red-500 hover:bg-red-50 rounded">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    <div>
                        <label class="block text-xs font-medium text-slate-700 mb-1">Tab ID</label>
                        <input type="text" class="tab-id w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" value="managed" />
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-slate-700 mb-1">Tab Etiketi</label>
                        <input type="text" class="tab-label w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" value="Managed Services" />
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-slate-700 mb-1">İkon</label>
                        <select class="tab-icon w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                            <option value="server" selected>server</option>
                            <option value="cloud">cloud</option>
                            <option value="shield">shield</option>
                            <option value="database">database</option>
                            <option value="activity">activity</option>
                            <option value="zap">zap</option>
                            <option value="cpu">cpu</option>
                            <option value="globe">globe</option>
                            <option value="pie-chart">pie-chart</option>
                            <option value="search">search</option>
                            <option value="monitor">monitor</option>
                            <option value="refresh-cw">refresh-cw</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-slate-700 mb-1">Premium?</label>
                        <div class="flex items-center mt-2">
                            <input type="checkbox" class="tab-premium w-4 h-4 text-purple-600 border-slate-300 rounded focus:ring-purple-500" />
                            <span class="ml-2 text-sm text-slate-700">Premium sekme</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Diğer sekmeler JavaScript ile eklenecek -->
        </div>
    </div>
    
    <!-- Sekme İçerikleri Yönetimi -->
    <div id="tab-content-container" class="bg-slate-50 p-4 rounded-lg">
        <div class="flex justify-between items-center mb-3">
            <div class="flex items-center">
                <h6 class="font-medium text-slate-700">Sekme İçeriği:</h6>
                <select id="tab-content-selector" class="ml-2 bg-white border border-slate-200 text-slate-700 py-1 px-3 rounded text-sm focus:outline-none focus:border-purple-300 focus:ring-1 focus:ring-purple-200">
                    <option value="managed">Managed Services</option>
                    <option value="cloud">Cloud Solutions</option>
                    <option value="security">Security Services</option>
                    <option value="database">Database Management</option>
                    <option value="monitoring">Monitoring & Optimization</option>
                    <option value="premium">Premium Consulting</option>
                </select>
            </div>
            <button id="add-tabcontent-item" class="text-xs bg-purple-100 text-purple-800 hover:bg-purple-200 px-2 py-1 rounded">
                <i class="fas fa-plus mr-1"></i> İçerik Öğesi Ekle
            </button>
        </div>
        
        <div id="tab-content-items" class="space-y-3 max-h-[400px] overflow-y-auto">
            <!-- Örnek İçerik Öğesi -->
            <div class="bg-white p-3 rounded-lg border border-slate-200 tab-content-item">
                <div class="flex justify-between items-center mb-2">
                    <h6 class="font-medium text-slate-800">Multi-Cloud Management</h6>
                    <div class="flex items-center">
                        <button class="content-move-up p-1 text-slate-500 hover:bg-slate-100 rounded mr-1">
                            <i class="fas fa-arrow-up"></i>
                        </button>
                        <button class="content-move-down p-1 text-slate-500 hover:bg-slate-100 rounded mr-1">
                            <i class="fas fa-arrow-down"></i>
                        </button>
                        <button class="content-delete p-1 text-red-500 hover:bg-red-50 rounded">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    <div>
                        <label class="block text-xs font-medium text-slate-700 mb-1">ID</label>
                        <input type="text" class="content-id w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" value="multi-cloud" />
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-slate-700 mb-1">Başlık</label>
                        <input type="text" class="content-title w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" value="Multi-Cloud Management" />
                    </div>
                    <div>
                        <label class="block text-xs font-medium text-slate-700 mb-1">İkon</label>
                        <select class="content-icon w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                            <option value="cloud" selected>cloud</option>
                            <option value="server">server</option>
                            <option value="shield">shield</option>
                            <option value="database">database</option>
                            <option value="activity">activity</option>
                            <option value="zap">zap</option>
                            <option value="cpu">cpu</option>
                            <option value="globe">globe</option>
                            <option value="pie-chart">pie-chart</option>
                            <option value="search">search</option>
                            <option value="monitor">monitor</option>
                            <option value="refresh-cw">refresh-cw</option>
                        </select>
                    </div>
                    <div class="md:col-span-2">
                        <label class="block text-xs font-medium text-slate-700 mb-1">Açıklama</label>
                        <textarea class="content-description w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" rows="2">Bulut uzmanlarımızla çoklu bulut stratejilerinizi hızlandırın.</textarea>
                    </div>
                </div>
            </div>
            
            <!-- Diğer içerik öğeleri JavaScript ile eklenecek -->
        </div>
    </div>
</div> 