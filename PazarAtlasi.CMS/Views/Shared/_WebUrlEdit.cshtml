@{
    Layout = null;
}

<div id="editWebUrlModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-lg w-full max-w-2xl mx-auto">
        <div class="p-5 border-b border-slate-100 flex justify-between items-center">
            <h5 class="text-lg font-semibold text-slate-800 m-0">Web URL Düzenle</h5>
            <button type="button" class="close-modal text-slate-400 hover:text-slate-600">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form id="editWebUrlForm" class="p-5">
            <input type="hidden" id="edit-id" name="id" />

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">URL Adı *</label>
                    <input type="text" id="edit-name" name="name"
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                        placeholder="URL Adı" required />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">URL *</label>
                    <input type="text" id="edit-url" name="url"
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                        placeholder="/ornek-url" required />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">Controller</label>
                    <input type="text" id="edit-controller" name="controller"
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                        placeholder="Home" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">Action</label>
                    <input type="text" id="edit-action" name="action"
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                        placeholder="Index" />
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Açıklama</label>
                    <textarea id="edit-description" name="description" rows="3"
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                        placeholder="URL hakkında kısa açıklama..."></textarea>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">Şablon</label>
                    <select id="edit-template" name="template"
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                        <option value="">Seçiniz</option>
                        <option value="Default">Varsayılan</option>
                        <option value="Homepage">Ana Sayfa</option>
                        <option value="BlogDetail">Blog Detay</option>
                        <option value="ContactPage">İletişim</option>
                    </select>
                </div>
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1">Durum</label>
                    <div class="flex items-center mt-2">
                        <label class="inline-flex items-center mr-4">
                            <input type="radio" id="edit-status-active" name="status" value="1"
                                class="form-radio text-purple-600">
                            <span class="ml-2 text-sm text-slate-700">Aktif</span>
                        </label>
                        <label class="inline-flex items-center">
                            <input type="radio" id="edit-status-inactive" name="status" value="0"
                                class="form-radio text-purple-600">
                            <span class="ml-2 text-sm text-slate-700">Pasif</span>
                        </label>
                    </div>
                </div>

                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-slate-700 mb-1">Menü İlişkilendirme</label>
                    <select id="edit-menu-id" name="menuId"
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-slate-800 text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                        <option value="">Seçiniz (Menü ile ilişkilendirme için)</option>
                        <!-- JavaScript ile doldurulacak -->
                    </select>
                    <p class="text-xs text-slate-500 mt-1">Bu URL'yi bir menü öğesiyle ilişkilendirmek için seçim yapın.
                        Bu işlem menünün URL'sini günceller.</p>
                </div>
            </div>

            <div class="flex items-center justify-end space-x-3 border-t border-slate-100 pt-4">
                <button type="button"
                    class="close-modal py-2 px-4 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg text-sm transition-colors">
                    İptal
                </button>
                <button type="submit"
                    class="py-2 px-4 bg-purple-800 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors">
                    <i class="fas fa-save mr-2"></i> Güncelle
                </button>
            </div>
        </form>
    </div>
</div>