@{
    Layout = null;
}

<div id="deleteWebUrlModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-lg w-full max-w-md mx-auto">
        <div class="p-5 border-b border-slate-100 flex justify-between items-center">
            <h5 class="text-lg font-semibold text-slate-800 m-0">URL Kaydını Sil</h5>
            <button type="button" class="close-modal text-slate-400 hover:text-slate-600">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="p-5">
            <div class="flex items-center text-amber-600 bg-amber-50 p-4 rounded-lg mb-4">
                <i class="fas fa-exclamation-triangle text-2xl mr-4"></i>
                <div>
                    <h6 class="font-semibold text-amber-800 mb-1">Emin misiniz?</h6>
                    <p class="text-sm text-amber-700">Bu URL kaydını silmek istediğinize emin misiniz? Bu işlem geri
                        alınamaz.</p>
                </div>
            </div>

            <!-- Menü ilişkilendirme uyarısı -->
            <div id="delete-menu-warning" class="hidden"></div>

            <div class="bg-slate-50 p-4 rounded-lg mb-4">
                <h6 class="font-medium text-slate-700 mb-2">Silinecek URL Bilgileri:</h6>
                <div class="grid grid-cols-2 gap-2 text-sm">
                    <div class="text-slate-600">URL Adı:</div>
                    <div id="delete-name" class="font-medium text-slate-800">-</div>
                    <div class="text-slate-600">URL:</div>
                    <div id="delete-url" class="font-medium text-slate-800">-</div>
                </div>
            </div>

            <form id="deleteWebUrlForm">
                <input type="hidden" id="delete-id" name="id" />

                <div class="flex items-center justify-end space-x-3 border-t border-slate-100 pt-4">
                    <button type="button"
                        class="close-modal py-2 px-4 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg text-sm transition-colors">
                        İptal
                    </button>
                    <button type="submit"
                        class="py-2 px-4 bg-red-600 hover:bg-red-700 text-white rounded-lg text-sm transition-colors">
                        <i class="fas fa-trash-alt mr-2"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>