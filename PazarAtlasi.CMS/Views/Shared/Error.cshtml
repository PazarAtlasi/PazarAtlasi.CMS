@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="flex items-center justify-center min-h-[70vh]">
    <div class="bg-white rounded-lg shadow-lg max-w-md w-full">
        <div class="p-8 text-center">
            <div class="text-red-500 text-7xl mb-4">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h2 class="text-4xl font-bold text-red-500 mb-2">Error</h2>
            <p class="text-lg text-slate-600 mb-6">An error occurred while processing your request.</p>

            @if (Model.ShowRequestId)
            {
                <div class="mb-4 p-3 bg-slate-50 rounded-lg">
                    <strong>Request ID:</strong> <code
                        class="text-sm bg-slate-100 px-1 py-0.5 rounded">@Model.RequestId</code>
                </div>
            }

            <div class="mt-6">
                <a href="/"
                    class="inline-flex items-center px-4 py-2 bg-purple-800 hover:bg-purple-700 text-white rounded-lg transition-colors">
                    <i class="fas fa-home mr-2"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>