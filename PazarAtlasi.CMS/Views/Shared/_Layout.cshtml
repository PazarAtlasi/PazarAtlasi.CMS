<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pazar Atlasi CMS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        :root {
            --sidebar-width: 250px;
            --sidebar-collapsed-width: 70px;
            --sidebar-bg: linear-gradient(to bottom, #2c3e50, #1a202c);
            --sidebar-hover-bg: rgba(255, 255, 255, 0.1);
            --submenu-bg: rgba(0, 0, 0, 0.2);
        }

        html,
        body {
            font-family: 'Inter', sans-serif;
        }

        /* Critical styles for sidebar hover */
        #sidebar:hover {
            width: var(--sidebar-width) !important;
        }

        #sidebar:hover .sidebar-header h3,
        #sidebar:hover .sidebar-link span, 
        #sidebar:hover .dropdown-icon {
            opacity: 1 !important;
            visibility: visible !important;
        }

        #sidebar:hover + .main-content {
            margin-left: var(--sidebar-width) !important;
        }

        #sidebar {
            background: var(--sidebar-bg);
            transition: width 0.3s ease;
        }

        #sidebar:not(.collapsed) {
            width: var(--sidebar-width) !important;
        }

        #sidebar.collapsed {
            width: var(--sidebar-collapsed-width) !important;
        }
        
        #sidebar.sidebar-hover,
        #sidebar.collapsed.sidebar-hover {
            width: var(--sidebar-width) !important;
        }

        #sidebar .sidebar-header {
            background: rgba(0, 0, 0, 0.2);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar-link:hover {
            background: var(--sidebar-hover-bg) !important;
        }

        .sidebar-submenu {
            background: var(--submenu-bg) !important;
        }
        
        .flag-icon {
            width: 20px;
            height: 14px;
            display: inline-block;
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
            margin-right: 8px;
        }
        
        .flag-en {
            background-image: url('data:image/svg+xml;base64,');
        }
        
        .flag-tr {
            background-image: url('data:image/svg+xml;base64,');
        }
        
        /* Sidebar collapsed specific styles */
        .sidebar.collapsed .sidebar-header h3,
        .sidebar.collapsed .sidebar-link span,
        .sidebar.collapsed .dropdown-icon {
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s, visibility 0.3s;
        }
        
        .sidebar.sidebar-hover .sidebar-header h3,
        .sidebar.sidebar-hover .sidebar-link span,
        .sidebar.sidebar-hover .dropdown-icon,
        .sidebar:not(.collapsed) .sidebar-header h3,
        .sidebar:not(.collapsed) .sidebar-link span,
        .sidebar:not(.collapsed) .dropdown-icon {
            opacity: 1;
            visibility: visible;
            transition-delay: 0.2s;
        }
        
        /* Main content adjustment for collapsed sidebar */
        .main-content {
            margin-left: var(--sidebar-collapsed-width) !important;
            transition: margin-left 0.5s ease;
        }
        
        #sidebar:not(.collapsed) + .main-content,
        #sidebar.sidebar-hover + .main-content {
            margin-left: var(--sidebar-width) !important;
        }
    </style>
    <!-- Instead of using Tailwind's CDN browser build, we'll add the CDN link as a stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="bg-slate-100 text-slate-800">
    <div class="flex min-h-screen relative">
        <!-- Sidebar -->
        <div class="fixed left-0 top-0 bottom-0 z-10 min-h-screen text-white shadow-md overflow-y-auto transition-all duration-500 collapsed"
            id="sidebar" style="width: 70px; transition: width 0.3s ease;">
            <div class="p-5 text-center border-b border-white/10 sidebar-header">
                <h3 class="text-xl font-bold whitespace-nowrap overflow-hidden text-ellipsis tracking-wide">Pazar Atlasi
                </h3>
            </div>
            <ul class="py-3 list-none m-0">
                <li class="relative mx-3 my-1 rounded-lg overflow-hidden sidebar-item">
                    <a href="/Home/Index"
                        class="flex items-center py-3 px-4 text-white/90 hover:text-white transition-all duration-300 rounded-lg sidebar-link">
                        <i class="fas fa-tachometer-alt w-5 mr-3 text-center text-lg"></i>
                        <span
                            class="flex-grow whitespace-nowrap overflow-hidden text-ellipsis font-medium tracking-wide">@Localizer["Dashboard"]</span>
                    </a>
                </li>
                <li class="relative mx-3 my-1 rounded-lg overflow-hidden sidebar-item">
                    <a href="@Url.Action("Index", "Announcements")"
                        class="flex items-center py-3 px-4 text-white/90 hover:text-white transition-all duration-300 rounded-lg sidebar-link">
                        <i class="fas fa-bullhorn w-5 mr-3 text-center text-lg"></i>
                        <span
                            class="flex-grow whitespace-nowrap overflow-hidden text-ellipsis font-medium tracking-wide">@Localizer["Announcements"]</span>
                    </a>
                </li>
                <li class="relative mx-3 my-1 rounded-lg overflow-hidden sidebar-item">
                    <a href="@Url.Action("Index", "Campaigns")"
                        class="flex items-center py-3 px-4 text-white/90 hover:text-white transition-all duration-300 rounded-lg sidebar-link">
                        <i class="fas fa-ad w-5 mr-3 text-center text-lg"></i>
                        <span
                            class="flex-grow whitespace-nowrap overflow-hidden text-ellipsis font-medium tracking-wide">Kampanyalar</span>
                    </a>
                </li>
                <li class="relative mx-3 my-1 rounded-lg overflow-hidden sidebar-item has-submenu">
                    <a href="#"
                        class="flex items-center py-3 px-4 text-white/90 hover:text-white transition-all duration-300 rounded-lg sidebar-link">
                        <i class="fas fa-file-alt w-5 mr-3 text-center text-lg"></i>
                        <span
                            class="flex-grow whitespace-nowrap overflow-hidden text-ellipsis font-medium tracking-wide">@Localizer["Content"]</span>
                        <i class="fas fa-chevron-right text-sm opacity-70 transition-transform dropdown-icon"></i>
                    </a>
                    <ul
                        class="max-h-0 overflow-hidden list-none p-0 m-0 transition-all duration-300 rounded-b-lg sidebar-submenu">
                        <li><a href="/Content/Pages"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-list w-[18px] mr-2.5 text-center text-sm"></i> @Localizer["Pages"]</a></li>
                        <li><a href="/Content/Sections"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-layer-group w-[18px] mr-2.5 text-center text-sm"></i> Sections</a></li>
                        <li><a href="/Content/Layouts"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-th-large w-[18px] mr-2.5 text-center text-sm"></i> Layouts</a></li>
                        <li><a href="/Content/WebUrl"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-link w-[18px] mr-2.5 text-center text-sm"></i> @Localizer["WebUrl Management"]</a></li>
                        <li><a href="#"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-newspaper w-[18px] mr-2.5 text-center text-sm"></i> @Localizer["News"]</a></li>
                        <li><a href="@Url.Action("Index", "Blog")"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-blog w-[18px] mr-2.5 text-center text-sm"></i> @Localizer["Blog"]</a></li>
                    </ul>
                </li>
                <li class="relative mx-3 my-1 rounded-lg overflow-hidden sidebar-item has-submenu">
                    <a href="#"
                        class="flex items-center py-3 px-4 text-white/90 hover:text-white transition-all duration-300 rounded-lg sidebar-link">
                        <i class="fas fa-shopping-cart w-5 mr-3 text-center text-lg"></i>
                        <span
                            class="flex-grow whitespace-nowrap overflow-hidden text-ellipsis font-medium tracking-wide">@Localizer["E-Commerce"]</span>
                        <i class="fas fa-chevron-right text-sm opacity-70 transition-transform dropdown-icon"></i>
                    </a>
                    <ul
                        class="max-h-0 overflow-hidden list-none p-0 m-0 transition-all duration-300 rounded-b-lg sidebar-submenu">
                        <li><a href="@Url.Action("Index", "Products")"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-box w-[18px] mr-2.5 text-center text-sm"></i> @Localizer["Products"]</a></li>
                        <li><a href="@Url.Action("Index", "Categories")"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-tags w-[18px] mr-2.5 text-center text-sm"></i> @Localizer["Categories"]</a></li>
                        <li><a href="#"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-receipt w-[18px] mr-2.5 text-center text-sm"></i> @Localizer["Orders"]</a></li>
                    </ul>
                </li>
                <li class="relative mx-3 my-1 rounded-lg overflow-hidden sidebar-item has-submenu">
                    <a href="#"
                        class="flex items-center py-3 px-4 text-white/90 hover:text-white transition-all duration-300 rounded-lg sidebar-link">
                        <i class="fas fa-users w-5 mr-3 text-center text-lg"></i>
                        <span
                            class="flex-grow whitespace-nowrap overflow-hidden text-ellipsis font-medium tracking-wide">@Localizer["Users"]</span>
                        <i class="fas fa-chevron-right text-sm opacity-70 transition-transform dropdown-icon"></i>
                    </a>
                    <ul
                        class="max-h-0 overflow-hidden list-none p-0 m-0 transition-all duration-300 rounded-b-lg sidebar-submenu">
                        <li><a href="@Url.Action("Index", "Users")"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-user-plus w-[18px] mr-2.5 text-center text-sm"></i> @Localizer["ManageUsers"]</a>
                        </li>
                        <li><a href="@Url.Action("Index", "Roles")"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-user-shield w-[18px] mr-2.5 text-center text-sm"></i> @Localizer["ManageRoles"]</a></li>
                        <li><a href="@Url.Action("Index", "Permissions")"
                                class="flex items-center py-2.5 px-4 pl-11 text-white/80 hover:text-white hover:bg-white/10 transition-all duration-300 text-sm"><i
                                    class="fas fa-user-cog w-[18px] mr-2.5 text-center text-sm"></i> @Localizer["ManagePermissions"]</a>
                        </li>
                    </ul>
                </li>
                <li class="relative mx-3 my-1 rounded-lg overflow-hidden sidebar-item">
                    <a href="#"
                        class="flex items-center py-3 px-4 text-white/90 hover:text-white transition-all duration-300 rounded-lg sidebar-link">
                        <i class="fas fa-chart-line w-5 mr-3 text-center text-lg"></i>
                        <span
                            class="flex-grow whitespace-nowrap overflow-hidden text-ellipsis font-medium tracking-wide">@Localizer["Analytics"]</span>
                    </a>
                </li>
                <li class="relative mx-3 my-1 rounded-lg overflow-hidden sidebar-item">
                    <a href="#"
                        class="flex items-center py-3 px-4 text-white/90 hover:text-white transition-all duration-300 rounded-lg sidebar-link">
                        <i class="fas fa-cog w-5 mr-3 text-center text-lg"></i>
                        <span
                            class="flex-grow whitespace-nowrap overflow-hidden text-ellipsis font-medium tracking-wide">@Localizer["Settings"]</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Main Content -->
        <div
            class="flex-1 ml-[var(--sidebar-width)] transition-all duration-300 min-h-screen flex flex-col main-content">
            <!-- Header -->
            <header
                class="h-[60px] bg-white shadow flex items-center justify-between px-6 sticky top-0 z-[99] border-b border-slate-100">
                <div class="menu-toggle">
                    <button id="menu-btn"
                        class="bg-transparent border-0 text-slate-700 text-xl cursor-pointer outline-none w-10 h-10 rounded-full flex items-center justify-center transition-colors hover:bg-slate-100">
                        <i class="fas fa-bars"></i>
                    </button>
                </div>

                <div class="flex-1 max-w-[450px] mx-8 search-container">
                    <div class="relative w-full search-box">
                        <i
                            class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-slate-500 text-sm"></i>
                        <input type="text" placeholder="Search..."
                            class="w-full h-10 py-2 pl-10 pr-4 border-0 bg-slate-100 rounded-full text-sm transition-all focus:outline-none focus:bg-white focus:ring-2 focus:ring-purple-800/20" />
                    </div>
                </div>

                <div class="flex items-center header-right">
                    <div class="notifications">
                        <a href="#"
                            class="relative mr-6 text-slate-500 text-lg transition-colors hover:text-purple-800 notification-icon">
                            <i class="fas fa-bell"></i>
                            <span
                                class="absolute -top-1.5 -right-1.5 bg-red-500 text-white rounded-full w-[18px] h-[18px] text-xs flex items-center justify-center shadow-[0_0_0_2px_white] badge">3</span>
                        </a>
                    </div>
                    <div class="notifications">
                        <a href="#"
                            class="relative mr-6 text-slate-500 text-lg transition-colors hover:text-purple-800 notification-icon">
                            <i class="fas fa-envelope"></i>
                            <span
                                class="absolute -top-1.5 -right-1.5 bg-red-500 text-white rounded-full w-[18px] h-[18px] text-xs flex items-center justify-center shadow-[0_0_0_2px_white] badge">5</span>
                        </a>
                    </div>
                    <!-- Language Switcher -->
                    <div class="relative language-dropdown mr-4">
                        <button
                            class="flex items-center text-slate-800 no-underline cursor-pointer p-1.5 rounded-lg transition-colors hover:bg-slate-100 language-link">
                            @if (System.Globalization.CultureInfo.CurrentUICulture.Name.StartsWith("tr"))
                            {
                                <span class="flag-icon flag-tr"></span>
                                <span class="text-sm font-medium mr-1">TR</span>
                            }
                            else
                            {
                                <span class="flag-icon flag-en"></span>
                                <span class="text-sm font-medium mr-1">EN</span>
                            }
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>
                        <div
                            class="hidden absolute right-0 top-[calc(100%+0.5rem)] bg-white rounded-lg shadow-lg p-2 z-[1000] border border-slate-100 language-menu">
                            <form id="language-form" asp-controller="Home" asp-action="SetLanguage" method="post">
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />

                                <button type="submit" name="culture" value="en-US"
                                    class="flex items-center w-full py-2 px-3 text-slate-800 hover:bg-slate-50 hover:text-purple-800 transition-all text-sm rounded-md cursor-pointer">
                                    <span class="flag-icon flag-en"></span> English
                                </button>

                                <button type="submit" name="culture" value="tr-TR"
                                    class="flex items-center w-full py-2 px-3 text-slate-800 hover:bg-slate-50 hover:text-purple-800 transition-all text-sm rounded-md cursor-pointer">
                                    <span class="flag-icon flag-tr"></span> Türkçe
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="relative profile-dropdown">
                        <button
                            class="flex items-center text-slate-800 no-underline cursor-pointer p-1.5 rounded-lg transition-colors hover:bg-slate-100 profile-link">
                            <div
                                class="w-[38px] h-[38px] rounded-full overflow-hidden mr-3 border-2 border-slate-200 profile-photo">
                                <img src="https://randomuser.me/api/portraits/men/44.jpg" alt="Profile"
                                    class="w-full h-full object-cover" />
                            </div>
                            <div class="flex flex-col mr-2 profile-info">
                                <span class="font-semibold text-[0.95rem] text-slate-800 profile-name">John Doe</span>
                                <span class="text-xs text-slate-500 font-normal profile-role">Administrator</span>
                            </div>
                            <i class="fas fa-chevron-down ml-2 text-sm"></i>
                        </button>
                        <ul
                            class="hidden absolute right-0 top-[calc(100%+0.5rem)] min-w-[200px] bg-white rounded-lg shadow-lg p-2 z-[1000] border border-slate-100 dropdown-menu">
                            <li><a href="#"
                                    class="flex items-center py-3 px-5 text-slate-800 hover:bg-slate-50 hover:text-purple-800 transition-all text-sm rounded-md"><i
                                        class="fas fa-user w-5 mr-2.5 text-center text-slate-500"></i> @Localizer["Profile"]</a></li>
                            <li><a href="#"
                                    class="flex items-center py-3 px-5 text-slate-800 hover:bg-slate-50 hover:text-purple-800 transition-all text-sm rounded-md"><i
                                        class="fas fa-cog w-5 mr-2.5 text-center text-slate-500"></i> @Localizer["Settings"]</a></li>
                            <li><a href="#"
                                    class="flex items-center py-3 px-5 text-slate-800 hover:bg-slate-50 hover:text-purple-800 transition-all text-sm rounded-md"><i
                                        class="fas fa-question-circle w-5 mr-2.5 text-center text-slate-500"></i>
                                    @Localizer["Help"]</a></li>
                            <li class="h-0 my-2 overflow-hidden border-t border-slate-100 dropdown-divider"></li>
                            <li><a href="#"
                                    class="flex items-center py-3 px-5 text-red-600 hover:bg-red-50 transition-all text-sm rounded-md"><i
                                        class="fas fa-sign-out-alt w-5 mr-2.5 text-center text-red-500"></i> @Localizer["Logout"]</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="flex-1 p-7">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <footer class="bg-white p-4 text-center text-sm text-slate-500 border-t border-slate-100">
                <div class="container-fluid">
                    <div class="footer-content">
                        <p>&copy; @DateTime.Now.Year - Pazar Atlasi CMS | Version 1.0</p>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>