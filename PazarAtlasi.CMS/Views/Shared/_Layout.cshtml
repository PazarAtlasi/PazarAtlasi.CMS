<!DOCTYPE html>
<html lang="@System.Globalization.CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pazar Atlasi CMS</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        html,
        body {
            font-family: 'Inter', sans-serif;
        }
        
        .flag-icon {
            width: 20px;
            height: 14px;
            display: inline-block;
            background-size: contain;
            background-position: center;
            background-repeat: no-repeat;
            margin-right: 8px;
        }
        
        .flag-en {
            background-image: url('data:image/svg+xml;base64,');
        }
        
        .flag-tr {
            background-image: url('data:image/svg+xml;base64,');
        }
        
        /* Main content adjustment for sidebar */
        .main-content {
            margin-left: 6rem !important; /* 96px = w-24 */
            transition: margin-left 0.3s ease;
        }
        
        #sidebar:hover + .main-content {
            margin-left: 18rem !important; /* 288px = w-72 */
        }
        
        /* Header always on top */
        header {
            z-index: 999 !important;
            position: sticky !important;
            top: 0 !important;
            background-color: white !important;
        }
        
        /* Ensure dropdowns are above header */
        .language-menu,
        .dropdown-menu {
            z-index: 1001 !important;
        }
        
        /* Prevent content from overlapping header */
        .main-content > * {
            position: relative;
        }
        
        .main-content .z-10 {
            z-index: 10 !important;
        }
    </style>
    <!-- Instead of using Tailwind's CDN browser build, we'll add the CDN link as a stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="bg-slate-100 text-slate-800">
    <div class="flex min-h-screen relative">
        <!-- Sidebar -->
        @await Html.PartialAsync("_Sidebar")

        <!-- Main Content -->
        <div
            class="flex-1 ml-[var(--sidebar-width)] transition-all duration-300 min-h-screen flex flex-col main-content">
            <!-- Header -->
            <header
                class="h-[60px] bg-white shadow-md flex items-center justify-between px-6 sticky top-0 z-20 border-b border-slate-100">
                <div class="flex-1 max-w-[450px] search-container">
                    <div class="relative w-full search-box">
                        <i
                            class="fas fa-search absolute left-4 top-1/2 transform -translate-y-1/2 text-slate-500 text-sm"></i>
                        <input type="text" placeholder="@Html.L("Common.Search")..."
                            class="w-full h-10 py-2 pl-10 pr-4 border-0 bg-slate-100 rounded-full text-sm transition-all focus:outline-none focus:bg-white focus:ring-2 focus:ring-purple-800/20" />
                    </div>
                </div>

                <div class="flex items-center header-right">
                    <div class="notifications">
                        <a href="#"
                            class="relative mr-6 text-slate-500 text-lg transition-colors hover:text-purple-800 notification-icon">
                            <i class="fas fa-bell"></i>
                            <span
                                class="absolute -top-1.5 -right-1.5 bg-red-500 text-white rounded-full w-[18px] h-[18px] text-xs flex items-center justify-center shadow-[0_0_0_2px_white] badge">3</span>
                        </a>
                    </div>
                    <div class="notifications">
                        <a href="#"
                            class="relative mr-6 text-slate-500 text-lg transition-colors hover:text-purple-800 notification-icon">
                            <i class="fas fa-envelope"></i>
                            <span
                                class="absolute -top-1.5 -right-1.5 bg-red-500 text-white rounded-full w-[18px] h-[18px] text-xs flex items-center justify-center shadow-[0_0_0_2px_white] badge">5</span>
                        </a>
                    </div>
                    <!-- Language Switcher -->
                    <div class="relative language-dropdown mr-4">
                        <button
                            class="flex items-center text-slate-800 no-underline cursor-pointer p-1.5 rounded-lg transition-colors hover:bg-slate-100 language-link">
                            @if (System.Globalization.CultureInfo.CurrentUICulture.Name.StartsWith("tr"))
                            {
                                <span class="flag-icon flag-tr"></span>
                                <span class="text-sm font-medium mr-1">TR</span>
                            }
                            else
                            {
                                <span class="flag-icon flag-en"></span>
                                <span class="text-sm font-medium mr-1">EN</span>
                            }
                            <i class="fas fa-chevron-down text-xs"></i>
                        </button>
                        <div
                            class="hidden absolute right-0 top-[calc(100%+0.5rem)] bg-white rounded-lg shadow-lg p-2 z-[1000] border border-slate-100 language-menu">
                            <form id="language-form" asp-controller="Home" asp-action="SetLanguage" method="post">
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />

                                <button type="submit" name="culture" value="en-US"
                                    class="flex items-center w-full py-2 px-3 text-slate-800 hover:bg-slate-50 hover:text-purple-800 transition-all text-sm rounded-md cursor-pointer">
                                    <span class="flag-icon flag-en"></span> @Html.L("Language.English")
                                </button>

                                <button type="submit" name="culture" value="tr-TR"
                                    class="flex items-center w-full py-2 px-3 text-slate-800 hover:bg-slate-50 hover:text-purple-800 transition-all text-sm rounded-md cursor-pointer">
                                    <span class="flag-icon flag-tr"></span> @Html.L("Language.Turkish")
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="relative profile-dropdown">
                        <button
                            class="flex items-center text-slate-800 no-underline cursor-pointer p-1.5 rounded-lg transition-colors hover:bg-slate-100 profile-link">
                            <div
                                class="w-[38px] h-[38px] rounded-full overflow-hidden mr-3 border-2 border-slate-200 profile-photo">
                                <img src="https://randomuser.me/api/portraits/men/44.jpg" alt="Profile"
                                    class="w-full h-full object-cover" />
                            </div>
                            <div class="flex flex-col mr-2 profile-info">
                                <span class="font-semibold text-[0.95rem] text-slate-800 profile-name">John Doe</span>
                                <span class="text-xs text-slate-500 font-normal profile-role">Administrator</span>
                            </div>
                            <i class="fas fa-chevron-down ml-2 text-sm"></i>
                        </button>
                        <ul
                            class="hidden absolute right-0 top-[calc(100%+0.5rem)] min-w-[200px] bg-white rounded-lg shadow-lg p-2 z-[1000] border border-slate-100 dropdown-menu">
                            <li><a href="#"
                                    class="flex items-center py-3 px-5 text-slate-800 hover:bg-slate-50 hover:text-purple-800 transition-all text-sm rounded-md"><i
                                        class="fas fa-user w-5 mr-2.5 text-center text-slate-500"></i> @Html.L("Navigation.Profile")</a></li>
                            <li><a href="#"
                                    class="flex items-center py-3 px-5 text-slate-800 hover:bg-slate-50 hover:text-purple-800 transition-all text-sm rounded-md"><i
                                        class="fas fa-cog w-5 mr-2.5 text-center text-slate-500"></i> @Html.L("Navigation.Settings")</a></li>
                            <li><a href="#"
                                    class="flex items-center py-3 px-5 text-slate-800 hover:bg-slate-50 hover:text-purple-800 transition-all text-sm rounded-md"><i
                                        class="fas fa-question-circle w-5 mr-2.5 text-center text-slate-500"></i>
                                    @Html.L("Navigation.Help")</a></li>
                            <li class="h-0 my-2 overflow-hidden border-t border-slate-100 dropdown-divider"></li>
                            <li><a href="#"
                                    class="flex items-center py-3 px-5 text-red-600 hover:bg-red-50 transition-all text-sm rounded-md"><i
                                        class="fas fa-sign-out-alt w-5 mr-2.5 text-center text-red-500"></i> @Html.L("Navigation.Logout")</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="flex-1 p-7">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <!-- Footer -->
            <footer class="bg-white p-4 text-center text-sm text-slate-500 border-t border-slate-100">
                <div class="container-fluid">
                    <div class="footer-content">
                        <p>&copy; @DateTime.Now.Year - Pazar Atlasi CMS | Version 1.0</p>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Sortable.js for drag & drop -->
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Content Services - AJAX Request Handler -->
    <script src="~/js/Content/Services/Content.Services.js" asp-append-version="true"></script>
    <!-- MetaData Services - AJAX Request Handler -->
    <script src="~/js/metadata/MetaData.Services.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>