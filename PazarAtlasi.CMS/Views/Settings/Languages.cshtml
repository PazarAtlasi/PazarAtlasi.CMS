@model LanguageListViewModel
@{
    ViewData["Title"] = "Diller";
}

<div class="languages-page">
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <h4 class="text-2xl font-bold text-slate-800 inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                    Diller
                </h4>
                <p class="text-slate-500 mt-3 max-w-xl">Sistemde desteklenen dilleri yönetin. Varsayılan dili belirleyebilirsiniz.</p>
            </div>
        </div>
        <div class="w-full lg:w-1/3 text-left lg:text-right">
            <div class="inline-flex items-center space-x-2">
                <a href="@Url.Action("Index", "Settings")" 
                   class="py-2 px-4 bg-slate-200 hover:bg-slate-300 text-slate-700 rounded-lg text-sm transition-colors inline-flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i> Ayarlara Dön
                </a>
            </div>
        </div>
    </div>

    <!-- Available Languages Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Active Languages -->
        <div class="bg-white rounded-xl shadow-md">
            <div class="p-5 border-b border-slate-100">
                <h5 class="text-lg font-semibold text-slate-800 m-0 flex items-center">
                    <i class="fas fa-check-circle text-green-600 mr-2"></i>
                    Aktif Diller (@Model.Languages.Count(l => l.IsDefault || new[] { "tr-TR", "en-US", "de-DE" }.Contains(l.Code)))
                </h5>
            </div>
            <div class="p-5">
                <div class="space-y-3">
                    @foreach (var language in Model.Languages.Where(l => l.IsDefault || new[] { "tr-TR", "en-US", "de-DE" }.Contains(l.Code)))
                    {
                        <div class="flex items-center justify-between p-3 bg-green-50 border border-green-200 rounded-lg">
                            <div class="flex items-center">
                                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3">
                                    <i class="fas fa-language text-green-600 text-sm"></i>
                                </div>
                                <div>
                                    <div class="font-medium text-slate-800">@language.Name</div>
                                    <div class="text-sm text-slate-500">@language.Code</div>
                                </div>
                            </div>
                            <div class="flex items-center space-x-2">
                                @if (language.IsDefault)
                                {
                                    <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded-full">
                                        Varsayılan
                                    </span>
                                }
                                else
                                {
                                    <button onclick="setDefaultLanguage(@language.Id)" 
                                            class="px-3 py-1 bg-blue-100 hover:bg-blue-200 text-blue-600 text-xs rounded-full transition-colors">
                                        Varsayılan Yap
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Passive Languages -->
        <div class="bg-white rounded-xl shadow-md">
            <div class="p-5 border-b border-slate-100">
                <h5 class="text-lg font-semibold text-slate-800 m-0 flex items-center">
                    <i class="fas fa-pause-circle text-orange-600 mr-2"></i>
                    Pasif Diller
                </h5>
            </div>
            <div class="p-5">
                <div class="space-y-2 max-h-96 overflow-y-auto">
                    @{
                        var passiveLanguages = new[]
                        {
                            new { Name = "Fransızca", Code = "fr-FR" },
                            new { Name = "İspanyolca", Code = "es-ES" },
                            new { Name = "İtalyanca", Code = "it-IT" },
                            new { Name = "Portekizce", Code = "pt-PT" },
                            new { Name = "Rusça", Code = "ru-RU" },
                            new { Name = "Çince", Code = "zh-CN" },
                            new { Name = "Japonca", Code = "ja-JP" },
                            new { Name = "Korece", Code = "ko-KR" },
                            new { Name = "Arapça", Code = "ar-SA" },
                            new { Name = "Hintçe", Code = "hi-IN" },
                            new { Name = "Hollandaca", Code = "nl-NL" },
                            new { Name = "İsveççe", Code = "sv-SE" },
                            new { Name = "Norveççe", Code = "no-NO" },
                            new { Name = "Danca", Code = "da-DK" },
                            new { Name = "Fince", Code = "fi-FI" },
                            new { Name = "Lehçe", Code = "pl-PL" },
                            new { Name = "Çekçe", Code = "cs-CZ" },
                            new { Name = "Macarca", Code = "hu-HU" },
                            new { Name = "Rumence", Code = "ro-RO" },
                            new { Name = "Bulgarca", Code = "bg-BG" },
                            new { Name = "Hırvatça", Code = "hr-HR" },
                            new { Name = "Sırpça", Code = "sr-RS" },
                            new { Name = "Slovakça", Code = "sk-SK" },
                            new { Name = "Slovence", Code = "sl-SI" },
                            new { Name = "Litvanca", Code = "lt-LT" },
                            new { Name = "Letonca", Code = "lv-LV" },
                            new { Name = "Estonca", Code = "et-EE" },
                            new { Name = "Yunanca", Code = "el-GR" },
                            new { Name = "Ukraynaca", Code = "uk-UA" },
                            new { Name = "Belarusça", Code = "be-BY" }
                        };
                    }
                    @foreach (var language in passiveLanguages)
                    {
                        <div class="flex items-center justify-between p-2 hover:bg-slate-50 rounded-lg">
                            <div class="flex items-center">
                                <div class="w-6 h-6 bg-slate-100 rounded-full flex items-center justify-center mr-3">
                                    <i class="fas fa-language text-slate-400 text-xs"></i>
                                </div>
                                <div>
                                    <div class="text-sm font-medium text-slate-600">@language.Name</div>
                                    <div class="text-xs text-slate-400">@language.Code</div>
                                </div>
                            </div>
                            <span class="px-2 py-1 bg-slate-100 text-slate-600 text-xs rounded-full">
                                Pasif
                            </span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Languages Table -->
    <div class="bg-white rounded-xl shadow-md">
        <div class="p-5 border-b border-slate-100 flex justify-between items-center">
            <h5 class="text-lg font-semibold text-slate-800 m-0">
                Tüm Diller (@Model.TotalCount)
            </h5>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Dil</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Kod</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Durum</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Oluşturulma</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">İşlemler</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-slate-200">
                    @foreach (var language in Model.Languages)
                    {
                        <tr class="hover:bg-slate-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-slate-100 rounded-full flex items-center justify-center mr-3">
                                        <i class="fas fa-language text-slate-600 text-sm"></i>
                                    </div>
                                    <div class="text-sm font-medium text-slate-900">@language.Name</div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-slate-500">@(language.Code ?? "-")</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                @if (language.IsDefault)
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                                        Varsayılan
                                    </span>
                                }
                                else
                                {
                                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                        Aktif
                                    </span>
                                }
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                                @language.CreatedAt.ToString("dd.MM.yyyy")
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                @if (!language.IsDefault)
                                {
                                    <button onclick="setDefaultLanguage(@language.Id)" 
                                            class="p-2 bg-blue-100 hover:bg-blue-200 text-blue-600 rounded text-sm transition-colors" 
                                            title="Varsayılan Yap">
                                        <i class="fas fa-star"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="px-6 py-4 border-t border-slate-200">
                <div class="flex justify-center">
                    <nav class="flex space-x-1">
                        @if (Model.HasPreviousPage)
                        {
                            <a href="@Url.Action("Languages", new { page = Model.PageNumber - 1 })" 
                               class="px-3 py-2 bg-slate-200 text-slate-700 rounded hover:bg-slate-300 transition-colors">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        }

                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            <a href="@Url.Action("Languages", new { page = i })" 
                               class="px-3 py-2 @(i == Model.PageNumber ? "bg-purple-600 text-white" : "bg-slate-200 text-slate-700 hover:bg-slate-300") rounded transition-colors">
                                @i
                            </a>
                        }

                        @if (Model.HasNextPage)
                        {
                            <a href="@Url.Action("Languages", new { page = Model.PageNumber + 1 })" 
                               class="px-3 py-2 bg-slate-200 text-slate-700 rounded hover:bg-slate-300 transition-colors">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        }
                    </nav>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function setDefaultLanguage(id) {
            if (confirm('Bu dili varsayılan dil olarak ayarlamak istediğinizden emin misiniz?')) {
                $.post('@Url.Action("SetDefaultLanguage", "Settings")', { id: id }, function(response) {
                    if (response.success) {
                        showNotification(response.message, 'success');
                        location.reload();
                    } else {
                        showNotification(response.message, 'error');
                    }
                });
            }
        }

        function showNotification(message, type) {
            const alertClass = type === 'success' ? 'bg-green-100 text-green-800 border-green-200' : 'bg-red-100 text-red-800 border-red-200';
            const notification = `<div class="fixed top-4 right-4 z-50 ${alertClass} border px-4 py-3 rounded-lg shadow-lg max-w-sm">
                <div class="flex items-center">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} mr-2"></i>
                    <span>${message}</span>
                </div>
            </div>`;
            
            $('body').append(notification);
            
            setTimeout(() => {
                $('.fixed.top-4.right-4').fadeOut(function() {
                    $(this).remove();
                });
            }, 3000);
        }
    </script>
}