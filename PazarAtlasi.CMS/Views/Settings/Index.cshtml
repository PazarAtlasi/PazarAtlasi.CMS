@{
    ViewData["Title"] = "Ayarlar";
}

<div class="settings-page">
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <h4 class="text-2xl font-bold text-slate-800 inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                    Ayarlar
                </h4>
                <p class="text-slate-500 mt-3 max-w-xl">Sistem ayarlarını yönetin, ülkeler ve diller gibi temel konfigürasyonları düzenleyin.</p>
            </div>
        </div>
    </div>

    <!-- Settings Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Countries Card -->
        <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
            <div class="p-6">
                <div class="flex items-center mb-4">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
                        <i class="fas fa-globe text-blue-600 text-xl"></i>
                    </div>
                    <div>
                        <h5 class="text-lg font-semibold text-slate-800 mb-1">Ülkeler</h5>
                        <p class="text-sm text-slate-500">Ülke listesini yönetin</p>
                    </div>
                </div>
                <p class="text-slate-600 mb-4">Sistemde kullanılan ülkeleri görüntüleyin, aktif/pasif durumlarını düzenleyin.</p>
                <a href="@Url.Action("Countries", "Settings")" 
                   class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors text-sm">
                    <i class="fas fa-arrow-right mr-2"></i> Ülkeleri Yönet
                </a>
            </div>
        </div>

        <!-- Languages Card -->
        <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
            <div class="p-6">
                <div class="flex items-center mb-4">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mr-4">
                        <i class="fas fa-language text-green-600 text-xl"></i>
                    </div>
                    <div>
                        <h5 class="text-lg font-semibold text-slate-800 mb-1">Diller</h5>
                        <p class="text-sm text-slate-500">Dil ayarlarını yönetin</p>
                    </div>
                </div>
                <p class="text-slate-600 mb-4">Sistemde desteklenen dilleri görüntüleyin, varsayılan dili belirleyin.</p>
                <a href="@Url.Action("Languages", "Settings")" 
                   class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors text-sm">
                    <i class="fas fa-arrow-right mr-2"></i> Dilleri Yönet
                </a>
            </div>
        </div>

        <!-- System Settings Card -->
        <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow">
            <div class="p-6">
                <div class="flex items-center mb-4">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
                        <i class="fas fa-cogs text-purple-600 text-xl"></i>
                    </div>
                    <div>
                        <h5 class="text-lg font-semibold text-slate-800 mb-1">Sistem Ayarları</h5>
                        <p class="text-sm text-slate-500">Genel sistem konfigürasyonu</p>
                    </div>
                </div>
                <p class="text-slate-600 mb-4">Site ayarları, SEO konfigürasyonu ve diğer sistem parametreleri.</p>
                <a href="#" 
                   class="inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors text-sm">
                    <i class="fas fa-arrow-right mr-2"></i> Sistem Ayarları
                </a>
            </div>
        </div>
    </div>
</div>