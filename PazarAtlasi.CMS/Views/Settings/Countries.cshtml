@model CountryListViewModel
@{
    ViewData["Title"] = "Ülkeler";
}

<div class="countries-page">
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <h4 class="text-2xl font-bold text-slate-800 inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                    Ülkeler
                </h4>
                <p class="text-slate-500 mt-3 max-w-xl">Sistemde kullanılan ülkeleri yönetin. Ülkeleri aktif/pasif duruma getirebilirsiniz.</p>
            </div>
        </div>
        <div class="w-full lg:w-1/3 text-left lg:text-right">
            <div class="inline-flex items-center space-x-2">
                <a href="@Url.Action("Index", "Settings")" 
                   class="py-2 px-4 bg-slate-200 hover:bg-slate-300 text-slate-700 rounded-lg text-sm transition-colors inline-flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i> Ayarlara Dön
                </a>
            </div>
        </div>
    </div>

    <!-- Countries List -->
    <div class="bg-white rounded-xl shadow-md">
        <div class="p-5 border-b border-slate-100 flex justify-between items-center">
            <h5 class="text-lg font-semibold text-slate-800 m-0">
                Ülkeler (@Model.TotalCount)
            </h5>
        </div>
        <div class="p-0">
            @if (Model.Countries.Any())
            {
                <!-- Countries Filter -->
                <div class="meetings-filter-results p-5 border-b border-slate-100">
                    <div class="meetings-country-item active">
                        <span>Tümü</span>
                    </div>
                    @foreach (var country in Model.Countries.Take(20))
                    {
                        <div class="meetings-country-item @(country.IsActive ? "" : "opacity-50")">
                            <span>@country.Name</span>
                        </div>
                    }
                </div>

                <!-- Countries Table -->
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-slate-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Ülke</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Kod</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Durum</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Sıra</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Oluşturulma</th>
                                <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-slate-200">
                            @foreach (var country in Model.Countries)
                            {
                                <tr class="hover:bg-slate-50">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm font-medium text-slate-900">@country.Name</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-sm text-slate-500">@(country.Code ?? "-")</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                            @(country.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                            @(country.IsActive ? "Aktif" : "Pasif")
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                                        @country.SortOrder
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                                        @country.CreatedAt.ToString("dd.MM.yyyy")
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                        <button onclick="toggleCountryStatus(@country.Id)" 
                                                class="p-2 @(country.IsActive ? "bg-red-100 hover:bg-red-200 text-red-600" : "bg-green-100 hover:bg-green-200 text-green-600") rounded text-sm transition-colors mr-2" 
                                                title="@(country.IsActive ? "Pasif Yap" : "Aktif Yap")">
                                            <i class="fas @(country.IsActive ? "fa-times" : "fa-check")"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <div class="px-6 py-4 border-t border-slate-200">
                        <div class="flex justify-center">
                            <nav class="flex space-x-1">
                                @if (Model.HasPreviousPage)
                                {
                                    <a href="@Url.Action("Countries", new { page = Model.PageNumber - 1 })" 
                                       class="px-3 py-2 bg-slate-200 text-slate-700 rounded hover:bg-slate-300 transition-colors">
                                        <i class="fas fa-chevron-left"></i>
                                    </a>
                                }

                                @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                                {
                                    <a href="@Url.Action("Countries", new { page = i })" 
                                       class="px-3 py-2 @(i == Model.PageNumber ? "bg-purple-600 text-white" : "bg-slate-200 text-slate-700 hover:bg-slate-300") rounded transition-colors">
                                        @i
                                    </a>
                                }

                                @if (Model.HasNextPage)
                                {
                                    <a href="@Url.Action("Countries", new { page = Model.PageNumber + 1 })" 
                                       class="px-3 py-2 bg-slate-200 text-slate-700 rounded hover:bg-slate-300 transition-colors">
                                        <i class="fas fa-chevron-right"></i>
                                    </a>
                                }
                            </nav>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-12">
                    <i class="fas fa-globe text-4xl text-slate-300 mb-4"></i>
                    <h3 class="text-lg font-medium text-slate-600 mb-2">Henüz ülke yok</h3>
                    <p class="text-slate-500">Ülke verileri henüz yüklenmemiş.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
.meetings-filter-results {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
}

.meetings-country-item {
    background: #f8fafc;
    border: 1px solid #e2e8f0;
    border-radius: 6px;
    padding: 8px 12px;
    cursor: pointer;
    transition: all 0.2s;
    font-size: 14px;
}

.meetings-country-item:hover {
    background: #e2e8f0;
    border-color: #cbd5e1;
}

.meetings-country-item.active {
    background: #7c3aed;
    color: white;
    border-color: #7c3aed;
}

.meetings-country-item span {
    font-weight: 500;
}
</style>

@section Scripts {
    <script>
        function toggleCountryStatus(id) {
            $.post('@Url.Action("ToggleCountryStatus", "Settings")', { id: id }, function(response) {
                if (response.success) {
                    showNotification(response.message, 'success');
                    location.reload();
                } else {
                    showNotification(response.message, 'error');
                }
            });
        }

        function showNotification(message, type) {
            const alertClass = type === 'success' ? 'bg-green-100 text-green-800 border-green-200' : 'bg-red-100 text-red-800 border-red-200';
            const notification = `<div class="fixed top-4 right-4 z-50 ${alertClass} border px-4 py-3 rounded-lg shadow-lg max-w-sm">
                <div class="flex items-center">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} mr-2"></i>
                    <span>${message}</span>
                </div>
            </div>`;
            
            $('body').append(notification);
            
            setTimeout(() => {
                $('.fixed.top-4.right-4').fadeOut(function() {
                    $(this).remove();
                });
            }, 3000);
        }

        // Country filter functionality
        $(document).ready(function() {
            $('.meetings-country-item').click(function() {
                $('.meetings-country-item').removeClass('active');
                $(this).addClass('active');
                
                const countryName = $(this).find('span').text();
                
                if (countryName === 'Tümü') {
                    $('tbody tr').show();
                } else {
                    $('tbody tr').hide();
                    $('tbody tr').filter(function() {
                        return $(this).find('td:first').text().indexOf(countryName) > -1;
                    }).show();
                }
            });
        });
    </script>
}