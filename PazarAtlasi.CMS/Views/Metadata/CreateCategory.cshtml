@model PazarAtlasi.CMS.Models.ViewModels.CategoryCreateViewModel

@{
    ViewData["Title"] = "Create Category";
}

<div class="category-create">
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <h4 class="text-2xl font-bold text-slate-800 inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                    Create New Category
                </h4>
                <p class="text-slate-500 mt-3 max-w-xl">
                    Add a new category to organize your products effectively.
                </p>
            </div>
        </div>
        <div class="w-full lg:w-1/3 text-left lg:text-right">
            <div class="inline-flex items-center space-x-2">
                <a href="@Url.Action("Categories")" class="py-2 px-4 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg text-sm transition-colors inline-flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i> Back to Categories
                </a>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-md">
        <form asp-action="CreateCategory" method="post" class="p-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            @if (!string.IsNullOrEmpty(Model.ParentCategoryName))
            {
                <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                    <div class="flex items-center">
                        <i class="fas fa-info-circle text-blue-600 mr-2"></i>
                        <span class="text-blue-800">Creating subcategory under: <strong>@Model.ParentCategoryName</strong></span>
                    </div>
                </div>
            }

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Basic Information -->
                <div class="space-y-4">
                    <h5 class="text-lg font-semibold text-slate-800 border-b border-slate-200 pb-2">Basic Information</h5>
                    
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-slate-700 mb-2">Category Name *</label>
                        <input asp-for="Name" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" placeholder="Enter category name">
                        <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Code" class="block text-sm font-medium text-slate-700 mb-2">Category Code *</label>
                        <input asp-for="Code" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" placeholder="Enter category code (URL-friendly)">
                        <span asp-validation-for="Code" class="text-red-600 text-sm"></span>
                        <p class="text-xs text-slate-500 mt-1">Used in URLs and system references</p>
                    </div>

                    <div>
                        <label asp-for="IntegrationCode" class="block text-sm font-medium text-slate-700 mb-2">Integration Code</label>
                        <input asp-for="IntegrationCode" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" placeholder="External system code">
                        <span asp-validation-for="IntegrationCode" class="text-red-600 text-sm"></span>
                        <p class="text-xs text-slate-500 mt-1">For integration with external systems</p>
                    </div>

                    <!-- Category Translations -->
                    <div class="col-span-2">
                        <h6 class="text-sm font-medium text-slate-700 mb-3 flex items-center">
                            <i class="fas fa-language mr-2 text-purple-600"></i> Category Translations
                        </h6>
                        
                        <!-- Language Tabs -->
                        <div class="flex space-x-1 mb-4 bg-white rounded-lg p-1 border border-slate-200">
                            @for (int i = 0; i < Model.AvailableLanguages.Count; i++)
                            {
                                var lang = Model.AvailableLanguages[i];
                                <button type="button"
                                        class="language-tab flex-1 px-3 py-2 text-sm font-medium rounded-md transition-colors @(lang.IsDefault ? "bg-purple-100 text-purple-800" : "text-slate-600 hover:text-slate-800 hover:bg-slate-50")"
                                        data-language-id="@lang.Id" onclick="switchLanguageTab(@lang.Id)">
                                    @lang.Code.ToUpper()
                                    @if (lang.IsDefault)
                                    {
                                        <span class="ml-1 text-xs">●</span>
                                    }
                                </button>
                            }
                        </div>

                        <!-- Translation Content -->
                        <div id="categoryTranslationsContainer">
                            @for (int i = 0; i < Model.AvailableLanguages.Count; i++)
                            {
                                var lang = Model.AvailableLanguages[i];
                                var translation = Model.Translations.FirstOrDefault(t => t.LanguageId == lang.Id);
                                <div class="translation-content @(lang.IsDefault ? "" : "hidden")" data-language-id="@lang.Id" data-language-code="@lang.Code">
                                    <div class="bg-white rounded-lg p-4 border border-slate-200">
                                        <div class="flex items-center mb-3">
                                            <i class="fas fa-flag mr-2 text-purple-600"></i>
                                            <span class="font-medium text-slate-700">@lang.Name (@lang.Code)</span>
                                            @if (lang.IsDefault)
                                            {
                                                <span class="ml-2 px-2 py-0.5 bg-purple-100 text-purple-800 text-xs rounded">Default</span>
                                            }
                                        </div>

                                        <div class="space-y-3">
                                            <div>
                                                <label class="block text-sm font-medium text-slate-700 mb-1">Category Name</label>
                                                <input type="text" name="Translations[@i].Name"
                                                       class="category-translation-name w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                                       value="@(translation?.Name ?? "")" placeholder="Enter category name" />
                                                <input type="hidden" name="Translations[@i].LanguageId" value="@lang.Id" />
                                                <input type="hidden" name="Translations[@i].LanguageCode" value="@lang.Code" />
                                                <input type="hidden" name="Translations[@i].LanguageName" value="@lang.Name" />
                                                <input type="hidden" name="Translations[@i].IsDefault" value="@lang.IsDefault" />
                                            </div>

                                            <div>
                                                <label class="block text-sm font-medium text-slate-700 mb-1">Short Description</label>
                                                <textarea name="Translations[@i].ShortDescription" rows="2"
                                                          class="category-translation-short-description w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                                          placeholder="Brief category description">@(translation?.ShortDescription ?? "")</textarea>
                                            </div>

                                            <div>
                                                <label class="block text-sm font-medium text-slate-700 mb-1">Long Description</label>
                                                <textarea name="Translations[@i].LongDescription" rows="3"
                                                          class="category-translation-long-description w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                                          placeholder="Detailed category description">@(translation?.LongDescription ?? "")</textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Hierarchy & Settings -->
                <div class="space-y-4">
                    <h5 class="text-lg font-semibold text-slate-800 border-b border-slate-200 pb-2">Hierarchy & Settings</h5>
                    
                    <div>
                        <label asp-for="ParentCategoryId" class="block text-sm font-medium text-slate-700 mb-2">Parent Category</label>
                        <select asp-for="ParentCategoryId" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                            <option value="">-- Root Category --</option>
                            @foreach (var parent in Model.AvailableParentCategories)
                            {
                                <option value="@parent.Id" selected="@(parent.Id == Model.ParentCategoryId)">
                                    @if (parent.Level > 0)
                                    {
                                        @for (int i = 0; i < parent.Level; i++)
                                        {
                                            <text>└─ </text>
                                        }
                                    }
                                    @parent.Name (@parent.Code)
                                </option>
                            }
                        </select>
                        <span asp-validation-for="ParentCategoryId" class="text-red-600 text-sm"></span>
                        <p class="text-xs text-slate-500 mt-1">Leave empty to create a root category</p>
                    </div>

                    <div>
                        <label asp-for="SortOrder" class="block text-sm font-medium text-slate-700 mb-2">Sort Order</label>
                        <input asp-for="SortOrder" type="number" min="0" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" placeholder="0">
                        <span asp-validation-for="SortOrder" class="text-red-600 text-sm"></span>
                        <p class="text-xs text-slate-500 mt-1">Lower numbers appear first</p>
                    </div>

                    <!-- Preview Card -->
                    <div class="mt-6 p-4 bg-slate-50 border border-slate-200 rounded-lg">
                        <h6 class="text-sm font-medium text-slate-700 mb-2">Preview</h6>
                        <div class="flex items-center">
                            <div class="h-8 w-8 rounded-full bg-green-100 flex items-center justify-center mr-3">
                                <i class="fas fa-tag text-green-600"></i>
                            </div>
                            <div>
                                <div class="text-sm font-medium text-slate-900" id="preview-name">Category Name</div>
                                <div class="text-xs text-slate-500" id="preview-code">category-code</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-end space-x-3 mt-8 pt-6 border-t border-slate-200">
                <a href="@Url.Action("Categories")" class="py-2 px-4 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg text-sm transition-colors">
                    Cancel
                </a>
                <button type="submit" class="py-2 px-4 bg-purple-800 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors inline-flex items-center">
                    <i class="fas fa-save mr-2"></i> Create Category
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    // Language tab switching function
    function switchLanguageTab(languageId) {
        // Hide all translation contents
        document.querySelectorAll('.translation-content').forEach(content => {
            content.classList.add('hidden');
        });

        // Remove active class from all tabs
        document.querySelectorAll('.language-tab').forEach(tab => {
            tab.classList.remove('bg-purple-100', 'text-purple-800');
            tab.classList.add('text-slate-600', 'hover:text-slate-800', 'hover:bg-slate-50');
        });

        // Show selected translation content
        const selectedContent = document.querySelector(`.translation-content[data-language-id="${languageId}"]`);
        if (selectedContent) {
            selectedContent.classList.remove('hidden');
        }

        // Add active class to selected tab
        const selectedTab = document.querySelector(`.language-tab[data-language-id="${languageId}"]`);
        if (selectedTab) {
            selectedTab.classList.add('bg-purple-100', 'text-purple-800');
            selectedTab.classList.remove('text-slate-600', 'hover:text-slate-800', 'hover:bg-slate-50');
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        const nameInput = document.querySelector('input[name="Name"]');
        const codeInput = document.querySelector('input[name="Code"]');
        const previewName = document.getElementById('preview-name');
        const previewCode = document.getElementById('preview-code');

        function updatePreview() {
            previewName.textContent = nameInput.value || 'Category Name';
            previewCode.textContent = codeInput.value || 'category-code';
        }

        function generateCode() {
            if (!codeInput.value && nameInput.value) {
                const code = nameInput.value
                    .toLowerCase()
                    .replace(/[^a-z0-9\s-]/g, '')
                    .replace(/\s+/g, '-')
                    .replace(/-+/g, '-')
                    .trim('-');
                codeInput.value = code;
                updatePreview();
            }
        }

        nameInput.addEventListener('input', function() {
            updatePreview();
            generateCode();
        });

        codeInput.addEventListener('input', updatePreview);

        // Initial preview update
        updatePreview();

        // Initialize first language tab as active
        const firstLanguageTab = document.querySelector('.language-tab');
        if (firstLanguageTab) {
            const languageId = firstLanguageTab.getAttribute('data-language-id');
            switchLanguageTab(languageId);
        }
    });
</script>

<style>
    .translation-content {
        transition: opacity 0.2s ease-in-out;
    }

    .translation-content.hidden {
        display: none;
    }

    .language-tab.active {
        background-color: #f3e8ff !important;
        color: #7c3aed !important;
    }
</style>