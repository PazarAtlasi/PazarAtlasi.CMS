@model PazarAtlasi.CMS.Models.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = Html.L("Navigation.Categories");
}

<div class="categories-management">
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <h4 class="text-2xl font-bold text-slate-800 inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                    @Html.L("Navigation.Categories")
                </h4>
                <p class="text-slate-500 mt-3 max-w-xl">
                    Kategorileri hiyerarşik yapıda yönetin ve düzenleyin.
                </p>
            </div>
        </div>
        <div class="w-full lg:w-1/3 text-left lg:text-right">
            <div class="inline-flex items-center space-x-2">
                <a href="@Url.Action("CreateCategory")" class="py-2 px-4 bg-purple-800 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors inline-flex items-center shadow-sm">
                    <i class="fas fa-plus mr-2"></i> @Html.L("Category.CreateNew")
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex items-center">
                <div class="p-3 bg-green-100 rounded-full">
                    <i class="fas fa-tags text-green-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-slate-600">@Html.L("Navigation.Categories")</p>
                    <p class="text-2xl font-bold text-slate-800">@Model.TotalCount</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex items-center">
                <div class="p-3 bg-blue-100 rounded-full">
                    <i class="fas fa-check-circle text-blue-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-slate-600">@Html.L("Common.Active")</p>
                    <p class="text-2xl font-bold text-slate-800">@Model.Categories.Count(c => c.Status == PazarAtlasi.CMS.Domain.Common.Status.Active)</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex items-center">
                <div class="p-3 bg-orange-100 rounded-full">
                    <i class="fas fa-sitemap text-orange-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-slate-600">Root Categories</p>
                    <p class="text-2xl font-bold text-slate-800">@Model.Categories.Count(c => c.ParentCategoryId == null)</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex items-center">
                <div class="p-3 bg-purple-100 rounded-full">
                    <i class="fas fa-chart-line text-purple-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-slate-600">Current Page</p>
                    <p class="text-2xl font-bold text-slate-800">@Model.PageNumber/@Model.TotalPages</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Table -->
    <div class="bg-white rounded-xl shadow-md">
        <div class="p-6 border-b border-slate-100">
            <div class="flex flex-wrap items-center justify-between">
                <h5 class="text-lg font-semibold text-slate-800 m-0">@Html.L("Navigation.Categories")</h5>
                <div class="flex items-center space-x-2 mt-4 md:mt-0">
                    <div class="relative">
                        <input type="text" placeholder="@Html.L("Common.Search")..." 
                               class="pl-10 pr-4 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                        <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400"></i>
                    </div>
                    <select class="px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                        <option value="">@Html.L("Common.All") @Html.L("Common.Status")</option>
                        <option value="Active">@Html.L("Common.Active")</option>
                        <option value="Draft">@Html.L("Common.Draft")</option>
                        <option value="Pending">Pending</option>
                        <option value="Archived">Archived</option>
                    </select>
                    <button class="px-3 py-2 bg-slate-100 hover:bg-slate-200 text-slate-600 rounded-lg text-sm transition-colors" 
                            onclick="toggleHierarchy()" title="Toggle Hierarchy View">
                        <i class="fas fa-sitemap"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">@Html.L("Category.Name")</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">@Html.L("Category.Code")</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">@Html.L("Common.Status")</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Products</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">@Html.L("Page.CreatedAt")</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">@Html.L("Page.UpdatedAt")</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">@Html.L("Common.Actions")</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-slate-200">
                    @if (Model.Categories.Any())
                    {
                        @foreach (var category in Model.Categories)
                        {
                            <tr class="hover:bg-slate-50 transition-colors category-row" data-level="@category.Level">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center @category.IndentClass">
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center">
                                                <i class="@category.HierarchyIcon text-green-600"></i>
                                            </div>
                                        </div>
                                        <div class="ml-4">
                                            <div class="flex items-center">
                                                @if (category.Level > 0)
                                                {
                                                    <span class="text-slate-400 mr-2 hierarchy-indicator">
                                                        @for (int i = 0; i < category.Level; i++)
                                                        {
                                                            <span>└─</span>
                                                        }
                                                    </span>
                                                }
                                                <div class="text-sm font-medium text-slate-900">@category.Name</div>
                                                @if (category.HasChildren)
                                                {
                                                    <span class="ml-2 inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-slate-100 text-slate-600">
                                                        <i class="fas fa-sitemap mr-1"></i> @category.ChildCategories.Count
                                                    </span>
                                                }
                                            </div>
                                            <div class="text-sm text-slate-500">@category.Code</div>
                                            @if (!string.IsNullOrEmpty(category.ParentCategoryName))
                                            {
                                                <div class="text-xs text-slate-400 mt-1">
                                                    Parent: @category.ParentCategoryName
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(category.Description))
                                            {
                                                <div class="text-xs text-slate-400 mt-1 max-w-xs truncate">@category.Description</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-slate-900">@category.Code</div>
                                    <div class="text-sm text-slate-500">Sort: @category.SortOrder</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @category.StatusBadgeClass">
                                        @category.StatusName
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (category.ProductsCount > 0)
                                    {
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                            <i class="fas fa-box mr-1"></i> @category.ProductsCount
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-slate-400 text-sm">No products</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                                    <div>@category.CreatedAt.ToString("dd/MM/yyyy")</div>
                                    <div class="text-xs">@category.CreatedAt.ToString("HH:mm")</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                                    @if (category.UpdatedAt.HasValue)
                                    {
                                        <div>@category.UpdatedAt.Value.ToString("dd/MM/yyyy")</div>
                                        <div class="text-xs">@category.UpdatedAt.Value.ToString("HH:mm")</div>
                                    }
                                    else
                                    {
                                        <span class="text-slate-400">Never</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <div class="flex items-center space-x-2">
                                        <a href="#" 
                                           class="text-purple-600 hover:text-purple-900 transition-colors" 
                                           title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("EditCategory", new { id = category.Id })" 
                                           class="text-blue-600 hover:text-blue-900 transition-colors" 
                                           title="@Html.L("Common.Edit")">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (category.Level > 0)
                                        {
                                            <a href="@Url.Action("CreateCategory", new { parentId = category.ParentCategoryId })" 
                                               class="text-green-600 hover:text-green-900 transition-colors" 
                                               title="Add Sibling Category">
                                                <i class="fas fa-plus"></i>
                                            </a>
                                        }
                                        <a href="@Url.Action("CreateCategory", new { parentId = category.Id })" 
                                           class="text-orange-600 hover:text-orange-900 transition-colors" 
                                           title="Add Child Category">
                                            <i class="fas fa-plus-circle"></i>
                                        </a>
                                        <button class="text-red-600 hover:text-red-900 transition-colors" 
                                                title="@Html.L("Common.Delete")"
                                                onclick="confirmDelete(@category.Id, '@category.Name')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="px-6 py-12 text-center">
                                <div class="text-slate-400">
                                    <i class="fas fa-tags text-4xl mb-4"></i>
                                    <p class="text-lg font-medium">@Html.L("Navigation.Categories")</p>
                                    <p class="text-sm">Henüz hiç kategori eklenmemiş.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="px-6 py-4 border-t border-slate-200">
                <div class="flex items-center justify-between">
                    <div class="text-sm text-slate-700">
                        Showing <span class="font-medium">@((Model.PageNumber - 1) * Model.PageSize + 1)</span> to 
                        <span class="font-medium">@Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)</span> of 
                        <span class="font-medium">@Model.TotalCount</span> results
                    </div>
                    <div class="flex items-center space-x-2">
                        @if (Model.HasPreviousPage)
                        {
                            <a href="@Url.Action("Categories", "Metadata", new { page = Model.PageNumber - 1, pageSize = Model.PageSize })" 
                               class="px-3 py-2 text-sm font-medium text-slate-500 bg-white border border-slate-300 rounded-md hover:bg-slate-50">
                                Previous
                            </a>
                        }

                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            @if (i == Model.PageNumber)
                            {
                                <span class="px-3 py-2 text-sm font-medium text-white bg-purple-600 border border-purple-600 rounded-md">
                                    @i
                                </span>
                            }
                            else
                            {
                                <a href="@Url.Action("Categories", "Metadata", new { page = i, pageSize = Model.PageSize })" 
                                   class="px-3 py-2 text-sm font-medium text-slate-500 bg-white border border-slate-300 rounded-md hover:bg-slate-50">
                                    @i
                                </a>
                            }
                        }

                        @if (Model.HasNextPage)
                        {
                            <a href="@Url.Action("Categories", "Metadata", new { page = Model.PageNumber + 1, pageSize = Model.PageSize })" 
                               class="px-3 py-2 text-sm font-medium text-slate-500 bg-white border border-slate-300 rounded-md hover:bg-slate-50">
                                Next
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    let hierarchyVisible = true;

    function confirmDelete(categoryId, categoryName) {
        if (confirm(`@Html.L("Common.AreYouSure") "${categoryName}"?`)) {
            // AJAX call to delete
            fetch(`@Url.Action("DeleteCategory", "Metadata")`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                },
                body: JSON.stringify({ id: categoryId })
            }).then(() => {
                location.reload();
            });
        }
    }

    function toggleHierarchy() {
        hierarchyVisible = !hierarchyVisible;
        const rows = document.querySelectorAll('.category-row');
        const indicators = document.querySelectorAll('.hierarchy-indicator');
        
        rows.forEach(row => {
            const level = parseInt(row.dataset.level);
            if (level > 0) {
                row.style.display = hierarchyVisible ? '' : 'none';
            }
        });
        
        indicators.forEach(indicator => {
            indicator.style.display = hierarchyVisible ? '' : 'none';
        });
        
        // Update button icon
        const button = document.querySelector('button[onclick="toggleHierarchy()"] i');
        button.className = hierarchyVisible ? 'fas fa-sitemap' : 'fas fa-list';
    }

    // Search functionality
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.querySelector('input[placeholder*="@Html.L("Common.Search")"]');
        const statusFilter = document.querySelector('select');
        
        function filterTable() {
            const searchTerm = searchInput.value.toLowerCase();
            const statusFilter = document.querySelector('select').value;
            const rows = document.querySelectorAll('.category-row');
            
            rows.forEach(row => {
                const categoryInfo = row.querySelector('td:first-child').textContent.toLowerCase();
                const status = row.querySelector('td:nth-child(3) span').textContent;
                
                const matchesSearch = categoryInfo.includes(searchTerm);
                const matchesStatus = !statusFilter || status === statusFilter;
                
                row.style.display = matchesSearch && matchesStatus ? '' : 'none';
            });
        }
        
        if (searchInput) searchInput.addEventListener('input', filterTable);
        if (statusFilter) statusFilter.addEventListener('change', filterTable);
    });

    // Expand/Collapse functionality for large hierarchies
    function toggleCategoryChildren(categoryId) {
        const rows = document.querySelectorAll(`.category-row[data-parent="${categoryId}"]`);
        rows.forEach(row => {
            row.style.display = row.style.display === 'none' ? '' : 'none';
        });
    }
</script>

<style>
    .category-row[data-level="1"] {
        background-color: rgba(248, 250, 252, 0.5);
    }
    
    .category-row[data-level="2"] {
        background-color: rgba(241, 245, 249, 0.5);
    }
    
    .category-row[data-level="3"] {
        background-color: rgba(226, 232, 240, 0.5);
    }
    
    .hierarchy-indicator {
        font-family: monospace;
        color: #94a3b8;
    }
    
    .category-row:hover {
        background-color: rgba(248, 250, 252, 0.8) !important;
    }
</style>