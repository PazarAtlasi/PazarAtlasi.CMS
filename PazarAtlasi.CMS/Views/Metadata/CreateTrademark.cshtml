@model PazarAtlasi.CMS.Domain.Entities.Metadata.Trademark

@{
    ViewData["Title"] = "Create Trademark";
}

<div class="trademark-create">
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <h4 class="text-2xl font-bold text-slate-800 inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                    Create New Trademark
                </h4>
                <p class="text-slate-500 mt-3 max-w-xl">
                    Add a new trademark or brand to your product catalog.
                </p>
            </div>
        </div>
        <div class="w-full lg:w-1/3 text-left lg:text-right">
            <div class="inline-flex items-center space-x-2">
                <a href="@Url.Action("Trademarks")" class="py-2 px-4 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg text-sm transition-colors inline-flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i> Back to Trademarks
                </a>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-md">
        <form asp-action="CreateTrademark" method="post" class="p-6">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Basic Information -->
                <div class="space-y-4">
                    <h5 class="text-lg font-semibold text-slate-800 border-b border-slate-200 pb-2">
                        <i class="fas fa-trademark mr-2 text-purple-600"></i> Basic Information
                    </h5>
                    
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-slate-700 mb-2">Trademark Name *</label>
                        <input asp-for="Name" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" placeholder="Enter trademark name">
                        <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Code" class="block text-sm font-medium text-slate-700 mb-2">Trademark Code *</label>
                        <input asp-for="Code" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" placeholder="Enter trademark code (URL-friendly)">
                        <span asp-validation-for="Code" class="text-red-600 text-sm"></span>
                        <p class="text-xs text-slate-500 mt-1">Used in URLs and system references</p>
                    </div>

                    <div>
                        <label asp-for="IntegrationCode" class="block text-sm font-medium text-slate-700 mb-2">Integration Code</label>
                        <input asp-for="IntegrationCode" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" placeholder="External system code">
                        <span asp-validation-for="IntegrationCode" class="text-red-600 text-sm"></span>
                        <p class="text-xs text-slate-500 mt-1">For integration with external systems</p>
                    </div>

                    <div>
                        <label asp-for="ShortDescription" class="block text-sm font-medium text-slate-700 mb-2">Short Description</label>
                        <textarea asp-for="ShortDescription" rows="2" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" placeholder="Brief trademark description"></textarea>
                        <span asp-validation-for="ShortDescription" class="text-red-600 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="LongDescription" class="block text-sm font-medium text-slate-700 mb-2">Long Description</label>
                        <textarea asp-for="LongDescription" rows="4" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" placeholder="Detailed trademark description"></textarea>
                        <span asp-validation-for="LongDescription" class="text-red-600 text-sm"></span>
                    </div>
                </div>

                <!-- Settings & Preview -->
                <div class="space-y-4">
                    <h5 class="text-lg font-semibold text-slate-800 border-b border-slate-200 pb-2">
                        <i class="fas fa-cog mr-2 text-purple-600"></i> Settings
                    </h5>
                    
                    <div>
                        <label asp-for="SortOrder" class="block text-sm font-medium text-slate-700 mb-2">Sort Order</label>
                        <input asp-for="SortOrder" type="number" min="0" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400" placeholder="0">
                        <span asp-validation-for="SortOrder" class="text-red-600 text-sm"></span>
                        <p class="text-xs text-slate-500 mt-1">Lower numbers appear first</p>
                    </div>

                    <div>
                        <label asp-for="Status" class="block text-sm font-medium text-slate-700 mb-2">Status</label>
                        <select asp-for="Status" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                            <option value="@PazarAtlasi.CMS.Domain.Common.Status.Active">Active</option>
                            <option value="@PazarAtlasi.CMS.Domain.Common.Status.Draft">Draft</option>
                            <option value="@PazarAtlasi.CMS.Domain.Common.Status.Pending">Pending</option>
                            <option value="@PazarAtlasi.CMS.Domain.Common.Status.Archived">Archived</option>
                        </select>
                        <span asp-validation-for="Status" class="text-red-600 text-sm"></span>
                    </div>

                    <!-- Preview Card -->
                    <div class="mt-6 p-4 bg-slate-50 border border-slate-200 rounded-lg">
                        <h6 class="text-sm font-medium text-slate-700 mb-3">Preview</h6>
                        <div class="flex items-center">
                            <div class="h-12 w-12 rounded-lg bg-purple-100 flex items-center justify-center mr-3">
                                <i class="fas fa-trademark text-purple-600 text-xl"></i>
                            </div>
                            <div>
                                <div class="text-sm font-medium text-slate-900" id="preview-name">Trademark Name</div>
                                <div class="text-xs text-slate-500" id="preview-code">trademark-code</div>
                            </div>
                        </div>
                        <div class="mt-3 pt-3 border-t border-slate-200">
                            <p class="text-xs text-slate-600" id="preview-description">Short description will appear here...</p>
                        </div>
                    </div>

                    <!-- Info Box -->
                    <div class="p-4 bg-blue-50 border border-blue-200 rounded-lg">
                        <div class="flex items-start">
                            <i class="fas fa-lightbulb text-blue-600 mt-0.5 mr-2"></i>
                            <div class="text-sm text-blue-800">
                                <p class="font-medium mb-1">Trademark Tips</p>
                                <ul class="text-xs space-y-1 list-disc list-inside">
                                    <li>Use official brand names</li>
                                    <li>Keep codes URL-friendly</li>
                                    <li>Add detailed descriptions for SEO</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-end space-x-3 mt-8 pt-6 border-t border-slate-200">
                <a href="@Url.Action("Trademarks")" class="py-2 px-4 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg text-sm transition-colors">
                    Cancel
                </a>
                <button type="submit" class="py-2 px-4 bg-purple-800 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors inline-flex items-center">
                    <i class="fas fa-save mr-2"></i> Create Trademark
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const nameInput = document.querySelector('input[name="Name"]');
        const codeInput = document.querySelector('input[name="Code"]');
        const descInput = document.querySelector('textarea[name="ShortDescription"]');
        const previewName = document.getElementById('preview-name');
        const previewCode = document.getElementById('preview-code');
        const previewDesc = document.getElementById('preview-description');

        function updatePreview() {
            previewName.textContent = nameInput.value || 'Trademark Name';
            previewCode.textContent = codeInput.value || 'trademark-code';
            previewDesc.textContent = descInput.value || 'Short description will appear here...';
        }

        function generateCode() {
            if (!codeInput.value && nameInput.value) {
                const code = nameInput.value
                    .toLowerCase()
                    .replace(/[^a-z0-9\s-]/g, '')
                    .replace(/\s+/g, '-')
                    .replace(/-+/g, '-')
                    .trim('-');
                codeInput.value = code;
                updatePreview();
            }
        }

        nameInput.addEventListener('input', function() {
            updatePreview();
            generateCode();
        });

        codeInput.addEventListener('input', updatePreview);
        descInput.addEventListener('input', updatePreview);

        updatePreview();
    });
</script>