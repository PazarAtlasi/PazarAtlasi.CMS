@model PazarAtlasi.CMS.Models.ViewModels.VariantListResponse

@{
    ViewData["Title"] = Html.L("Navigation.Variants");
}

<div class="bg-white rounded-xl shadow-md">
    <div class="p-6 border-b border-slate-100">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-slate-800 flex items-center">
                    <i class="fas fa-layer-group mr-3 text-purple-600"></i>
                    @Html.L("Navigation.Variants")
                </h1>
                <p class="text-slate-500 mt-1">Ürün varyantlarını yönetin</p>
            </div>
            <div class="flex items-center space-x-3">
                <a href="@Url.Action("CreateVariant")" class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    @Html.L("Variant.CreateNew")
                </a>
            </div>
        </div>
    </div>

    <div class="p-6">
        @if (Model.Variants.Any())
        {
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-slate-200">
                            <th class="text-left py-3 px-4 font-semibold text-slate-700">@Html.L("Variant.Name")</th>
                            <th class="text-left py-3 px-4 font-semibold text-slate-700">@Html.L("Variant.Code")</th>
                            <th class="text-left py-3 px-4 font-semibold text-slate-700">@Html.L("Variant.Product")</th>
                            <th class="text-left py-3 px-4 font-semibold text-slate-700">@Html.L("Common.Status")</th>
                            <th class="text-left py-3 px-4 font-semibold text-slate-700">@Html.L("Common.Actions")</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var variant in Model.Variants)
                        {
                            <tr class="border-b border-slate-100 hover:bg-slate-50">
                                <td class="py-3 px-4">
                                    <div>
                                        <div class="font-medium text-slate-800">@variant.Name</div>
                                        @if (!string.IsNullOrEmpty(variant.ShortDescription))
                                        {
                                            <div class="text-sm text-slate-500">@variant.ShortDescription</div>
                                        }
                                    </div>
                                </td>
                                <td class="py-3 px-4">
                                    <span class="font-mono text-sm bg-slate-100 px-2 py-1 rounded">@variant.Code</span>
                                </td>
                                <td class="py-3 px-4">
                                    <span class="text-blue-600">@variant.ProductName</span>
                                </td>
                                <td class="py-3 px-4">
                                    @if (variant.Status == PazarAtlasi.CMS.Domain.Common.Status.Active)
                                    {
                                        <span class="px-2 py-1 bg-green-100 text-green-800 text-xs rounded-full">
                                            <i class="fas fa-check-circle mr-1"></i>@Html.L("Common.Active")
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-2 py-1 bg-yellow-100 text-yellow-800 text-xs rounded-full">
                                            <i class="fas fa-clock mr-1"></i>@variant.Status
                                        </span>
                                    }
                                </td>
                                <td class="py-3 px-4">
                                    <div class="flex items-center space-x-2">
                                        <a href="@Url.Action("EditVariant", new { id = variant.Id })" 
                                           class="text-blue-600 hover:text-blue-800 p-1 rounded hover:bg-blue-50" 
                                           title="@Html.L("Common.Edit")">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="@Url.Action("DeleteVariant", new { id = variant.Id })" class="inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" 
                                                    class="text-red-600 hover:text-red-800 p-1 rounded hover:bg-red-50" 
                                                    title="@Html.L("Common.Delete")"
                                                    onclick="return confirm('@Html.L("Common.AreYouSure")')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-layer-group text-2xl text-slate-400"></i>
                </div>
                <h3 class="text-lg font-medium text-slate-800 mb-2">@Html.L("Navigation.Variants")</h3>
                <p class="text-slate-500 mb-4">Henüz hiç varyant eklenmemiş.</p>
                <a href="@Url.Action("CreateVariant")" class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    @Html.L("Variant.CreateNew")
                </a>
            </div>
        }
    </div>
</div>