<!-- Quick Actions -->
<div class="bg-white rounded-xl shadow-md">
    <div class="p-6 border-b border-slate-100">
        <h5 class="text-lg font-semibold text-slate-800 flex items-center">
            <i class="fas fa-bolt mr-2 text-purple-600"></i>
            Quick Actions
        </h5>
    </div>
    <div class="p-6 space-y-3">
        <button type="button" onclick="addNewSection()" class="w-full py-2 px-4 bg-green-600 hover:bg-green-700 text-white rounded-lg text-sm transition-colors inline-flex items-center justify-center">
            <i class="fas fa-plus mr-2"></i> Add Section
        </button>
        <button type="button" onclick="previewLayout()" class="w-full py-2 px-4 bg-purple-600 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors inline-flex items-center justify-center">
            <i class="fas fa-eye mr-2"></i> Preview Layout
        </button>
        <button type="button" onclick="duplicateLayout()" class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm transition-colors inline-flex items-center justify-center">
            <i class="fas fa-copy mr-2"></i> Duplicate Layout
        </button>
        <hr class="my-3">
        <button type="button" onclick="deleteLayout()" class="w-full py-2 px-4 bg-red-600 hover:bg-red-700 text-white rounded-lg text-sm transition-colors inline-flex items-center justify-center">
            <i class="fas fa-trash mr-2"></i> Delete Layout
        </button>
    </div>
</div>

<script>
    function previewLayout() {
        console.log('Preview layout');
        alert('Preview functionality will be implemented.');
    }

    function duplicateLayout() {
        if (confirm('Are you sure you want to duplicate this layout?')) {
            console.log('Duplicate layout');
            alert('Duplicate functionality will be implemented.');
        }
    }

    function deleteLayout() {
        if (confirm('Are you sure you want to delete this layout? This action cannot be undone.')) {
            console.log('Delete layout');
            alert('Delete functionality will be implemented.');
        }
    }
</script>