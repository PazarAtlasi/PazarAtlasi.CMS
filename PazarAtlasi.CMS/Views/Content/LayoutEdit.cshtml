@model PazarAtlasi.CMS.Models.ViewModels.LayoutEditViewModel
@{
    ViewData["Title"] = $"Edit Layout - {Model.Name}";
}

@section Styles {
    <link rel="stylesheet" href="~/css/page-edit.css" />
    <link rel="stylesheet" href="~/css/section-item-modal.css" />
}

<div class="layout-edit">
    <!-- Header -->
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <div class="flex items-center mb-2">
                    <a href="@Url.Action("LayoutDetails", "Content", new { id = Model.Id })"
                        class="text-purple-600 hover:text-purple-800 mr-3">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <h4
                        class="text-2xl font-bold text-slate-800 inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                        Edit: @Model.Name
                        @if (Model.IsDefault)
                        {
                            <span class="ml-3 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                <i class="fas fa-star mr-1"></i> Default Layout
                            </span>
                        }
                    </h4>
                    <span
                        class="ml-4 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium status-badge @Html.Raw(GetStatusCssClass(Model.Status))">
                        @Model.Status.ToString()
                    </span>
                </div>
                <p class="text-slate-500 mt-3 max-w-xl">
                    Edit layout structure, sections, and settings. Changes will be saved as draft until published.
                </p>
            </div>
        </div>
        <div class="w-full lg:w-1/3 text-left lg:text-right">
            <div class="inline-flex items-center space-x-2">
                <button type="button" data-action="save-draft"
                    class="py-2 px-4 bg-gray-600 hover:bg-gray-700 text-white rounded-lg text-sm transition-colors inline-flex items-center shadow-sm">
                    <i class="fas fa-save mr-2"></i> Save Draft
                </button>
                <button type="button" data-action="publish"
                    class="py-2 px-4 bg-green-600 hover:bg-green-700 text-white rounded-lg text-sm transition-colors inline-flex items-center shadow-sm">
                    <i class="fas fa-check mr-2"></i> Publish
                </button>
                <button type="button" data-action="preview"
                    class="py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm transition-colors inline-flex items-center shadow-sm">
                    <i class="fas fa-eye mr-2"></i> Preview
                </button>
            </div>
        </div>
    </div>

    <!-- Validation Summary -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <div class="flex">
                <i class="fas fa-exclamation-circle text-red-400 mr-2 mt-0.5"></i>
                <div>
                    <h3 class="text-sm font-medium text-red-800">Please correct the following errors:</h3>
                    <div class="mt-2 text-sm text-red-700">
                        <ul class="list-disc pl-5 space-y-1">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
            <div class="flex">
                <i class="fas fa-check-circle text-green-400 mr-2 mt-0.5"></i>
                <p class="text-sm text-green-700">@TempData["SuccessMessage"]</p>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
            <div class="flex">
                <i class="fas fa-exclamation-circle text-red-400 mr-2 mt-0.5"></i>
                <p class="text-sm text-red-700">@TempData["ErrorMessage"]</p>
            </div>
        </div>
    }

    <form id="layoutEditForm" method="post" action="@Url.Action("LayoutEdit", "Content")">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 items-start">
            <!-- Sidebar -->
            <div class="lg:col-span-1 space-y-6">
                @await Html.PartialAsync("~/Views/Content/_LayoutSettingsPartial.cshtml", Model)
                @await Html.PartialAsync("~/Views/Content/_LayoutQuickActionsPartial.cshtml")
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-3 space-y-6">
                @await Html.PartialAsync("~/Views/Content/_LayoutSectionsPartial.cshtml", Model)
            </div>
        </div>
    </form>
</div>

<!-- SectionSelectionModal removed - now using direct SectionModal.show() -->

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script src="~/js/Content/Content.Page.Section.Modal.js"></script>
    <script src="~/js/Content/Content.Layout.js"></script>
    <script>
        // Set global layout ID for section modal and schema updates
        window.currentLayoutId = @Model.Id;
        window.currentPageId = null; // No page ID for layout sections
        
        // Initialize Layout Manager
        if (typeof LayoutManager !== 'undefined') {
            LayoutManager.init(@Model.Id);
        }
            // Add new section function for layout - directly open SectionModal
        function addNewSection() {
            // Open section modal with layout ID instead of page ID
            if (typeof SectionModal !== 'undefined') {
                SectionModal.show(0, 0, @Model.Id); // sectionId=0, pageId=0, layoutId=@Model.Id
            } else {
                console.error('SectionModal not available');
            }
        }
    </script>
}

@functions {
    private string GetStatusCssClass(PazarAtlasi.CMS.Domain.Common.Status status)
    {
        return status switch
        {
            PazarAtlasi.CMS.Domain.Common.Status.Active => "bg-green-100 text-green-800",
            PazarAtlasi.CMS.Domain.Common.Status.Pending => "bg-blue-100 text-blue-800",
            PazarAtlasi.CMS.Domain.Common.Status.Draft => "bg-yellow-100 text-yellow-800",
            PazarAtlasi.CMS.Domain.Common.Status.Archived => "bg-gray-100 text-gray-800",
            _ => "bg-red-100 text-red-800"
        };
    }
}