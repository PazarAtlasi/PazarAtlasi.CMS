@model PazarAtlasi.CMS.Application.Dtos.SectionItemFieldDto

@{
    var value = Model.DefaultValue;
    var level = ViewBag.Level as int? ?? 0;

    // Check if this field supports multiple languages
    var isTranslatable = Model.IsTranslatable == true;
    var availableLanguages = ViewBag.AvailableLanguages as List<PazarAtlasi.CMS.Models.ViewModels.LanguageViewModel> ?? new
    List<PazarAtlasi.CMS.Models.ViewModels.LanguageViewModel>();

    // Get default language label or use FieldKey
    var fieldLabel = Model.Translations?.FirstOrDefault()?.Label ?? Model.FieldKey;
    var fieldDescription = Model.Translations?.FirstOrDefault()?.Description;
}

<div class="field-container" data-field-name="@Model.FieldKey" data-translatable="@isTranslatable.ToString().ToLower()" data-level="@level">
    @if (isTranslatable && availableLanguages.Any())
    {
        <!-- Multi-language field with tabs -->
        <div class="mb-3">
            <label class="block text-sm font-medium text-slate-700 mb-1">
                @fieldLabel
                @if (Model.Required)
                {
                    <span class="text-red-500">*</span>
                }
                <span class="ml-1 text-xs text-purple-500">(Multi-language)</span>
            </label>
            @if (!string.IsNullOrEmpty(fieldDescription))
            {
                <p class="text-xs text-slate-500 mb-2">@fieldDescription</p>
            }

            <!-- Language tabs -->
            <div class="border-b border-slate-200 mb-2">
                <nav class="-mb-px flex space-x-2" aria-label="Language tabs">
                    @foreach (var language in availableLanguages.Take(3))
                    {
                        <button type="button"
                            class="lang-tab whitespace-nowrap py-1 px-2 border-b-2 font-medium text-xs @(language.IsDefault ? "border-purple-500 text-purple-600" : "border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300")"
                            data-language="@language.Code" data-language-id="@language.Id"
                            onclick="SectionModal.switchItemLanguageTab(this)">
                            @language.Code.ToUpper()
                            @if (language.IsDefault)
                            {
                                <span class="ml-1 text-xs">?</span>
                            }
                        </button>
                    }
                </nav>
            </div>

            <!-- Language content panels -->
            <div class="language-panels">
                @foreach (var language in availableLanguages.Take(3))
                {
                    <div class="language-panel @(language.IsDefault ? "" : "hidden")" data-language="@language.Code">
                        @{
                            var langValue = value; // TODO: Get language-specific value
                        }

                        @switch (Model.Type.ToString().ToLower())
                        {
                            case "text":
                                <input type="text"
                                    class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="@Model.Placeholder (@language.Name)" maxlength="@Model.MaxLength"
                                    required="@Model.Required" value="@langValue" data-field-key="@Model.FieldKey"
                                    data-language-code="@language.Code" data-language-id="@language.Id" />
                                break;

                            case "textarea":
                                <textarea rows="@(Model.MaxLength > 200 ? 4 : 2)"
                    class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                    placeholder="@Model.Placeholder (@language.Name)" maxlength="@Model.MaxLength"
                    required="@Model.Required" data-field-key="@Model.FieldKey" data-language-code="@language.Code"
                    data-language-id="@language.Id">@langValue</textarea>
                                break;

                            case "url":
                                <input type="url"
                                    class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="@Model.Placeholder (@language.Name)" required="@Model.Required" value="@langValue"
                                    data-field-key="@Model.FieldKey" data-language-code="@language.Code" data-language-id="@language.Id"/>
                                break;

                            default:
                                <input type="text"
                                    class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                                    placeholder="@Model.Placeholder (@language.Name)" value="@langValue"
                                    data-field-key="@Model.FieldKey" data-language-code="@language.Code" data-language-id="@language.Id"/>
                                break;
                        }
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Single language field (non-translatable) -->
        <div>
            <label class="block text-sm font-medium text-slate-700 mb-1">
                @fieldLabel
                @if (Model.Required)
                {
                    <span class="text-red-500">*</span>
                }
            </label>
            @if (!string.IsNullOrEmpty(fieldDescription))
            {
                <p class="text-xs text-slate-500 mb-2">@fieldDescription</p>
            }

            @switch (Model.Type.ToString())
            {
                case "text":
                    <input type="text" 
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        placeholder="@Model.Placeholder" maxlength="@Model.MaxLength" required="@Model.Required" value="@value"
                        data-field-key="@Model.FieldKey"/>
                    break;

                case "textarea":
                    <textarea  rows="@(Model.MaxLength > 200 ? 4 : 2)"
            class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="@Model.Placeholder" maxlength="@Model.MaxLength" required="@Model.Required"
            data-field-key="@Model.FieldKey">@value</textarea>
                    break;

                case "richtext":
                    <div class="richtext-editor border border-slate-300 rounded-lg">
                        <textarea class="w-full px-3 py-2 text-sm"
                placeholder="@Model.Placeholder" required="@Model.Required" data-field-key="@Model.FieldKey">@value</textarea>
                    </div>
                    break;

                case "url":
                    <input type="url" 
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        placeholder="@Model.Placeholder" required="@Model.Required" value="@value" data-field-key="@Model.FieldKey" />
                    break;

                case "image":
                    <div class="image-upload-container">
                        <input type="hidden"  class="image-path-input" value="@value"
                            data-field-key="@Model.FieldKey" />
                        <div class="flex items-center space-x-2">
                            <input type="file" class="hidden" accept="image/*"/>
                            <button type="button"
                                class="px-3 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg text-sm transition-colors">
                                <i class="fas fa-upload mr-2"></i> Upload Image
                            </button>
                            @if (!string.IsNullOrEmpty(value))
                            {
                                <span class="text-xs text-green-600"><i class="fas fa-check mr-1"></i> Uploaded</span>
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(value))
                        {
                            <img src="@value" class="mt-2 max-h-20 rounded" alt="Preview" />
                        }
                        @if (!string.IsNullOrEmpty(Model.Placeholder))
                        {
                            <p class="mt-1 text-xs text-slate-500">@Model.Placeholder</p>
                        }
                    </div>
                    break;

                case "select":
                    <select 
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        required="@Model.Required" data-field-key="@Model.FieldKey">
                        <option value="">Select...</option>
                        @if (Model.Options != null)
                        {
                            @foreach (var option in Model.Options)
                            {
                                <option value="@option" selected="@(value == option)">@option</option>
                            }
                        }
                    </select>
                    break;

                case "number":
                    <input type="number" 
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        placeholder="@Model.Placeholder" required="@Model.Required" value="@value" data-field-key="@Model.FieldKey">
                    break;

                case "checkbox":
                    <label class="flex items-center space-x-2">
                        <input type="checkbox" 
                            class="w-4 h-4 text-blue-600 border-slate-300 rounded focus:ring-blue-500"
                            checked="@(value == "true" || value == "True")" data-field-key="@Model.FieldKey" />
                        <span class="text-sm text-slate-600">@Model.Placeholder</span>
                    </label>
                    break;

                default:
                    <input type="text" 
                        class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                        placeholder="@Model.Placeholder" value="@value" data-field-key="@Model.FieldKey"/>
                    break;
            }
        </div>
    }

    @if (Model.MaxLength > 0 && (Model.Type.ToString() == "text" || Model.Type.ToString() == "textarea") &&
        !isTranslatable)
    {
        <p class="mt-1 text-xs text-slate-500">Max @Model.MaxLength characters</p>
    }

    @if (isTranslatable && Model.MaxLength > 0 && (Model.Type.ToString() == "text" || Model.Type.ToString() ==
        "textarea"))
    {
        <p class="mt-1 text-xs text-slate-500">Max @Model.MaxLength characters per language</p>
    }
</div>