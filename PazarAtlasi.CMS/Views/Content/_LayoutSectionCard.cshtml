@model PazarAtlasi.CMS.Models.ViewModels.LayoutSectionViewModel

<div class="layout-section-card bg-white border border-slate-200 rounded-lg p-4 hover:shadow-sm transition-shadow">
    <div class="flex items-start justify-between">
        <div class="flex-1">
            <div class="flex items-center space-x-2 mb-2">
                <div class="w-8 h-8 bg-slate-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-layer-group text-slate-600 text-sm"></i>
                </div>
                <div>
                    <h4 class="text-sm font-semibold text-slate-800">
                        @(Model.Title ?? Model.SectionName ?? Model.SectionType.ToString())
                    </h4>
                    <div class="flex items-center space-x-2 text-xs text-slate-500">
                        <span>@Model.SectionType.ToString()</span>
                        @if (!string.IsNullOrEmpty(Model.Key))
                        {
                            <span>•</span>
                            <span class="font-mono bg-slate-100 px-1 rounded">@Model.Key</span>
                        }
                        <span>•</span>
                        <span>Order: @Model.SortOrder</span>
                        @if (Model.IsRequired)
                        {
                            <span>•</span>
                            <span class="text-red-600 font-medium">Required</span>
                        }
                    </div>
                </div>
            </div>
            
            @if (Model.SectionItems.Any())
            {
                <div class="mt-3">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-xs font-medium text-slate-600">Items (@Model.SectionItems.Count)</span>
                    </div>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-2">
                        @foreach (var item in Model.SectionItems.Take(4))
                        {
                            <div class="bg-slate-50 border border-slate-200 rounded p-2">
                                <div class="flex items-center space-x-2">
                                    <i class="@item.TypeIcon text-slate-500 text-xs"></i>
                                    <span class="text-xs text-slate-700 truncate">
                                        @(item.Translations.FirstOrDefault()?.Title ?? item.Title ?? "Untitled")
                                    </span>
                                </div>
                                @if (item.Fields.Any())
                                {
                                    <div class="mt-1 flex flex-wrap gap-1">
                                        @foreach (var field in item.Fields.Take(3))
                                        {
                                            <span class="text-xs bg-slate-200 text-slate-600 px-1 rounded">
                                                @field.FieldKey
                                            </span>
                                        }
                                        @if (item.Fields.Count > 3)
                                        {
                                            <span class="text-xs text-slate-400">+@(item.Fields.Count - 3)</span>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        @if (Model.SectionItems.Count > 4)
                        {
                            <div class="bg-slate-50 border border-dashed border-slate-300 rounded p-2 flex items-center justify-center">
                                <span class="text-xs text-slate-500">+@(Model.SectionItems.Count - 4) more</span>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="mt-3 text-center py-2 bg-slate-50 border border-dashed border-slate-300 rounded">
                    <span class="text-xs text-slate-500">No items</span>
                </div>
            }
        </div>
        
        <div class="flex items-center space-x-1 ml-4">
            <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium @(GetStatusClass(Model.Status))">
                @Model.Status.ToString()
            </span>
            <div class="flex items-center space-x-1">
                <button type="button" class="p-1 text-slate-400 hover:text-blue-600 rounded" title="View in Layout">
                    <i class="fas fa-external-link-alt text-xs"></i>
                </button>
                <button type="button" class="p-1 text-slate-400 hover:text-slate-600 rounded" title="Layout Section">
                    <i class="fas fa-info-circle text-xs"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetStatusClass(PazarAtlasi.CMS.Domain.Common.Status status)
    {
        return status switch
        {
            PazarAtlasi.CMS.Domain.Common.Status.Active => "bg-green-100 text-green-800",
            PazarAtlasi.CMS.Domain.Common.Status.Draft => "bg-yellow-100 text-yellow-800",
            PazarAtlasi.CMS.Domain.Common.Status.Pending => "bg-blue-100 text-blue-800",
            _ => "bg-gray-100 text-gray-800"
        };
    }
}