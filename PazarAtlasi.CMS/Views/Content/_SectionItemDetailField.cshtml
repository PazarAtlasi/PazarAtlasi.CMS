@using PazarAtlasi.CMS.Models.ViewModels
@model PazarAtlasi.CMS.Application.Dtos.SectionItemFieldUpdateDto
@{
    var fieldIndex = ViewData["FieldIndex"] as int? ?? 0;
    var languages = ViewBag.Languages as List<LanguageViewModel> ?? new
    List<LanguageViewModel>();
}

<div class="bg-white border border-gray-200 rounded-lg shadow-sm mb-4" data-field-index="@fieldIndex">
    <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
        <div class="flex items-center">
            <i class="fas fa-cog text-blue-600 mr-2"></i>
            <h6 class="text-sm font-medium text-gray-900">
                Field: @(Model.FieldName ?? "New Field")
            </h6>
            @{
                if (Model.Required)
                {
                    <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        Required
                    </span>
                }
                if (Model.IsTranslatable)
                {
                    <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        Translatable
                    </span>
                }
            }
        </div>
        <div class="flex items-center space-x-2">
            <button type="button"
                    class="inline-flex items-center px-2 py-1 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
                    onclick="toggleFieldDetails(@fieldIndex)" title="Toggle Details">
                <i class="fas fa-chevron-down" id="fieldToggleIcon_@fieldIndex"></i>
            </button>
            <button type="button"
                    class="inline-flex items-center px-2 py-1 border border-transparent text-xs font-medium rounded text-red-700 bg-red-100 hover:bg-red-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
                    onclick="removeField(@fieldIndex)" title="Remove Field">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </div>
    <div class="p-4" id="fieldDetails_@fieldIndex">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Basic Field Information -->
            <div class="space-y-4">
                <div>
                    <label for="SectionItem_Fields_@(fieldIndex)__FieldKey" class="block text-sm font-medium text-gray-700 mb-2">
                        Field Key <span class="text-red-500">*</span>
                    </label>
                    <input name="SectionItem.Fields[@fieldIndex].FieldKey" 
                           id="SectionItem_Fields_@(fieldIndex)__FieldKey"
                           value="@Model.FieldKey"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                           placeholder="e.g., title, image, url" />
                    <p class="mt-1 text-sm text-gray-500">Unique identifier for this field</p>
                    <span data-valmsg-for="SectionItem.Fields[@fieldIndex].FieldKey" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label for="SectionItem_Fields_@(fieldIndex)__FieldName" class="block text-sm font-medium text-gray-700 mb-2">
                        Field Name <span class="text-red-500">*</span>
                    </label>
                    <input name="SectionItem.Fields[@fieldIndex].FieldName" 
                           id="SectionItem_Fields_@(fieldIndex)__FieldName"
                           value="@Model.FieldName"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                           placeholder="e.g., Title, Image URL" />
                    <p class="mt-1 text-sm text-gray-500">Display name for this field</p>
                    <span data-valmsg-for="SectionItem.Fields[@fieldIndex].FieldName" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label for="SectionItem_Fields_@(fieldIndex)__Type" class="block text-sm font-medium text-gray-700 mb-2">
                        Field Type <span class="text-red-500">*</span>
                    </label>
                    <select name="SectionItem.Fields[@fieldIndex].Type" 
                            id="SectionItem_Fields_@(fieldIndex)__Type"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                        <option value="">Select Type</option>
                        @foreach (var fieldType in Model.FieldTypes)
                        {
                            var isSelected = fieldType.Value == ((int)Model.Type).ToString();
                            <option value="@fieldType.Value" selected="@isSelected">
                                @fieldType.Text
                            </option>
                        }
                    </select>
                    <span data-valmsg-for="SectionItem.Fields[@fieldIndex].Type" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label for="SectionItem_Fields_@(fieldIndex)__SortOrder" class="block text-sm font-medium text-gray-700 mb-2">Sort Order</label>
                    <input name="SectionItem.Fields[@fieldIndex].SortOrder" 
                           id="SectionItem_Fields_@(fieldIndex)__SortOrder"
                           value="@Model.SortOrder"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                           type="number" />
                    <p class="mt-1 text-sm text-gray-500">Display order (lower numbers first)</p>
                    <span data-valmsg-for="SectionItem.Fields[@fieldIndex].SortOrder" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <!-- Field Settings -->
            <div class="space-y-4">
                <div>
                    <label for="SectionItem_Fields_@(fieldIndex)__Placeholder" class="block text-sm font-medium text-gray-700 mb-2">Placeholder</label>
                    <input name="SectionItem.Fields[@fieldIndex].Placeholder" 
                           id="SectionItem_Fields_@(fieldIndex)__Placeholder"
                           value="@Model.Placeholder"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter placeholder text" />
                    <span data-valmsg-for="SectionItem.Fields[@fieldIndex].Placeholder" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label for="SectionItem_Fields_@(fieldIndex)__DefaultValue" class="block text-sm font-medium text-gray-700 mb-2">Default Value</label>
                    <input name="SectionItem.Fields[@fieldIndex].DefaultValue" 
                           id="SectionItem_Fields_@(fieldIndex)__DefaultValue"
                           value="@Model.DefaultValue"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                           placeholder="Enter default value" />
                    <span data-valmsg-for="SectionItem.Fields[@fieldIndex].DefaultValue" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label for="SectionItem_Fields_@(fieldIndex)__MaxLength" class="block text-sm font-medium text-gray-700 mb-2">Max Length</label>
                    <input name="SectionItem.Fields[@fieldIndex].MaxLength" 
                           id="SectionItem_Fields_@(fieldIndex)__MaxLength"
                           value="@Model.MaxLength"
                           class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                           type="number" min="1" />
                    <p class="mt-1 text-sm text-gray-500">Maximum character length (optional)</p>
                    <span data-valmsg-for="SectionItem.Fields[@fieldIndex].MaxLength" class="text-red-600 text-sm"></span>
                </div>

                <div>
                    <label for="SectionItem_Fields_@(fieldIndex)__OptionsJson" class="block text-sm font-medium text-gray-700 mb-2">Options JSON</label>
                    <textarea name="SectionItem.Fields[@fieldIndex].OptionsJson" 
                              id="SectionItem_Fields_@(fieldIndex)__OptionsJson"
                              class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                              rows="3" placeholder='{"option1": "Value 1", "option2": "Value 2"}'>@Model.OptionsJson</textarea>
                    <p class="mt-1 text-sm text-gray-500">JSON options for select/radio fields</p>
                    <span data-valmsg-for="SectionItem.Fields[@fieldIndex].OptionsJson" class="text-red-600 text-sm"></span>
                </div>
            </div>
        </div>

        <!-- Field Settings Checkboxes -->
        <div class="mt-6 pt-4 border-t border-gray-200">
            <div class="space-y-3">
                <div class="flex items-center">
                    <input name="SectionItem.Fields[@fieldIndex].Required" 
                           id="SectionItem_Fields_@(fieldIndex)__Required"
                           value="true"
                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                           type="checkbox" @(Model.Required ? "checked" : "") />
                    <input name="SectionItem.Fields[@fieldIndex].Required" type="hidden" value="false" />
                    <label for="SectionItem_Fields_@(fieldIndex)__Required" class="ml-3 text-sm font-medium text-gray-700">
                        Required Field
                    </label>
                </div>

                <div class="flex items-center">
                    <input name="SectionItem.Fields[@fieldIndex].IsTranslatable" 
                           id="SectionItem_Fields_@(fieldIndex)__IsTranslatable"
                           value="true"
                           class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" 
                           type="checkbox" @(Model.IsTranslatable ? "checked" : "") />
                    <input name="SectionItem.Fields[@fieldIndex].IsTranslatable" type="hidden" value="false" />
                    <label for="SectionItem_Fields_@(fieldIndex)__IsTranslatable" class="ml-3 text-sm font-medium text-gray-700">
                        Translatable Field
                    </label>
                </div>
                <p class="ml-7 text-sm text-gray-500">Enable multi-language support for this field</p>
            </div>
        </div>

        <!-- Field Translations -->
        @if (Model.IsTranslatable && Model.Translations.Any())
        {
            <div class="mt-6 pt-4 border-t border-gray-200">
                <h6 class="text-sm font-medium text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-language text-blue-600 mr-2"></i>
                    Field Translations
                </h6>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    @for (int i = 0; i < Model.Translations.Count; i++)
                    {
                        var translation = Model.Translations[i];
                        var language = languages.FirstOrDefault(l => l.Id == translation.LanguageId);

                        <div class="border border-gray-200 rounded-lg">
                            <div class="px-3 py-2 bg-gray-50 border-b border-gray-200">
                                <h6 class="text-xs font-medium text-gray-900">
                                    @(language?.Name ?? "Unknown Language")
                                    <span class="text-gray-500">(@(language?.Code ?? "N/A"))</span>
                                </h6>
                            </div>
                            <div class="p-3 space-y-3">
                                <input type="hidden" asp-for="Translations[i].Id" />
                                <input type="hidden" asp-for="Translations[i].SectionItemFieldId" />
                                <input type="hidden" asp-for="Translations[i].LanguageId" />

                                <div>
                                    <label asp-for="Translations[i].Label"
                                           class="block text-xs font-medium text-gray-700 mb-1">Label</label>
                                    <input asp-for="Translations[i].Label"
                                           class="w-full px-2 py-1 text-sm border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                                           placeholder="Field label" />
                                    <span asp-validation-for="Translations[i].Label" class="text-red-600 text-xs"></span>
                                </div>

                                <div>
                                    <label asp-for="Translations[i].Description"
                                           class="block text-xs font-medium text-gray-700 mb-1">Description</label>
                                    <textarea asp-for="Translations[i].Description"
                                              class="w-full px-2 py-1 text-sm border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                                              rows="2" placeholder="Field description"></textarea>
                                    <span asp-validation-for="Translations[i].Description" class="text-red-600 text-xs"></span>
                                </div>

                                <div>
                                    <label asp-for="Translations[i].Placeholder"
                                           class="block text-xs font-medium text-gray-700 mb-1">Placeholder</label>
                                    <input asp-for="Translations[i].Placeholder"
                                           class="w-full px-2 py-1 text-sm border border-gray-300 rounded focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                                           placeholder="Placeholder text" />
                                    <span asp-validation-for="Translations[i].Placeholder" class="text-red-600 text-xs"></span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Hidden fields for form binding -->
        <input type="hidden" name="SectionItem.Fields[@fieldIndex].Id" value="@Model.Id" />
        <input type="hidden" name="SectionItem.Fields[@fieldIndex].SectionItemId" value="@Model.SectionItemId" />
    </div>
</div>

<script>
    function toggleFieldDetails(fieldIndex) {
        const details = document.getElementById('fieldDetails_' + fieldIndex);
        const icon = document.getElementById('fieldToggleIcon_' + fieldIndex);

        if (details.style.display === 'none') {
            details.style.display = 'block';
            icon.className = 'fas fa-chevron-down';
        } else {
            details.style.display = 'none';
            icon.className = 'fas fa-chevron-right';
        }
    }

    function removeField(fieldIndex) {
        // Use SweetAlert2 for consistent UI
        SwalHelper.deleteConfirm(
            'Field Silinsin mi?',
            'Bu field ve tüm verileri kalıcı olarak silinecek. Bu işlem geri alınamaz.',
            {
                confirmButtonText: 'Evet, Sil',
                cancelButtonText: 'İptal'
            }
        ).then((result) => {
            if (result.isConfirmed) {
                const fieldCard = document.querySelector('[data-field-index="' + fieldIndex + '"]');
                if (fieldCard) {
                    // Add fade out animation
                    fieldCard.style.transition = 'opacity 0.3s ease-out, transform 0.3s ease-out';
                    fieldCard.style.opacity = '0';
                    fieldCard.style.transform = 'translateX(-20px)';
                    
                    setTimeout(() => {
                        fieldCard.remove();
                        
                        // Update field indices after removal
                        if (typeof updateFieldIndices === 'function') {
                            updateFieldIndices();
                        }
                        
                        // Decrement global counter if available
                        if (typeof fieldCounter !== 'undefined') {
                            fieldCounter = Math.max(0, fieldCounter - 1);
                        }
                        
                        // Show success toast
                        SwalHelper.toast('Field başarıyla silindi', 'success');
                    }, 300);
                }
            }
        });
    }
</script>