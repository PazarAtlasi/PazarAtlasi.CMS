@model PazarAtlasi.CMS.Models.ViewModels.PageEditViewModel

<!-- Translations Panel -->
<div id="translationsPanel" class="bg-white rounded-xl shadow-md hidden">
    <div class="p-6 border-b border-slate-100">
        <div class="flex items-center justify-between">
            <h5 class="text-lg font-semibold text-slate-800 flex items-center">
                <i class="fas fa-language mr-2 text-purple-600"></i>
                Page Translations
            </h5>
            <button type="button" class="text-slate-400 hover:text-slate-600" onclick="toggleTranslationsPanel()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <p class="text-sm text-slate-500 mt-1">Manage page translations for different languages</p>
    </div>
    
    <div class="p-6">
        @if (Model.AvailableLanguages != null && Model.AvailableLanguages.Any())
        {
            <!-- Language Tabs -->
            <div class="border-b border-slate-200 mb-6">
                <nav class="-mb-px flex space-x-8">
                    @for (int i = 0; i < Model.AvailableLanguages.Count; i++)
                    {
                        var language = Model.AvailableLanguages[i];
                        var isDefault = language.IsDefault;
                        var isActive = i == 0; // First tab active by default
                        
                        <button type="button" 
                                class="language-tab py-2 px-1 border-b-2 font-medium text-sm transition-colors @(isActive ? "border-purple-500 text-purple-600" : "border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300")"
                                data-language-id="@language.Id"
                                onclick="switchTranslationTab(@language.Id)">
                            <div class="flex items-center space-x-2">
                                <i class="fas fa-language text-xs"></i>
                                <span>@language.Name</span>
                                @if (isDefault)
                                {
                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        Default
                                    </span>
                                }
                            </div>
                        </button>
                    }
                </nav>
            </div>

            <!-- Translation Content -->
            <div class="translation-contents">
                @for (int i = 0; i < Model.AvailableLanguages.Count; i++)
                {
                    var language = Model.AvailableLanguages[i];
                    var translation = Model.Translations?.FirstOrDefault(t => t.LanguageId == language.Id);
                    var isActive = i == 0; // First tab active by default
                    
                    <div class="translation-content @(isActive ? "" : "hidden")" data-language-id="@language.Id">
                        <div class="space-y-6">
                            <!-- Page Name Translation -->
                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-2">
                                    <i class="fas fa-heading mr-1 text-slate-500"></i>
                                    Page Name (@language.Name)
                                </label>
                                <input type="text" 
                                       name="Translations[@i].Value" 
                                       value="@(translation?.Value ?? Model.Name)"
                                       class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                       placeholder="Enter page name in @language.Name" />
                                <input type="hidden" name="Translations[@i].Id" value="@(translation?.Id ?? 0)" />
                                <input type="hidden" name="Translations[@i].LanguageId" value="@language.Id" />
                                <p class="text-xs text-slate-500 mt-1">This will be used as the page title in @language.Name</p>
                            </div>

                            <!-- Page Description Translation -->
                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-2">
                                    <i class="fas fa-align-left mr-1 text-slate-500"></i>
                                    Page Description (@language.Name)
                                </label>
                                <textarea name="Translations[@i].Description" 
                                          rows="3"
                                          class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                          placeholder="Enter page description in @language.Name">@(translation?.Description ?? Model.Description)</textarea>
                                <p class="text-xs text-slate-500 mt-1">Brief description of the page content in @language.Name</p>
                            </div>

                            <!-- SEO Meta Title Translation -->
                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-2">
                                    <i class="fas fa-search mr-1 text-slate-500"></i>
                                    SEO Meta Title (@language.Name)
                                </label>
                                <input type="text" 
                                       name="Translations[@i].MetaTitle" 
                                       value="@(translation?.MetaTitle ?? Model.ContentSEO?.MetaTitle)"
                                       class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                       placeholder="Enter SEO meta title in @language.Name"
                                       maxlength="60" />
                                <div class="flex justify-between items-center mt-1">
                                    <p class="text-xs text-slate-500">SEO title for search engines in @language.Name</p>
                                    <span class="text-xs text-slate-400">Max 60 chars</span>
                                </div>
                            </div>

                            <!-- SEO Meta Description Translation -->
                            <div>
                                <label class="block text-sm font-medium text-slate-700 mb-2">
                                    <i class="fas fa-file-alt mr-1 text-slate-500"></i>
                                    SEO Meta Description (@language.Name)
                                </label>
                                <textarea name="Translations[@i].MetaDescription" 
                                          rows="3"
                                          class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                                          placeholder="Enter SEO meta description in @language.Name"
                                          maxlength="160">@(translation?.MetaDescription ?? Model.ContentSEO?.MetaDescription)</textarea>
                                <div class="flex justify-between items-center mt-1">
                                    <p class="text-xs text-slate-500">SEO description for search engines in @language.Name</p>
                                    <span class="text-xs text-slate-400">Max 160 chars</span>
                                </div>
                            </div>

                            @if (language.IsDefault)
                            {
                                <!-- Default Language Notice -->
                                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                                    <div class="flex items-start">
                                        <i class="fas fa-info-circle text-blue-500 mr-2 mt-0.5"></i>
                                        <div>
                                            <h4 class="text-sm font-medium text-blue-800">Default Language</h4>
                                            <p class="text-sm text-blue-600 mt-1">
                                                This is the default language. If translations are not available for other languages, 
                                                the system will fall back to these values.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>

            <!-- Translation Actions -->
            <div class="mt-6 pt-6 border-t border-slate-200">
                <div class="flex items-center justify-between">
                    <div class="text-sm text-slate-500">
                        <i class="fas fa-lightbulb mr-1"></i>
                        Tip: Use consistent terminology across all languages for better user experience.
                    </div>
                    <div class="flex items-center space-x-3">
                        <button type="button" 
                                class="px-4 py-2 bg-slate-200 hover:bg-slate-300 text-slate-700 rounded-lg text-sm transition-colors"
                                onclick="resetTranslations()">
                            <i class="fas fa-undo mr-2"></i>
                            Reset
                        </button>
                        <button type="button" 
                                class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors"
                                onclick="saveTranslations()">
                            <i class="fas fa-save mr-2"></i>
                            Save Translations
                        </button>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- No Languages Available -->
            <div class="text-center py-8">
                <i class="fas fa-language text-4xl text-slate-300 mb-4"></i>
                <h4 class="text-lg font-medium text-slate-600 mb-2">No Languages Available</h4>
                <p class="text-sm text-slate-500 mb-4">
                    You need to configure languages before you can add translations.
                </p>
                <a href="@Url.Action("Localization", "Settings")" 
                   class="inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors">
                    <i class="fas fa-cog mr-2"></i>
                    Configure Languages
                </a>
            </div>
        }
    </div>
</div>