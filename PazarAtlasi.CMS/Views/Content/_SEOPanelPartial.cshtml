@model PazarAtlasi.CMS.Models.ViewModels.PageEditViewModel

<!-- SEO Settings Panel (Hidden by default) -->
<div id="seoPanel" class="bg-white rounded-xl shadow-md hidden">
    <div class="p-6 border-b border-slate-100">
        <div class="flex items-center justify-between">
            <h5 class="text-lg font-semibold text-slate-800 flex items-center">
                <i class="fas fa-search mr-2 text-purple-600"></i>
                SEO Parameters
            </h5>
            <button type="button" onclick="toggleSEOPanel()" class="text-slate-400 hover:text-slate-600">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">Title</label>
                <input type="text" name="ContentSEO.Title" value="@Model.ContentSEO?.Title"
                       class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                       placeholder="Content title" />
                <p class="text-xs text-slate-500 mt-1">Main title for the content</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">Author</label>
                <input type="text" name="ContentSEO.Author" value="@Model.ContentSEO?.Author"
                       class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                       placeholder="Content author" />
            </div>
            
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-slate-700 mb-1">Description</label>
                <textarea name="ContentSEO.Description" rows="3"
                          class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                          placeholder="Main content description">@Model.ContentSEO?.Description</textarea>
                <p class="text-xs text-slate-500 mt-1">Primary description of the content</p>
            </div>
            
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-slate-700 mb-1">Sub Description</label>
                <textarea name="ContentSEO.SubDescription" rows="2"
                          class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                          placeholder="Additional description or subtitle">@Model.ContentSEO?.SubDescription</textarea>
                <p class="text-xs text-slate-500 mt-1">Secondary description or subtitle</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">Meta Title</label>
                <input type="text" name="ContentSEO.MetaTitle" value="@Model.ContentSEO?.MetaTitle"
                       class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                       placeholder="Page title for search engines" />
                <p class="text-xs text-slate-500 mt-1">Recommended: 50-60 characters</p>
            </div>
            
            <div>
                <label class="block text-sm font-medium text-slate-700 mb-1">Meta Keywords</label>
                <input type="text" name="ContentSEO.MetaKeywords" value="@Model.ContentSEO?.MetaKeywords"
                       class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                       placeholder="keyword1, keyword2, keyword3" />
                <p class="text-xs text-slate-500 mt-1">Separate keywords with commas</p>
            </div>
            
            <div class="md:col-span-2">
                <label class="block text-sm font-medium text-slate-700 mb-1">Meta Description</label>
                <textarea name="ContentSEO.MetaDescription" rows="3"
                          class="w-full px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400"
                          placeholder="Brief description for search engine results">@Model.ContentSEO?.MetaDescription</textarea>
                <p class="text-xs text-slate-500 mt-1">Recommended: 150-160 characters</p>
            </div>
        </div>

        <!-- SEO Preview -->
        <div class="mt-6 p-4 bg-slate-50 rounded-lg">
            <h6 class="text-sm font-medium text-slate-700 mb-3">Search Engine Preview</h6>
            <div class="seo-preview">
                <div class="text-blue-600 text-lg hover:underline cursor-pointer" id="seo-title-preview">
                    @(Model.ContentSEO?.MetaTitle ?? Model.ContentSEO?.Title ?? Model.Name ?? "Page Title")
                </div>
                <div class="text-green-600 text-sm" id="seo-url-preview">
                    @($"https://example.com/{Model.ContentSlugs?.FirstOrDefault(cs => cs.IsCanonical)?.Slug ?? Model.ContentSlugs?.FirstOrDefault()?.Slug ?? Model.Code}")
                </div>
                <div class="text-slate-600 text-sm mt-1" id="seo-description-preview">
                    @(Model.ContentSEO?.MetaDescription ?? Model.ContentSEO?.Description ?? Model.Description ?? "Page description will appear here...")
                </div>
            </div>
        </div>
    </div>
</div>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // SEO Preview anlık güncelleme fonksiyonları
    function updateSEOPreview() {
        const titleInput = document.querySelector('input[name="ContentSEO.Title"]');
        const metaTitleInput = document.querySelector('input[name="ContentSEO.MetaTitle"]');
        const descriptionTextarea = document.querySelector('textarea[name="ContentSEO.Description"]');
        const metaDescriptionTextarea = document.querySelector('textarea[name="ContentSEO.MetaDescription"]');
        const nameInput = document.querySelector('input[name="Name"]'); // Ana sayfa adı
        
        const titlePreview = document.getElementById('seo-title-preview');
        const descriptionPreview = document.getElementById('seo-description-preview');
        
        if (titlePreview) {
            // Öncelik sırası: MetaTitle > Title > Name > Varsayılan
            const titleValue = (metaTitleInput?.value?.trim()) || 
                              (titleInput?.value?.trim()) || 
                              (nameInput?.value?.trim()) || 
                              'Page Title';
            titlePreview.textContent = titleValue;
        }
        
        if (descriptionPreview) {
            // Öncelik sırası: MetaDescription > Description > Varsayılan
            const descriptionValue = (metaDescriptionTextarea?.value?.trim()) || 
                                    (descriptionTextarea?.value?.trim()) || 
                                    'Page description will appear here...';
            descriptionPreview.textContent = descriptionValue;
        }
    }
    
    // URL preview güncelleme fonksiyonu
    function updateURLPreview() {
        const canonicalSlugInput = document.querySelector('input[name*="Slug"][data-canonical="true"]');
        const firstSlugInput = document.querySelector('input[name*="Slug"]');
        const codeInput = document.querySelector('input[name="Code"]');
        
        const urlPreview = document.getElementById('seo-url-preview');
        
        if (urlPreview) {
            const slugValue = (canonicalSlugInput?.value?.trim()) || 
                             (firstSlugInput?.value?.trim()) || 
                             (codeInput?.value?.trim()) || 
                             'page-url';
            urlPreview.textContent = `https://example.com/${slugValue}`;
        }
    }
    
    // Event listener'ları ekle
    const seoInputs = [
        'input[name="ContentSEO.Title"]',
        'input[name="ContentSEO.MetaTitle"]',
        'textarea[name="ContentSEO.Description"]',
        'textarea[name="ContentSEO.MetaDescription"]',
        'input[name="Name"]'
    ];
    
    seoInputs.forEach(selector => {
        const element = document.querySelector(selector);
        if (element) {
            element.addEventListener('input', updateSEOPreview);
            element.addEventListener('keyup', updateSEOPreview);
            element.addEventListener('paste', function() {
                setTimeout(updateSEOPreview, 10); // Paste işlemi tamamlandıktan sonra güncelle
            });
        }
    });
    
    // Slug inputları için URL preview güncellemesi
    const slugInputs = document.querySelectorAll('input[name*="Slug"]');
    const codeInput = document.querySelector('input[name="Code"]');
    
    slugInputs.forEach(input => {
        input.addEventListener('input', updateURLPreview);
        input.addEventListener('keyup', updateURLPreview);
        input.addEventListener('paste', function() {
            setTimeout(updateURLPreview, 10);
        });
    });
    
    if (codeInput) {
        codeInput.addEventListener('input', updateURLPreview);
        codeInput.addEventListener('keyup', updateURLPreview);
        codeInput.addEventListener('paste', function() {
            setTimeout(updateURLPreview, 10);
        });
    }
    
    // Sayfa yüklendiğinde ilk güncellemeyi yap
    updateSEOPreview();
    updateURLPreview();
});
</script>