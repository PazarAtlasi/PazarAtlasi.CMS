@model PazarAtlasi.CMS.Models.ViewModels.PageListResponse
@{
    ViewData["Title"] = "Pages Management";
}

<div class="pages-management">
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <h4 class="text-2xl font-bold text-slate-800 relative inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                    Pages Management
                </h4>
                <p class="text-slate-500 mt-3 max-w-xl">
                    Manage your website pages, view details and monitor their status.
                </p>
            </div>
        </div>
        <div class="w-full lg:w-1/3 text-left lg:text-right">
            <div class="inline-flex items-center space-x-2">
                <a href="#" class="py-2 px-4 bg-purple-800 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors inline-flex items-center shadow-sm">
                    <i class="fas fa-plus mr-2"></i> Add New Page
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex items-center">
                <div class="p-3 bg-blue-100 rounded-full">
                    <i class="fas fa-file-alt text-blue-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-slate-600">Total Pages</p>
                    <p class="text-2xl font-bold text-slate-800">@Model.TotalCount</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex items-center">
                <div class="p-3 bg-green-100 rounded-full">
                    <i class="fas fa-check-circle text-green-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-slate-600">Active Pages</p>
                    <p class="text-2xl font-bold text-slate-800">@Model.Pages.Count(p => p.Status == PazarAtlasi.CMS.Domain.Common.Status.Active)</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex items-center">
                <div class="p-3 bg-yellow-100 rounded-full">
                    <i class="fas fa-edit text-yellow-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-slate-600">Draft Pages</p>
                    <p class="text-2xl font-bold text-slate-800">@Model.Pages.Count(p => p.Status == PazarAtlasi.CMS.Domain.Common.Status.Draft)</p>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-md p-6">
            <div class="flex items-center">
                <div class="p-3 bg-purple-100 rounded-full">
                    <i class="fas fa-chart-line text-purple-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-slate-600">Current Page</p>
                    <p class="text-2xl font-bold text-slate-800">@Model.PageNumber/@Model.TotalPages</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Pages Table -->
    <div class="bg-white rounded-xl shadow-md">
        <div class="p-6 border-b border-slate-100">
            <div class="flex flex-wrap items-center justify-between">
                <h5 class="text-lg font-semibold text-slate-800 m-0">All Pages</h5>
                <div class="flex items-center space-x-2 mt-4 md:mt-0">
                    <div class="relative">
                        <input type="text" placeholder="Search pages..." 
                               class="pl-10 pr-4 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                        <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400"></i>
                    </div>
                    <select class="px-3 py-2 border border-slate-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-purple-200 focus:border-purple-400">
                        <option value="">All Status</option>
                        <option value="Active">Active</option>
                        <option value="Draft">Draft</option>
                        <option value="Pending">Pending</option>
                        <option value="Archived">Archived</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-slate-50">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Page Info</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Type</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Created</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Updated</th>
                        <th class="px-6 py-4 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-slate-200">
                    @if (Model.Pages.Any())
                    {
                        @foreach (var pageDetail in Model.Pages)
                        {
                            <tr class="hover:bg-slate-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <div class="h-10 w-10 rounded-full bg-purple-100 flex items-center justify-center">
                                                <i class="fas fa-file-alt text-purple-600"></i>
                                            </div>
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-medium text-slate-900">@pageDetail.Name</div>
                                            <div class="text-sm text-slate-500">/@pageDetail.Code</div>
                                            @if (!string.IsNullOrEmpty(pageDetail.Description))
                                            {
                                                <div class="text-xs text-slate-400 mt-1 max-w-xs truncate">@pageDetail.Description</div>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                        @pageDetail.PageTypeName
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @pageDetail.StatusBadgeClass">
                                        @pageDetail.StatusName
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                                    <div>@pageDetail.CreatedAt.ToString("dd/MM/yyyy")</div>
                                    <div class="text-xs">@pageDetail.CreatedAt.ToString("HH:mm")</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
                                    @if (pageDetail.UpdatedAt.HasValue)
                                    {
                                        <div>@pageDetail.UpdatedAt.Value.ToString("dd/MM/yyyy")</div>
                                        <div class="text-xs">@pageDetail.UpdatedAt.Value.ToString("HH:mm")</div>
                                    }
                                    else
                                    {
                                        <span class="text-slate-400">Never</span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <div class="flex items-center space-x-2">
                                        <a href="@Url.Action("PageDetails", "Content", new { id = pageDetail.Id })" 
                                           class="text-purple-600 hover:text-purple-900 transition-colors" 
                                           title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="@Url.Action("PageEdit", "Content", new { id = pageDetail.Id })" 
                                           class="text-blue-600 hover:text-blue-900 transition-colors" 
                                           title="Edit Page">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="#" 
                                           class="text-green-600 hover:text-green-900 transition-colors" 
                                           title="Preview Page">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                        <button class="text-red-600 hover:text-red-900 transition-colors" 
                                                title="Delete Page"
                                                onclick="confirmDelete(@pageDetail.Id, '@pageDetail.Name')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-12 text-center">
                                <div class="text-slate-400">
                                    <i class="fas fa-file-alt text-4xl mb-4"></i>
                                    <p class="text-lg font-medium">No pages found</p>
                                    <p class="text-sm">Create your first page to get started.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="px-6 py-4 border-t border-slate-200">
                <div class="flex items-center justify-between">
                    <div class="text-sm text-slate-700">
                        Showing <span class="font-medium">@((Model.PageNumber - 1) * Model.PageSize + 1)</span> to 
                        <span class="font-medium">@Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)</span> of 
                        <span class="font-medium">@Model.TotalCount</span> results
                    </div>
                    <div class="flex items-center space-x-2">
                        @if (Model.HasPreviousPage)
                        {
                            <a href="@Url.Action("Pages", "Content", new { page = Model.PageNumber - 1, pageSize = Model.PageSize })" 
                               class="px-3 py-2 text-sm font-medium text-slate-500 bg-white border border-slate-300 rounded-md hover:bg-slate-50">
                                Previous
                            </a>
                        }

                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                        {
                            @if (i == Model.PageNumber)
                            {
                                <span class="px-3 py-2 text-sm font-medium text-white bg-purple-600 border border-purple-600 rounded-md">
                                    @i
                                </span>
                            }
                            else
                            {
                                <a href="@Url.Action("Pages", "Content", new { page = i, pageSize = Model.PageSize })" 
                                   class="px-3 py-2 text-sm font-medium text-slate-500 bg-white border border-slate-300 rounded-md hover:bg-slate-50">
                                    @i
                                </a>
                            }
                        }

                        @if (Model.HasNextPage)
                        {
                            <a href="@Url.Action("Pages", "Content", new { page = Model.PageNumber + 1, pageSize = Model.PageSize })" 
                               class="px-3 py-2 text-sm font-medium text-slate-500 bg-white border border-slate-300 rounded-md hover:bg-slate-50">
                                Next
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function confirmDelete(pageId, pageName) {
        if (confirm(`Are you sure you want to delete the page "${pageName}"? This action cannot be undone.`)) {
            // Here you would make an AJAX call to delete the page
            console.log('Delete page with ID:', pageId);
        }
    }

    // Search functionality
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.querySelector('input[placeholder="Search pages..."]');
        const statusFilter = document.querySelector('select');
        
        function filterTable() {
            const searchTerm = searchInput.value.toLowerCase();
            const statusFilter = document.querySelector('select').value;
            const rows = document.querySelectorAll('tbody tr');
            
            rows.forEach(row => {
                const pageInfo = row.querySelector('td:first-child').textContent.toLowerCase();
                const status = row.querySelector('td:nth-child(3) span').textContent;
                
                const matchesSearch = pageInfo.includes(searchTerm);
                const matchesStatus = !statusFilter || status === statusFilter;
                
                row.style.display = matchesSearch && matchesStatus ? '' : 'none';
            });
        }
        
        searchInput.addEventListener('input', filterTable);
        statusFilter.addEventListener('change', filterTable);
    });
</script>