@{
    ViewData["Title"] = "Menu Designer";
}

<div class="menu-designer">
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <h4
                    class="text-2xl font-bold text-slate-800 relative inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                    Menu Designer
                </h4>
                <p class="text-slate-500 mt-3 max-w-xl">Create and manage navigation menus for your website with an
                    intuitive interface. Build megamenus, dropdown menus, and more.</p>
            </div>
        </div>
        <div class="w-full lg:w-1/3 text-left lg:text-right">
            <div class="inline-flex items-center space-x-2">
                <a href="@Url.Action("MenuItems", "Content")"
                    class="py-2 px-4 bg-purple-800 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors inline-flex items-center shadow-sm">
                    <i class="fas fa-plus mr-2"></i> Create New Menu
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6 mb-8">
        <div class="lg:col-span-1">
            <div class="bg-white rounded-xl shadow-md mb-6 sticky top-[80px]">
                <div class="p-5 border-b border-slate-100">
                    <h5 class="text-lg font-semibold text-slate-800 m-0">Menu Types</h5>
                    <p class="text-sm text-slate-500 mt-1">Choose a menu type to create</p>
                </div>
                <div class="p-4">
                    <div class="menu-type-list space-y-3">
                        <div
                            class="menu-type-item p-3 bg-slate-50 rounded-lg cursor-pointer hover:bg-slate-100 transition-colors border border-slate-200">
                            <div class="flex items-center">
                                <i class="fas fa-th text-purple-600 mr-3"></i>
                                <div>
                                    <span class="font-medium text-slate-700 block">Mega Menu</span>
                                    <span class="text-xs text-slate-500">Multi-column menu with rich content</span>
                                </div>
                            </div>
                        </div>
                        <div
                            class="menu-type-item p-3 bg-slate-50 rounded-lg cursor-pointer hover:bg-slate-100 transition-colors border border-slate-200">
                            <div class="flex items-center">
                                <i class="fas fa-list-ul text-purple-600 mr-3"></i>
                                <div>
                                    <span class="font-medium text-slate-700 block">Service Tabs</span>
                                    <span class="text-xs text-slate-500">Tabbed menu for service categories</span>
                                </div>
                            </div>
                        </div>
                        <div
                            class="menu-type-item p-3 bg-slate-50 rounded-lg cursor-pointer hover:bg-slate-100 transition-colors border border-slate-200">
                            <div class="flex items-center">
                                <i class="fas fa-sitemap text-purple-600 mr-3"></i>
                                <div>
                                    <span class="font-medium text-slate-700 block">Categorized</span>
                                    <span class="text-xs text-slate-500">Category-based content organization</span>
                                </div>
                            </div>
                        </div>
                        <div
                            class="menu-type-item p-3 bg-slate-50 rounded-lg cursor-pointer hover:bg-slate-100 transition-colors border border-slate-200">
                            <div class="flex items-center">
                                <i class="fas fa-link text-purple-600 mr-3"></i>
                                <div>
                                    <span class="font-medium text-slate-700 block">Link</span>
                                    <span class="text-xs text-slate-500">Simple URL link with optional status</span>
                                </div>
                            </div>
                        </div>
                        <div
                            class="menu-type-item p-3 bg-slate-50 rounded-lg cursor-pointer hover:bg-slate-100 transition-colors border border-slate-200">
                            <div class="flex items-center">
                                <i class="fas fa-caret-down text-purple-600 mr-3"></i>
                                <div>
                                    <span class="font-medium text-slate-700 block">Dropdown</span>
                                    <span class="text-xs text-slate-500">Simple dropdown with links</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-3">
            <div class="bg-white rounded-xl shadow-md mb-6">
                <div class="p-5 border-b border-slate-100 flex justify-between items-center">
                    <h5 class="text-lg font-semibold text-slate-800 m-0 flex items-center">
                        <span class="mr-2">Current Menus</span>
                    </h5>
                    <div class="flex items-center space-x-2">
                        <button id="refreshMenusBtn"
                            class="p-2 bg-slate-100 hover:bg-slate-200 rounded-lg text-slate-700 text-sm">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                        <button id="saveMenuOrderBtn"
                            class="p-2 bg-purple-100 hover:bg-purple-200 rounded-lg text-purple-700 text-sm">
                            <i class="fas fa-save"></i>
                        </button>
                    </div>
                </div>
                <div class="p-6">
                    <div id="menuList" class="space-y-4">
                        <!-- Menu items will be loaded here -->
                        <div class="border border-slate-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                            <div class="flex justify-between items-center">
                                <div class="flex items-center">
                                    <div class="mr-3 text-lg text-purple-600">
                                        <i class="fas fa-th"></i>
                                    </div>
                                    <div>
                                        <h6 class="font-medium text-slate-800">About</h6>
                                        <span class="text-xs text-slate-500">Mega Menu</span>
                                    </div>
                                </div>
                                <div class="flex space-x-2">
                                    <button class="p-1 bg-slate-100 hover:bg-slate-200 rounded text-slate-600 text-sm">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="p-1 bg-slate-100 hover:bg-slate-200 rounded text-slate-600 text-sm">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="p-1 bg-red-100 hover:bg-red-200 rounded text-red-600 text-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="border border-slate-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                            <div class="flex justify-between items-center">
                                <div class="flex items-center">
                                    <div class="mr-3 text-lg text-purple-600">
                                        <i class="fas fa-list-ul"></i>
                                    </div>
                                    <div>
                                        <h6 class="font-medium text-slate-800">Services</h6>
                                        <span class="text-xs text-slate-500">Service Tabs</span>
                                    </div>
                                </div>
                                <div class="flex space-x-2">
                                    <button class="p-1 bg-slate-100 hover:bg-slate-200 rounded text-slate-600 text-sm">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="p-1 bg-slate-100 hover:bg-slate-200 rounded text-slate-600 text-sm">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="p-1 bg-red-100 hover:bg-red-200 rounded text-red-600 text-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="border border-slate-200 rounded-lg p-4 hover:shadow-md transition-shadow">
                            <div class="flex justify-between items-center">
                                <div class="flex items-center">
                                    <div class="mr-3 text-lg text-purple-600">
                                        <i class="fas fa-link"></i>
                                    </div>
                                    <div>
                                        <h6 class="font-medium text-slate-800">Data Center</h6>
                                        <span class="text-xs text-slate-500">Link with Status</span>
                                    </div>
                                    <span
                                        class="ml-3 px-2 py-0.5 bg-green-100 text-green-800 text-xs rounded-full">Online</span>
                                </div>
                                <div class="flex space-x-2">
                                    <button class="p-1 bg-slate-100 hover:bg-slate-200 rounded text-slate-600 text-sm">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="p-1 bg-slate-100 hover:bg-slate-200 rounded text-slate-600 text-sm">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="p-1 bg-red-100 hover:bg-red-200 rounded text-red-600 text-sm">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-md mb-6">
                <div class="p-5 border-b border-slate-100">
                    <h5 class="text-lg font-semibold text-slate-800 m-0">Menu Preview</h5>
                    <p class="text-sm text-slate-500 mt-1">See how your menus will look on the website</p>
                </div>
                <div
                    class="p-6 min-h-[200px] flex items-center justify-center border-2 border-dashed border-slate-200 rounded-lg mx-6 my-6">
                    <div class="text-center text-slate-500">
                        <i class="fas fa-eye text-2xl mb-2"></i>
                        <p>Select a menu to preview</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Load menu items
            loadMenuItems();

            // Refresh button click
            $("#refreshMenusBtn").click(function () {
                loadMenuItems();
            });

            // Menu type item click
            $(".menu-type-item").click(function () {
                window.location.href = '@Url.Action("MenuItems", "Content")';
            });
        });

        function loadMenuItems() {
            // In a real application, this would load menu items from the server
            // For now, we'll just show the static examples
            console.log("Loading menu items...");
        }
    </script>
}