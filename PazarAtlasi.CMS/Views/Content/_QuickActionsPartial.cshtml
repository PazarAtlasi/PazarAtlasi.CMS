<!-- Quick Actions -->
<div class="bg-white rounded-xl shadow-md">
    <div class="p-6 border-b border-slate-100">
        <h5 class="text-lg font-semibold text-slate-800 flex items-center">
            <i class="fas fa-bolt mr-2 text-purple-600"></i>
            Quick Actions
        </h5>
    </div>
    <div class="p-6 space-y-3">
        <button type="button" class="w-full py-2 px-4 bg-green-600 hover:bg-green-700 text-white rounded-lg text-sm transition-colors inline-flex items-center justify-center"
                onclick="addNewSection()">
            <i class="fas fa-plus mr-2"></i> Add Section
        </button>
        <button type="button" class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white rounded-lg text-sm transition-colors inline-flex items-center justify-center"
                onclick="toggleSEOPanel()">
            <i class="fas fa-search mr-2"></i> SEO Settings
        </button>
        <button type="button" class="w-full py-2 px-4 bg-purple-600 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors inline-flex items-center justify-center"
                onclick="toggleTranslationsPanel()">
            <i class="fas fa-language mr-2"></i> Translations
        </button>
        <div class="border-t border-slate-200 pt-3">
            <button type="button" class="w-full py-2 px-4 bg-orange-600 hover:bg-orange-700 text-white rounded-lg text-sm transition-colors inline-flex items-center justify-center"
                    onclick="duplicatePage()">
                <i class="fas fa-copy mr-2"></i> Duplicate Page
            </button>
            <button type="button" class="w-full py-2 px-4 bg-red-600 hover:bg-red-700 text-white rounded-lg text-sm transition-colors inline-flex items-center justify-center mt-2"
                    onclick="deletePage()">
                <i class="fas fa-trash mr-2"></i> Delete Page
            </button>
        </div>
    </div>
</div>

<!-- Page Statistics -->
<div class="bg-white rounded-xl shadow-md">
    <div class="p-6 border-b border-slate-100">
        <h5 class="text-lg font-semibold text-slate-800 flex items-center">
            <i class="fas fa-chart-bar mr-2 text-purple-600"></i>
            Page Statistics
        </h5>
    </div>
    <div class="p-6 space-y-3">
        <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600">Sections:</span>
            <span class="text-sm font-medium text-slate-800">@((ViewData.Model as PazarAtlasi.CMS.Models.ViewModels.PageEditViewModel)?.Sections?.Count ?? 0)</span>
        </div>
        <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600">Last Modified:</span>
            <span class="text-sm font-medium text-slate-800">@DateTime.Now.ToString("MMM dd, yyyy")</span>
        </div>
        <div class="flex justify-between items-center">
            <span class="text-sm text-slate-600">Created:</span>
            <span class="text-sm font-medium text-slate-800">@DateTime.Now.AddDays(-30).ToString("MMM dd, yyyy")</span>
        </div>
    </div>
</div>