@model IEnumerable<PazarAtlasi.CMS.Domain.Entities.Blog>

@{
    ViewData["Title"] = "Blog Yazıları";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Blog Yazıları</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Yeni Blog Yazısı
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm hover-shadow transition">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                        }
                        <div class="position-absolute top-0 end-0 m-2">
                            <span class="badge @(item.IsActive ? "bg-success" : "bg-danger")">
                                @(item.IsActive ? "Aktif" : "Pasif")
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0 text-truncate" style="max-width: 80%;">@item.Title</h5>
                            <span class="badge bg-info">@item.Topic</span>
                        </div>
                        <p class="card-text text-muted small mb-3">@item.Summary</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-user-circle text-primary me-2"></i>
                                <small class="text-muted">@item.AuthorName</small>
                            </div>
                            <small class="text-muted">
                                <i class="far fa-calendar-alt me-1"></i>
                                @item.PublishDate.ToString("dd.MM.yyyy")
                            </small>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <div class="btn-group w-100">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye me-1"></i>Detay
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit me-1"></i>Düzenle
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" 
                               onclick="return confirm('Bu blog yazısını silmek istediğinize emin misiniz?')">
                                <i class="fas fa-trash-alt me-1"></i>Sil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hover-shadow {
        transition: all 0.3s ease;
    }
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    .transition {
        transition: all 0.3s ease;
    }
    .card {
        border: none;
        border-radius: 10px;
    }
    .card-footer {
        border-radius: 0 0 10px 10px;
    }
    .btn-group .btn {
        border-radius: 5px;
        margin: 0 2px;
    }
    .badge {
        padding: 0.5em 0.8em;
        border-radius: 5px;
    }
</style> 