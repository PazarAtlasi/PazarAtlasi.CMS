@model PazarAtlasi.CMS.Domain.Entities.Blog

@{
    ViewData["Title"] = Model.Title;
}

<div class="container-fluid px-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Blog Yazıları</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
                </ol>
            </nav>

            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl" class="w-100" alt="@Model.Title" style="height: 400px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                                <i class="fas fa-image text-muted" style="font-size: 5rem;"></i>
                            </div>
                        }
                        <div class="position-absolute top-0 end-0 m-3">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Aktif" : "Pasif")
                            </span>
                        </div>
                    </div>

                    <div class="p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h1 class="h2 mb-0">@Model.Title</h1>
                            <span class="badge bg-info">@Model.Topic</span>
                        </div>

                        <div class="d-flex align-items-center mb-4">
                            <div class="d-flex align-items-center me-4">
                                <i class="fas fa-user-circle text-primary me-2" style="font-size: 1.5rem;"></i>
                                <div>
                                    <small class="text-muted d-block">Yazar</small>
                                    <strong>@Model.AuthorName</strong>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="far fa-calendar-alt text-primary me-2" style="font-size: 1.5rem;"></i>
                                <div>
                                    <small class="text-muted d-block">Yayın Tarihi</small>
                                    <strong>@Model.PublishDate.ToString("dd.MM.yyyy")</strong>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5 class="text-muted mb-3">Özet</h5>
                            <p class="lead">@Model.Summary</p>
                        </div>

                        <div class="mb-4">
                            <h5 class="text-muted mb-3">İçerik</h5>
                            <div class="blog-content">
                                @Html.Raw(Model.Content)
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            <div>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-arrow-left me-2"></i>Geri Dön
                                </a>
                            </div>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="fas fa-edit me-2"></i>Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" 
                                   onclick="return confirm('Bu blog yazısını silmek istediğinize emin misiniz?')">
                                    <i class="fas fa-trash-alt me-2"></i>Sil
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        border-radius: 10px;
    }
    .badge {
        padding: 0.5em 0.8em;
        border-radius: 5px;
    }
    .blog-content {
        line-height: 1.8;
    }
    .blog-content p {
        margin-bottom: 1.5rem;
    }
    .btn {
        border-radius: 5px;
        padding: 0.5rem 1rem;
    }
    .btn-group .btn {
        margin: 0 2px;
    }
</style> 