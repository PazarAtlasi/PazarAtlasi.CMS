@model PazarAtlasi.CMS.Application.Features.Campaigns.Queries.CampaignDto

@{
    ViewData["Title"] = "Yeni Kampanya";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="flex items-center mb-6">
            <a href="@Url.Action("Index")" class="text-slate-600 hover:text-slate-800 mr-4">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h1 class="text-2xl font-bold text-slate-800">Yeni Kampanya</h1>
        </div>

        <form asp-action="Create" method="post" class="space-y-6">
            <div class="bg-white rounded-xl shadow-md p-6">
                <div class="space-y-4">
                    <div>
                        <label asp-for="Title" class="block text-sm font-medium text-slate-700 mb-1">Başlık</label>
                        <input asp-for="Title" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                        <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Description" class="block text-sm font-medium text-slate-700 mb-1">Açıklama</label>
                        <textarea asp-for="Description" rows="4" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent"></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="ImageUrl" class="block text-sm font-medium text-slate-700 mb-1">Görsel URL</label>
                        <input asp-for="ImageUrl" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                        <span asp-validation-for="ImageUrl" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label asp-for="StartDate" class="block text-sm font-medium text-slate-700 mb-1">Başlangıç Tarihi</label>
                            <input asp-for="StartDate" type="datetime-local" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                            <span asp-validation-for="StartDate" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label asp-for="EndDate" class="block text-sm font-medium text-slate-700 mb-1">Bitiş Tarihi</label>
                            <input asp-for="EndDate" type="datetime-local" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                            <span asp-validation-for="EndDate" class="text-red-500 text-sm"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="TargetUrl" class="block text-sm font-medium text-slate-700 mb-1">Hedef URL (Opsiyonel)</label>
                        <input asp-for="TargetUrl" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                    </div>

                    <div class="flex items-center">
                        <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-slate-300 rounded" />
                        <label asp-for="IsActive" class="ml-2 block text-sm text-slate-700">Aktif</label>
                    </div>
                </div>
            </div>

            <div class="flex justify-end">
                <button type="submit" class="bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700 transition-colors">
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 