@model PazarAtlasi.CMS.Application.Features.Categories.Queries.UpdateCategoryCommand

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">@ViewData["Title"]</h1>
        <a href="@Url.Action("Index")" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-colors duration-200">
            <i class="fas fa-arrow-left mr-2"></i>Geri Dön
        </a>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="col-span-2">
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700">Kategori Adı</label>
                    <input asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <div class="col-span-2">
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700">Açıklama</label>
                    <textarea asp-for="Description" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="ParentId" class="block text-sm font-medium text-gray-700">Üst Kategori</label>
                    <select asp-for="ParentId" asp-items="@ViewBag.ParentCategories" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                        <option value="">Ana Kategori</option>
                    </select>
                    <span asp-validation-for="ParentId" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="DisplayOrder" class="block text-sm font-medium text-gray-700">Sıralama</label>
                    <input asp-for="DisplayOrder" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="DisplayOrder" class="text-red-500 text-sm"></span>
                </div>

                <div class="col-span-2">
                    <label class="block text-sm font-medium text-gray-700">Mevcut Görsel</label>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mt-2">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="h-32 w-32 object-cover rounded-lg" />
                        </div>
                    }
                    <label class="block text-sm font-medium text-gray-700 mt-4">Yeni Görsel</label>
                    <div class="mt-1 flex items-center">
                        <input type="file" name="ImageFile" accept="image/*" class="block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" />
                    </div>
                </div>

                <div class="col-span-2">
                    <div class="flex items-center">
                        <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                        <label asp-for="IsActive" class="ml-2 block text-sm text-gray-700">Aktif</label>
                    </div>
                </div>
            </div>

            <div class="mt-6 flex justify-end">
                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition-colors duration-200">
                    <i class="fas fa-save mr-2"></i>Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 