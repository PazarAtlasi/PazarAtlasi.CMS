@{
    ViewData["Title"] = @Html.L("Dashboard.Title");
}

<div class="dashboard">
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <h4
                    class="text-2xl font-bold text-slate-800 inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                    @Html.L("Dashboard.Title")
                </h4>
                <p class="text-slate-500 mt-3 max-w-xl">@Html.L("Dashboard.WelcomeMessage")</p>
            </div>
        </div>
        <div class="w-full lg:w-1/3 text-left lg:text-right">
            <div class="inline-flex items-center space-x-2">
                <select
                    class="bg-white border border-slate-200 text-slate-700 py-2 px-4 rounded-lg text-sm focus:outline-none focus:border-purple-300 focus:ring-2 focus:ring-purple-200 shadow-sm">
                    <option>@Html.L("Dashboard.Last7Days")</option>
                    <option>@Html.L("Dashboard.Last30Days")</option>
                    <option>@Html.L("Dashboard.Last90Days")</option>
                </select>
                <button
                    class="py-2 px-4 bg-purple-800 hover:bg-purple-700 text-white rounded-lg text-sm transition-colors inline-flex items-center shadow-sm">
                    <i class="fas fa-download mr-2"></i> @Html.L("Common.Export")
                </button>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="transform transition-all hover:-translate-y-1 hover:shadow-lg">
            <div class="rounded-xl shadow-md bg-white overflow-hidden">
                <div class="p-5 bg-gradient-to-r from-purple-800 to-purple-600 text-white relative overflow-hidden">
                    <div class="flex justify-between items-center relative z-10">
                        <div>
                            <h5 class="text-3xl font-bold mb-0">1,250</h5>
                            <p class="mb-0 opacity-90 text-white/80">@Html.L("Dashboard.TotalUsers")</p>
                        </div>
                        <div class="opacity-80 bg-white/10 w-12 h-12 rounded-lg flex items-center justify-center">
                            <i class="fas fa-users text-2xl"></i>
                        </div>
                    </div>
                    <div class="mt-4 pt-3 border-t border-white/25">
                        <span class="flex items-center text-sm bg-white/10 rounded-full py-1 px-3 w-fit">
                            <i class="fas fa-arrow-up mr-1.5 text-green-300"></i> 12.3%
                            <span class="ml-1 text-xs opacity-90">@Html.L("Dashboard.FromLastMonth")</span>
                        </span>
                    </div>
                    <div class="absolute top-0 right-0 w-[100px] h-full bg-white/10 -skew-x-15 translate-x-[60%] z-0">
                    </div>
                </div>
            </div>
        </div>
        <div class="transform transition-all hover:-translate-y-1 hover:shadow-lg">
            <div class="rounded-xl shadow-md bg-white overflow-hidden">
                <div class="p-5 bg-gradient-to-r from-emerald-600 to-emerald-500 text-white relative overflow-hidden">
                    <div class="flex justify-between items-center relative z-10">
                        <div>
                            <h5 class="text-3xl font-bold mb-0">$8,520</h5>
