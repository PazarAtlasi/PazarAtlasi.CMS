                            <i class="fas fa-arrow-up mr-1.5 text-green-300"></i> 8.1%
                            <span class="ml-1 text-xs opacity-90">@Html.L("Dashboard.FromLastMonth")</span>
                        </span>
                    </div>
                    <div class="absolute top-0 right-0 w-[100px] h-full bg-white/10 -skew-x-15 translate-x-[60%] z-0">
                    </div>
                </div>
            </div>
        </div>
        <div class="transform transition-all hover:-translate-y-1 hover:shadow-lg">
            <div class="rounded-xl shadow-md bg-white overflow-hidden">
                <div class="p-5 bg-gradient-to-r from-amber-500 to-amber-400 text-white relative overflow-hidden">
                    <div class="flex justify-between items-center relative z-10">
