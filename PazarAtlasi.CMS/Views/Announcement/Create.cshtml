@model AnnouncementCreateViewModel
@{
    ViewData["Title"] = "Yeni Duyuru";
}

<div class="announcement-create">
    <div class="flex flex-wrap items-center mb-8">
        <div class="w-full lg:w-2/3 mb-4 lg:mb-0">
            <div class="page-title-box">
                <h4 class="text-2xl font-bold text-slate-800 relative inline-block after:content-[''] after:absolute after:bottom-[-8px] after:left-0 after:w-10 after:h-[3px] after:bg-purple-800 after:rounded-full">
                    Yeni Duyuru
                </h4>
                <p class="text-slate-500 mt-3 max-w-xl">Yeni bir duyuru oluşturun ve yayın tarihlerini belirleyin.</p>
            </div>
        </div>
        <div class="w-full lg:w-1/3 text-left lg:text-right">
            <div class="inline-flex items-center space-x-2">
                <a href="@Url.Action("Index", "Announcement")" 
                   class="py-2 px-4 bg-slate-200 hover:bg-slate-300 text-slate-700 rounded-lg text-sm transition-colors inline-flex items-center">
                    <i class="fas fa-arrow-left mr-2"></i> Geri Dön
                </a>
            </div>
        </div>
    </div>

    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Ana Form -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl shadow-md mb-6">
                    <div class="p-5 border-b border-slate-100">
                        <h5 class="text-lg font-semibold text-slate-800 m-0">Duyuru Bilgileri</h5>
                    </div>
                    <div class="p-5">
                        <!-- Dil Tabları -->
                        <div class="mb-6">
                            <div class="border-b border-slate-200">
                                <nav class="-mb-px flex space-x-8" aria-label="Tabs">
                                    @for (int i = 0; i < Model.AvailableLanguages.Count; i++)
                                    {
                                        var language = Model.AvailableLanguages[i];
                                        <button type="button" 
                                                class="language-tab whitespace-nowrap py-2 px-1 border-b-2 font-medium text-sm @(i == 0 ? "border-purple-500 text-purple-600" : "border-transparent text-slate-500 hover:text-slate-700 hover:border-slate-300")"
                                                data-language-id="@language.Id"
                                                onclick="switchLanguageTab(@language.Id, this)">
                                            @language.Name
                                            @if (language.IsDefault)
                                            {
                                                <span class="ml-1 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                                                    Varsayılan
                                                </span>
                                            }
                                        </button>
                                    }
                                </nav>
                            </div>
                        </div>

                        <!-- Dil İçerikleri -->
                        @for (int i = 0; i < Model.Translations.Count; i++)
                        {
                            var translation = Model.Translations[i];
                            <div class="language-content space-y-6 @(i != 0 ? "hidden" : "")" data-language-id="@translation.LanguageId">
                                <input asp-for="Translations[i].Id" type="hidden" />
                                <input asp-for="Translations[i].LanguageId" type="hidden" />
                                <input asp-for="Translations[i].LanguageName" type="hidden" />
                                <input asp-for="Translations[i].LanguageCode" type="hidden" />
                                <input asp-for="Translations[i].IsDefault" type="hidden" />

                                <!-- Başlık -->
                                <div>
                                    <label asp-for="Translations[i].Title" class="block text-sm font-medium text-slate-700 mb-2">
                                        Başlık (@translation.LanguageName) *
                                    </label>
                                    <input asp-for="Translations[i].Title" 
                                           class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                           placeholder="Duyuru başlığını girin...">
                                    <span asp-validation-for="Translations[i].Title" class="text-red-500 text-sm"></span>
                                </div>

                                <!-- Kısa Özet -->
                                <div>
                                    <label asp-for="Translations[i].Summary" class="block text-sm font-medium text-slate-700 mb-2">
                                        Kısa Özet (@translation.LanguageName)
                                    </label>
                                    <textarea asp-for="Translations[i].Summary" rows="3"
                                              class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent"
                                              placeholder="Duyurunun kısa özetini girin..."></textarea>
                                    <span asp-validation-for="Translations[i].Summary" class="text-red-500 text-sm"></span>
                                    <p class="text-xs text-slate-500 mt-1">Bu özet, duyuru listesinde görüntülenecektir.</p>
                                </div>

                                <!-- İçerik -->
                                <div>
                                    <label asp-for="Translations[i].Content" class="block text-sm font-medium text-slate-700 mb-2">
                                        İçerik (@translation.LanguageName) *
                                    </label>
                                    <textarea asp-for="Translations[i].Content" 
                                              class="content-editor w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" 
                                              rows="10"
                                              placeholder="Duyuru içeriğini girin..."></textarea>
                                    <span asp-validation-for="Translations[i].Content" class="text-red-500 text-sm"></span>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Kapak Görseli -->
                <div class="bg-white rounded-xl shadow-md mb-6">
                    <div class="p-5 border-b border-slate-100">
                        <h5 class="text-lg font-semibold text-slate-800 m-0">Kapak Görseli</h5>
                    </div>
                    <div class="p-5">
                        <div class="border-2 border-dashed border-slate-300 rounded-lg p-6 text-center">
                            <div id="imageUploadArea">
                                <i class="fas fa-cloud-upload-alt text-3xl text-slate-400 mb-3"></i>
                                <p class="text-slate-600 mb-2">Görsel yüklemek için tıklayın veya sürükleyin</p>
                                <p class="text-xs text-slate-500">PNG, JPG, GIF formatları desteklenir (Max: 5MB)</p>
                                <input type="file" id="coverImageInput" accept="image/*" class="hidden">
                                <button type="button" onclick="document.getElementById('coverImageInput').click()" 
                                        class="mt-3 px-4 py-2 bg-purple-100 text-purple-700 rounded-lg hover:bg-purple-200 transition-colors">
                                    Görsel Seç
                                </button>
                            </div>
                            <div id="imagePreview" class="hidden">
                                <img id="previewImage" src="" alt="Preview" class="max-w-full h-48 object-cover rounded-lg mx-auto mb-3">
                                <button type="button" onclick="removeImage()" 
                                        class="px-3 py-1 bg-red-100 text-red-700 rounded text-sm hover:bg-red-200 transition-colors">
                                    Görseli Kaldır
                                </button>
                            </div>
                        </div>
                        <input asp-for="CoverImage" type="hidden" id="coverImageUrl">
                        <span asp-validation-for="CoverImage" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Yan Panel -->
            <div class="lg:col-span-1">
                <!-- Yayın Ayarları -->
                <div class="bg-white rounded-xl shadow-md mb-6">
                    <div class="p-5 border-b border-slate-100">
                        <h5 class="text-lg font-semibold text-slate-800 m-0">Yayın Ayarları</h5>
                    </div>
                    <div class="p-5 space-y-4">
                        <!-- Durum -->
                        <div>
                            <label asp-for="Status" class="block text-sm font-medium text-slate-700 mb-2">Durum</label>
                            <select asp-for="Status" class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                                <option value="0">Taslak</option>
                                <option value="1">Yayında</option>
                            </select>
                            <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- Yayın Başlangıç Tarihi -->
                        <div>
                            <label asp-for="PublishStart" class="block text-sm font-medium text-slate-700 mb-2">Yayın Başlangıç Tarihi *</label>
                            <input asp-for="PublishStart" type="datetime-local" 
                                   class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <span asp-validation-for="PublishStart" class="text-red-500 text-sm"></span>
                        </div>

                        <!-- Yayın Bitiş Tarihi -->
                        <div>
                            <label asp-for="PublishEnd" class="block text-sm font-medium text-slate-700 mb-2">Yayın Bitiş Tarihi *</label>
                            <input asp-for="PublishEnd" type="datetime-local" 
                                   class="w-full px-3 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                            <span asp-validation-for="PublishEnd" class="text-red-500 text-sm"></span>
                        </div>
                    </div>
                </div>

                <!-- Kaydet Butonları -->
                <div class="bg-white rounded-xl shadow-md">
                    <div class="p-5 space-y-3">
                        <button type="submit" name="status" value="1" 
                                class="w-full py-2 px-4 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-colors">
                            <i class="fas fa-play mr-2"></i> Kaydet ve Yayınla
                        </button>
                        <button type="submit" name="status" value="0" 
                                class="w-full py-2 px-4 bg-slate-600 hover:bg-slate-700 text-white rounded-lg transition-colors">
                            <i class="fas fa-save mr-2"></i> Taslak Olarak Kaydet
                        </button>
                        <a href="@Url.Action("Index", "Announcement")" 
                           class="w-full py-2 px-4 bg-slate-200 hover:bg-slate-300 text-slate-700 rounded-lg transition-colors text-center block">
                            <i class="fas fa-times mr-2"></i> İptal
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <!-- Summernote Rich Text Editor -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Her dil için Summernote Rich Text Editor
            $('.content-editor').each(function() {
                $(this).summernote({
                    height: 400,
                    placeholder: 'Duyuru içeriğini buraya yazın...',
                    toolbar: [
                        ['style', ['style']],
                        ['font', ['bold', 'italic', 'underline', 'clear']],
                        ['fontname', ['fontname']],
                        ['color', ['color']],
                        ['para', ['ul', 'ol', 'paragraph']],
                        ['table', ['table']],
                        ['insert', ['link', 'picture', 'video']],
                        ['view', ['fullscreen', 'codeview', 'help']]
                    ],
                    fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New', 'Helvetica', 'Impact', 'Tahoma', 'Times New Roman', 'Verdana'],
                    fontSizes: ['8', '9', '10', '11', '12', '14', '16', '18', '20', '22', '24', '28', '30', '36', '48', '64'],
                    callbacks: {
                        onImageUpload: function(files) {
                            uploadSummernoteImage(files[0]);
                        }
                    }
                });
            });

            // Görsel yükleme
            $('#coverImageInput').change(function() {
                const file = this.files[0];
                if (file) {
                    uploadImage(file);
                }
            });

            // Tarih validasyonu
            $('#PublishStart, #PublishEnd').change(function() {
                validateDates();
            });
        });

        function switchLanguageTab(languageId, tabElement) {
            // Tab'ları güncelle
            $('.language-tab').removeClass('border-purple-500 text-purple-600').addClass('border-transparent text-slate-500');
            $(tabElement).removeClass('border-transparent text-slate-500').addClass('border-purple-500 text-purple-600');

            // İçerikleri gizle/göster
            $('.language-content').addClass('hidden');
            $(`.language-content[data-language-id="${languageId}"]`).removeClass('hidden');
        }

        function uploadImage(file) {
            const formData = new FormData();
            formData.append('file', file);

            $.ajax({
                url: '@Url.Action("UploadCoverImage", "Announcement")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        $('#coverImageUrl').val(response.url);
                        $('#previewImage').attr('src', response.url);
                        $('#imageUploadArea').addClass('hidden');
                        $('#imagePreview').removeClass('hidden');
                    } else {
                        alert('Görsel yüklenirken hata oluştu: ' + response.message);
                    }
                },
                error: function() {
                    alert('Görsel yüklenirken bir hata oluştu.');
                }
            });
        }

        function removeImage() {
            $('#coverImageUrl').val('');
            $('#previewImage').attr('src', '');
            $('#imageUploadArea').removeClass('hidden');
            $('#imagePreview').addClass('hidden');
        }

        function uploadSummernoteImage(file) {
            const formData = new FormData();
            formData.append('file', file);

            $.ajax({
                url: '@Url.Action("UploadCoverImage", "Announcement")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        $('#contentEditor').summernote('insertImage', response.url);
                    } else {
                        alert('Görsel yüklenirken hata oluştu: ' + response.message);
                    }
                },
                error: function() {
                    alert('Görsel yüklenirken bir hata oluştu.');
                }
            });
        }

        function validateDates() {
            const startDate = new Date($('#PublishStart').val());
            const endDate = new Date($('#PublishEnd').val());

            if (startDate && endDate && startDate >= endDate) {
                alert('Yayın bitiş tarihi, başlangıç tarihinden sonra olmalıdır.');
                $('#PublishEnd').focus();
            }
        }
    </script>
}

@section Styles {
    <style>
        .note-editor {
            border-radius: 0.5rem !important;
        }
        .note-toolbar {
            border-top-left-radius: 0.5rem !important;
            border-top-right-radius: 0.5rem !important;
        }
        .note-editing-area {
            border-bottom-left-radius: 0.5rem !important;
            border-bottom-right-radius: 0.5rem !important;
        }
    </style>
}