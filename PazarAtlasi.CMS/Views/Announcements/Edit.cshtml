@model PazarAtlasi.CMS.Domain.Entities.Announcement

@{
    ViewData["Title"] = "Duyuru Düzenle";
}

<div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-2xl font-bold text-slate-800">Duyuru Düzenle</h1>
            <a href="@Url.Action("Index")" class="text-slate-600 hover:text-slate-900">
                <i class="fas fa-arrow-left mr-2"></i>Geri Dön
            </a>
        </div>

        <div class="bg-white rounded-xl shadow-md p-6">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                
                <div class="space-y-6">
                    <div>
                        <label asp-for="Title" class="block text-sm font-medium text-slate-700">Başlık</label>
                        <input asp-for="Title" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm" />
                        <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Content" class="block text-sm font-medium text-slate-700">İçerik</label>
                        <textarea asp-for="Content" rows="6" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm"></textarea>
                        <span asp-validation-for="Content" class="text-red-500 text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="PublishDate" class="block text-sm font-medium text-slate-700">Yayın Tarihi</label>
                        <input asp-for="PublishDate" type="datetime-local" class="mt-1 block w-full rounded-md border-slate-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 sm:text-sm" />
                        <span asp-validation-for="PublishDate" class="text-red-500 text-sm"></span>
                    </div>

                    <div class="flex items-center">
                        <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-slate-300 rounded" />
                        <label asp-for="IsActive" class="ml-2 block text-sm text-slate-700">Aktif</label>
                    </div>
                </div>

                <div class="mt-6 flex justify-end">
                    <button type="submit" class="bg-purple-600 text-white px-4 py-2 rounded-lg hover:bg-purple-700 transition-colors">
                        <i class="fas fa-save mr-2"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 