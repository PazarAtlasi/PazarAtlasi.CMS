@model PazarAtlasi.CMS.Application.Features.Products.Queries.UpdateProductCommand

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-800">@ViewData["Title"]</h1>
        <a href="@Url.Action("Index")" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition-colors duration-200">
            <i class="fas fa-arrow-left mr-2"></i>Geri Dön
        </a>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="col-span-2">
                    <label asp-for="Name" class="block text-sm font-medium text-gray-700">Ürün Adı</label>
                    <input asp-for="Name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                </div>

                <div class="col-span-2">
                    <label asp-for="Description" class="block text-sm font-medium text-gray-700">Açıklama</label>
                    <textarea asp-for="Description" rows="3" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="CategoryId" class="block text-sm font-medium text-gray-700">Kategori</label>
                    <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                        <option value="">Kategori Seçin</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="SKU" class="block text-sm font-medium text-gray-700">SKU</label>
                    <input asp-for="SKU" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="SKU" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Price" class="block text-sm font-medium text-gray-700">Fiyat</label>
                    <input asp-for="Price" type="number" step="0.01" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="Price" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="DiscountedPrice" class="block text-sm font-medium text-gray-700">İndirimli Fiyat</label>
                    <input asp-for="DiscountedPrice" type="number" step="0.01" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="DiscountedPrice" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="StockQuantity" class="block text-sm font-medium text-gray-700">Stok Miktarı</label>
                    <input asp-for="StockQuantity" type="number" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="StockQuantity" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Brand" class="block text-sm font-medium text-gray-700">Marka</label>
                    <input asp-for="Brand" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="Brand" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Model" class="block text-sm font-medium text-gray-700">Model</label>
                    <input asp-for="Model" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="Model" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Color" class="block text-sm font-medium text-gray-700">Renk</label>
                    <input asp-for="Color" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="Color" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="Material" class="block text-sm font-medium text-gray-700">Materyal</label>
                    <input asp-for="Material" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="Material" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="FrameType" class="block text-sm font-medium text-gray-700">Çerçeve Tipi</label>
                    <input asp-for="FrameType" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="FrameType" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="LensType" class="block text-sm font-medium text-gray-700">Lens Tipi</label>
                    <input asp-for="LensType" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="LensType" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="LensColor" class="block text-sm font-medium text-gray-700">Lens Rengi</label>
                    <input asp-for="LensColor" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="LensColor" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="LensMaterial" class="block text-sm font-medium text-gray-700">Lens Materyali</label>
                    <input asp-for="LensMaterial" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="LensMaterial" class="text-red-500 text-sm"></span>
                </div>

                <div>
                    <label asp-for="PrescriptionType" class="block text-sm font-medium text-gray-700">Reçete Tipi</label>
                    <input asp-for="PrescriptionType" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" />
                    <span asp-validation-for="PrescriptionType" class="text-red-500 text-sm"></span>
                </div>

                <div class="col-span-2">
                    <label class="block text-sm font-medium text-gray-700">Mevcut Görseller</label>
                    <div class="mt-2 grid grid-cols-2 md:grid-cols-4 gap-4">
                        @if (Model.Images != null)
                        {
                            @foreach (var image in Model.Images)
                            {
                                <div class="relative">
                                    <img src="@image.ImageUrl" alt="@image.AltText" class="w-full h-32 object-cover rounded-lg">
                                    <button type="button" class="absolute top-2 right-2 bg-red-500 text-white p-1 rounded-full hover:bg-red-600" onclick="deleteImage(@image.Id)">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            }
                        }
                    </div>
                </div>

                <div class="col-span-2">
                    <label class="block text-sm font-medium text-gray-700">Yeni Görseller</label>
                    <input type="file" name="images" multiple accept="image/*" class="mt-1 block w-full" />
                </div>

                <div class="col-span-2">
                    <div class="flex items-center">
                        <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                        <label asp-for="IsActive" class="ml-2 block text-sm text-gray-700">Aktif</label>
                    </div>
                </div>

                <div class="col-span-2">
                    <div class="flex items-center">
                        <input asp-for="IsFeatured" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" />
                        <label asp-for="IsFeatured" class="ml-2 block text-sm text-gray-700">Öne Çıkan</label>
                    </div>
                </div>
            </div>

            <div class="mt-6">
                <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200">
                    Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function deleteImage(imageId) {
            if (confirm('Bu görseli silmek istediğinizden emin misiniz?')) {
                $.ajax({
                    url: '@Url.Action("DeleteImage", "Products")',
                    type: 'POST',
                    data: { imageId: imageId },
                    success: function(result) {
                        if (result.success) {
                            location.reload();
                        } else {
                            alert('Görsel silinirken bir hata oluştu.');
                        }
                    },
                    error: function() {
                        alert('Görsel silinirken bir hata oluştu.');
                    }
                });
            }
        }
    </script>
} 